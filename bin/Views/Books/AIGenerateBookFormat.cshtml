@model EBookDashboard.Models.AIBookRequest
@{
    ViewData["Title"] = "AI Book Generator & Publishing Studio";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    :root {
        --primary: #7c3aed;
        --primary-light: #8b5cf6;
        --primary-dark: #6d28d9;
        --secondary: #06b6d4;
        --accent: #f59e0b;
        --success: #10b981;
        --warning: #f59e0b;
        --error: #ef4444;
        --surface: #ffffff;
        --background: #f8fafc;
        --card-bg: #ffffff;
        --text-primary: #1e293b;
        --text-secondary: #64748b;
        --text-muted: #94a3b8;
        --border: #e2e8f0;
        --border-light: #f1f5f9;
        --shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --shadow-hover: 0 20px 40px -10px rgba(0, 0, 0, 0.15), 0 4px 6px -2px rgba(0, 0, 0, 0.1);
        --radius: 16px;
        --radius-sm: 12px;
        --radius-lg: 20px;
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        --gradient-primary: linear-gradient(135deg, var(--primary), var(--secondary));
        --gradient-accent: linear-gradient(135deg, var(--accent), #ec4899);
    }

    .dark-mode {
        --primary: #8b5cf6;
        --primary-light: #a78bfa;
        --primary-dark: #7c3aed;
        --secondary: #22d3ee;
        --accent: #fbbf24;
        --surface: #1e293b;
        --background: #0f172a;
        --card-bg: #1e293b;
        --text-primary: #f1f5f9;
        --text-secondary: #cbd5e1;
        --text-muted: #94a3b8;
        --border: #334155;
        --border-light: #475569;
        --shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.2);
        --shadow-hover: 0 20px 40px -10px rgba(0, 0, 0, 0.4), 0 4px 6px -2px rgba(0, 0, 0, 0.3);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: var(--background);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        color: var(--text-primary);
        line-height: 1.6;
        transition: var(--transition);
    }

    .dashboard-container {
        max-width: 100%;
        /* padding: 20px; */
        display: grid;
    }

    /* Header */
    .dashboard-header {
        margin-bottom: 2rem;
    }

    .header-main {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .header-title {
        font-size: 2rem;
        font-weight: 800;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .user-status {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .status-free {
        background: var(--warning);
        color: white;
    }

    .status-premium {
        background: var(--success);
        color: white;
    }

    /* Tabs Navigation */
    .tabs-container {
        margin-bottom: 2rem;
    }

    .tabs-nav {
        display: flex;
        border-bottom: 2px solid var(--border);
        gap: 0;
        flex-wrap: wrap;
    }

    .tab-btn {
        padding: 1rem 2rem;
        font-weight: 600;
        cursor: pointer;
        border: none;
        background: none;
        color: var(--text-secondary);
        border-bottom: 3px solid transparent;
        transition: var(--transition);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        white-space: nowrap;
    }

        .tab-btn:hover {
            color: var(--primary);
            background: var(--background);
        }

        .tab-btn.active {
            color: var(--primary);
            border-bottom-color: var(--primary);
            background: var(--background);
        }

        .tab-btn.disabled {
            opacity: 0.6;
            cursor: not-allowed;
            color: var(--text-muted);
        }

            .tab-btn.disabled:hover {
                color: var(--text-muted);
                background: none;
            }

    /* Tab Content */
    .tab-content {
        display: none;
        animation: fadeIn 0.5s ease;
    }

        .tab-content.active {
            display: block;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Cards */
    .card {
        background: var(--card-bg);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow);
        border: 1px solid var(--border);
        overflow: hidden;
        transition: var(--transition);
        margin-bottom: 2rem;
    }

        .card:hover {
            box-shadow: var(--shadow-hover);
            transform: translateY(-2px);
        }

    .card-header {
        padding: 1.5rem 2rem;
        border-bottom: 1px solid var(--border);
        background: var(--background);
    }

    .card-body {
        padding: 2rem;
    }

    /* Forms */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-control {
        width: 100%;
        padding: 1rem 1.25rem;
        border: 2px solid var(--border);
        border-radius: var(--radius-sm);
        font-size: 1rem;
        transition: var(--transition);
        background: var(--surface);
        color: var(--text-primary);
    }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(124, 58, 237, 0.1);
        }

        .form-control:disabled {
            background: var(--background);
            color: var(--text-muted);
            cursor: not-allowed;
        }

    /* Ghostwriting Specific Styles */
    .ghostwriting-textarea {
        transition: var(--transition);
        font-size: 1rem;
    }

        .ghostwriting-textarea:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(124, 58, 237, 0.1);
        }

    .ghostwriting-generate-btn {
        position: relative;
        overflow: hidden;
    }

        .ghostwriting-generate-btn:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(124, 58, 237, 0.4);
        }

        .ghostwriting-generate-btn:active:not(:disabled) {
            transform: translateY(0);
        }

    .ghostwriting-loader {
        margin: 2rem 0;
        animation: fadeIn 0.3s ease;
    }

    .ghostwriting-result {
        animation: fadeIn 0.5s ease;
        margin-top: 2rem;
    }

    .result-content {
        transition: var(--transition);
    }

        .result-content:hover {
            border-color: var(--primary);
        }

    .btn-outline-secondary {
        background: transparent;
        border: 2px solid var(--border);
        color: var(--text-secondary);
    }

        .btn-outline-secondary:hover {
            border-color: var(--primary);
            color: var(--primary);
            background: var(--background);
        }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    /* Buttons */
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 1rem 1.75rem;
        border: none;
        border-radius: var(--radius-sm);
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        text-decoration: none;
    }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none !important;
        }

    .btn-primary {
        background: var(--gradient-primary);
        color: white;
        box-shadow: 0 4px 15px rgba(124, 58, 237, 0.3);
    }

        .btn-primary:hover:not(:disabled) {
            box-shadow: 0 8px 25px rgba(124, 58, 237, 0.4);
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: var(--surface);
        color: var(--text-primary);
        border: 2px solid var(--border);
    }

        .btn-secondary:hover:not(:disabled) {
            border-color: var(--primary);
            transform: translateY(-2px);
        }

    .btn-success {
        background: var(--success);
        color: white;
    }

    .btn-group {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    /* Chat Container */
    .chat-container {
        background: var(--card-bg);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow);
        border: 1px solid var(--border);
        padding: 1.5rem;
        max-height: 500px;
        overflow-y: auto;
    }

    .message {
        display: flex;
        margin-bottom: 1.5rem;
        animation: slideIn 0.3s ease-out;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .message-ai {
        justify-content: flex-start;
    }

    .message-user {
        justify-content: flex-end;
    }

    .message-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        margin: 0 0.75rem;
        flex-shrink: 0;
    }

    .message-ai .message-avatar {
        background: var(--gradient-primary);
        color: white;
    }

    .message-user .message-avatar {
        background: var(--gradient-accent);
        color: white;
    }

    .message-content {
        max-width: 70%;
        padding: 1rem 1.25rem;
        border-radius: var(--radius);
        background: var(--surface);
        border: 1px solid var(--border-light);
    }

    .message-user .message-content {
        background: var(--gradient-primary);
        color: white;
    }

    /* Editor */
    .editor-container {
        background: var(--card-bg);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow);
        border: 1px solid var(--border);
        margin-bottom: 2rem;
    }

    .editor-toolbar {
        display: flex;
        gap: 0.5rem;
        padding: 1rem;
        background: var(--background);
        border-bottom: 1px solid var(--border);
        flex-wrap: wrap;
    }

    .toolbar-btn {
        padding: 0.5rem 1rem;
        border: 1px solid var(--border);
        background: var(--surface);
        border-radius: var(--radius-sm);
        cursor: pointer;
        transition: var(--transition);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .toolbar-btn:hover:not(:disabled) {
            background: var(--primary);
            color: white;
        }

        .toolbar-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

    .editor-content {
        min-height: 400px;
        padding: 2rem;
        background: var(--surface);
    }

        .editor-content.readonly {
            background: var(--background);
            color: var(--text-muted);
        }

    /* Formatting Options */
    .formatting-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .format-option {
        padding: 1.5rem;
        border: 2px solid var(--border);
        border-radius: var(--radius);
        background: var(--surface);
        transition: var(--transition);
    }

        .format-option.disabled {
            opacity: 0.6;
            position: relative;
        }

            .format-option.disabled::after {
                content: '🔒 Premium Feature';
                position: absolute;
                top: 0.5rem;
                right: 0.5rem;
                background: var(--warning);
                color: white;
                padding: 0.25rem 0.5rem;
                border-radius: 10px;
                font-size: 0.75rem;
                font-weight: 600;
            }

        .format-option:hover:not(.disabled) {
            border-color: var(--primary);
            transform: translateY(-2px);
        }

    /* Payment Overlay */
    .payment-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.8);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: var(--radius-lg);
        z-index: 10;
    }

    .payment-content {
        background: var(--card-bg);
        padding: 2rem;
        border-radius: var(--radius);
        text-align: center;
        max-width: 400px;
    }

    /* Theme Toggle */
    .theme-toggle {
        background: none;
        border: none;
        color: var(--text-primary);
        font-size: 1.25rem;
        cursor: pointer;
        transition: var(--transition);
    }

        .theme-toggle:hover {
            color: var(--primary);
        }

    /* Notifications */
    .notification {
        position: fixed;
        top: 2rem;
        right: 2rem;
        padding: 1rem 1.25rem;
        border-radius: var(--radius-sm);
        box-shadow: var(--shadow);
        z-index: 1000;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        max-width: 400px;
        transform: translateX(120%);
        transition: transform 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        background: var(--surface);
        border-left: 4px solid var(--primary);
    }

        .notification.show {
            transform: translateX(0);
        }

    .notification-success {
        border-left-color: var(--success);
    }

    .notification-error {
        border-left-color: var(--error);
    }

    .notification-warning {
        border-left-color: var(--warning);
    }

    /* Responsive Design */
    @@media (max-width: 1024px) {
        .form-row {
            grid-template-columns: 1fr;
        }

        .formatting-grid {
            grid-template-columns: 1fr;
        }

        .tabs-nav {
            overflow-x: auto;
        }

        .tab-btn {
            padding: 1rem 1.5rem;
            font-size: 0.9rem;
        }
    }

    @@media (max-width: 768px) {
        .dashboard-container {
            padding: 1rem;
        }

        .header-title {
            font-size: 1.5rem;
        }

        .header-main {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }

        .user-status {
            width: 100%;
            justify-content: space-between;
        }

        .btn-group {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }

        .card-body {
            padding: 1.5rem;
        }

        .message-content {
            max-width: 85%;
        }
    }

    /* Loading Animation */
    .loading-spinner {
        display: inline-block;
        width: 20px;
        height: 20px;
        border: 3px solid rgba(255,255,255,0.3);
        border-radius: 50%;
        border-top-color: white;
        animation: spin 1s ease-in-out infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* Typing Indicator */
    .typing-indicator {
        display: flex;
        gap: 4px;
        padding: 8px 0;
    }

    .typing-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: var(--text-muted);
        animation: typing 1.4s infinite ease-in-out;
    }

        .typing-dot:nth-child(1) {
            animation-delay: -0.32s;
        }

        .typing-dot:nth-child(2) {
            animation-delay: -0.16s;
        }

    @@keyframes typing {
        0%, 80%, 100% {
            transform: scale(0.8);
            opacity: 0.5;
        }

        40% {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>

<div class="container">
    <div class="dashboard-container">
        <!-- Header -->
        <div class="dashboard-header">
            <div class="header-main">
                <h1 class="header-title">AI Book Generator & Publishing Studio</h1>
                <div class="user-status">
                    <div class="status-badge status-free" id="userStatus">Free User</div>
                    <button class="btn btn-secondary" onclick="showPricingPlans()">
                        <i class="bi bi-gem"></i> Upgrade to Premium
                    </button>
                    <button class="btn btn-secondary" onclick="showPlanFeaturesModal()">
                        <i class="bi bi-stars"></i> Explore Features
                    </button>
                    @* <button class="theme-toggle" id="themeToggle">
                    <i class="bi bi-moon"></i>
                </button> *@
                </div>
            </div>
            <p class="header-subtitle">Create professional ebooks with AI - Upgrade to unlock full formatting and publishing features</p>
        </div>

        <!-- Tabs Navigation -->
        <div class="tabs-container">
            <div class="tabs-nav">
                <button class="tab-btn active" data-tab="ai-generator">
                    <i class="bi bi-robot"></i> AI Book Generator
                </button>
                <button class="tab-btn" data-tab="ghostwriting">
                    <i class="bi bi-magic"></i> Ghostwriting
                </button>
                <button class="tab-btn disabled" data-tab="editor" id="editorTab">
                    <i class="bi bi-pencil"></i> Advanced Editor 🔒
                </button>
                <button class="tab-btn disabled" data-tab="typography" id="typographyTab">
                    <i class="bi bi-fonts"></i> Typography 🔒
                </button>
                <button class="tab-btn disabled" data-tab="formatting" id="formattingTab">
                    <i class="bi bi-brush"></i> Formatting 🔒
                </button>
                <button class="tab-btn disabled" data-tab="layout" id="layoutTab">
                    <i class="bi bi-layout-split"></i> Layout 🔒
                </button>
                <button class="tab-btn disabled" data-tab="export" id="exportTab">
                    <i class="bi bi-download"></i> Export & Publish 🔒
                </button>
            </div>
        </div>

        <!-- Tab Contents -->
        <!-- AI Generator Tab -->
        <div id="ai-generator" class="tab-content active">
            <div class="card">
                <div class="card-header">
                    <h3>Generate Your Book with AI</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label class="form-label">Load Previous Book</label>
                        <select id="savedResponsesDropdown" class="form-control" onchange="loadSelectedResponse(this.value)">
                            <option value="">📚 Load a previously generated book...</option>
                        </select>
                    </div>
                    <input type="hidden" id="userId2" value="" />
                    <input type="hidden" id="bookId2" value="" />
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label" for="UserId">User ID</label>
                            <input type="text" id="UserId" class="form-control" value="@ViewBag.UserId">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="BookId">Book ID</label>
                            <input type="text" id="BookId" class="form-control" value="456">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label" for="Chapter">Number of Chapters</label>
                            <input type="number" id="Chapter" class="form-control" value="5" min="1" max="50">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="UserInput">Book Topic</label>
                            <input type="text" id="UserInput" class="form-control" value="The future of artificial intelligence" placeholder="What would you like to write about?">
                        </div>
                    </div>

                    <div class="btn-group">
                        <button class="btn btn-primary" onclick="generateBook()">
                            <i class="bi bi-lightning"></i> Generate Book
                        </button>
                        <button id="showBookBtn" class="btn btn-secondary" onclick="showSelectedBook()">
                            <i class="bi bi-book"></i> Show Book
                        </button>
                        <button class="btn btn-success" onclick="saveBook()">
                            <i class="bi bi-save"></i> Save Book
                        </button>
                        <button class="btn btn-outline-primary btn-sm me-2" type="button"
                                onclick="changeChapter('${chapterId}', '${chapterNumber}')">
                            Change
                        </button>
                        <button class="btn btn-outline-success btn-sm" type="button"
                                onclick="finalizeChapter('${chapterId}', '${chapterNumber}')">
                            Finalize
                        </button>
                    </div>

                    <input type="hidden" id="APIRawResponse">
                </div>
            </div>

            <!-- Chat Results -->
            <div class="chat-container" id="chatContainer">
                <div class="message message-ai">
                    <div class="message-avatar">AI</div>
                    <div class="message-content">
                        Hello! I'm ready to help you create an amazing book. Just enter your topic above and click "Generate Book" to get started.
                    </div>
                </div>
            </div>
        </div>

        <!-- Ghostwriting Tab -->
        <div id="ghostwriting" class="tab-content">
            <div class="card">
                <div class="card-header">
                    <h3><i class="bi bi-magic"></i> AI Ghostwriting Assistant</h3>
                    <p style="margin: 0.5rem 0 0 0; color: var(--text-secondary); font-size: 0.9rem;">
                        Enter your writing prompts and let AI create professional content for you
                    </p>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label class="form-label" for="ghostwritingPrompt">
                            <i class="bi bi-pencil-square"></i> Writing Prompt
                        </label>
                        <textarea 
                            id="ghostwritingPrompt" 
                            class="form-control ghostwriting-textarea" 
                            rows="8" 
                            placeholder="Enter your writing prompt here... For example: 'Write a compelling introduction for a book about artificial intelligence and its impact on modern society.'"
                            style="resize: vertical; min-height: 200px; font-family: inherit; line-height: 1.6;"></textarea>
                        <small class="form-text text-muted" style="display: block; margin-top: 0.5rem; color: var(--text-muted);">
                            <i class="bi bi-info-circle"></i> Be specific about what you want to generate. The more details you provide, the better the results.
                        </small>
                    </div>

                    <div class="form-group text-center" style="margin-top: 2rem;">
                        <button 
                            type="button" 
                            class="btn btn-primary btn-lg ghostwriting-generate-btn" 
                            id="ghostwritingGenerateBtn"
                            onclick="generateGhostwriting()"
                            style="padding: 1rem 3rem; font-size: 1.1rem; font-weight: 600; border-radius: var(--radius-sm); box-shadow: 0 4px 15px rgba(124, 58, 237, 0.3); transition: var(--transition);">
                            <i class="bi bi-magic"></i> Generate Content
                        </button>
                    </div>

                    <!-- Loader/Spinner -->
                    <div id="ghostwritingLoader" class="ghostwriting-loader" style="display: none;">
                        <div class="loader-container" style="text-align: center; padding: 3rem 2rem;">
                            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem; border-width: 0.3rem;">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="loader-text" style="margin-top: 1.5rem; color: var(--text-secondary); font-weight: 500;">
                                <i class="bi bi-hourglass-split"></i> Generating your content... This may take a few moments.
                            </p>
                        </div>
                    </div>


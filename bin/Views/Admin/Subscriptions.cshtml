@{
    ViewData["Title"] = "Subscription Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Advanced Grid System & Outstanding UI -->

    <!-- External Libraries -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">


    <style>
     
        /* CSS Grid System Variables */
        :root {
            --grid-gap: 25px;
            --card-radius: 25px;
            --transition-slow: 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            --transition-fast: 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            --shadow-light: 0 10px 30px rgba(0, 0, 0, 0.1);
            --shadow-medium: 0 20px 40px rgba(0, 0, 0, 0.15);
            --shadow-heavy: 0 25px 50px rgba(0, 0, 0, 0.2);
            --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --gradient-success: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            --gradient-warning: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
            --gradient-danger: linear-gradient(135deg, #dc3545 0%, #e83e8c 100%);
        }

        /* Advanced Grid Layout */
        .subscription-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: var(--grid-gap);
            margin-bottom: 40px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: var(--grid-gap);
            margin-bottom: 40px;
        }

        .plans-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: var(--grid-gap);
            margin-bottom: 40px;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 15px;
            margin: 20px 0;
        }

        /* Outstanding Header with Parallax Effect */
        .subscription-header {
            background: var(--gradient-primary);
            border-radius: var(--card-radius);
            padding: 40px;
            color: white;
            margin-bottom: 40px;
            box-shadow: var(--shadow-heavy);
            position: relative;
            overflow: hidden;
            animation: slideInDown 0.8s ease-out;
            min-height: 200px;
            display: flex;
            align-items: center;
        }

            .subscription-header::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: radial-gradient(circle at 20% 80%, rgba(255,255,255,0.1) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255,255,255,0.1) 0%, transparent 50%), radial-gradient(circle at 40% 40%, rgba(255,255,255,0.05) 0%, transparent 50%);
                animation: float 6s ease-in-out infinite;
            }

        .header-content {
            position: relative;
            z-index: 2;
            width: 100%;
        }

        .header-actions {
            display: flex;
            grid-template-columns: auto auto;
            gap: 15px;
            align-items: center;
            justify-content: end;
        }

        /* Enhanced Stats Cards with Grid Layout */
        .stats-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: var(--card-radius);
            padding: 30px;
            box-shadow: var(--shadow-light);
            transition: var(--transition-slow);
            position: relative;
            overflow: hidden;
            animation: fadeInUp 0.6s ease-out;
            display: grid;
            grid-template-rows: auto 1fr auto;
            gap: 15px;
            height: 100%;
            border: 1px solid rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
        }

            .stats-card::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 4px;
                background: var(--gradient-primary);
                transform: scaleX(0);
                transform-origin: left;
                transition: transform var(--transition-slow);
            }

            .stats-card:hover {
                transform: translateY(-10px) scale(1.02);
                box-shadow: var(--shadow-medium);
            }

                .stats-card:hover::before {
                    transform: scaleX(1);
                }

        .stats-icon {
            font-size: 2.5rem;
            margin-bottom: 15px;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: inline-block;
            animation: bounce 3s infinite;
        }

        .stats-value {
            font-size: 2.8rem;
            font-weight: 800;
            margin-bottom: 5px;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            line-height: 1;
        }

        .stats-label {
            font-size: 1rem;
            color: #6c757d;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .stats-trend {
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 0.9rem;
            font-weight: 600;
            margin-top: 10px;
        }

        .trend-up {
            color: #28a745;
        }

        .trend-down {
            color: #dc3545;
        }

        /* Outstanding Plan Cards with Grid Layout */
        .plan-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: var(--card-radius);
            overflow: hidden;
            transition: var(--transition-slow);
            box-shadow: var(--shadow-light);
            position: relative;
            animation: fadeInUp 0.6s ease-out;
            display: grid;
            grid-template-rows: auto 1fr auto;
            height: 100%;
            border: 3px solid transparent;
            backdrop-filter: blur(10px);
        }

            .plan-card:hover {
                transform: translateY(-15px) scale(1.03);
                box-shadow: var(--shadow-heavy);
            }

            .plan-card.basic {
                border-color: #667eea;
            }

            .plan-card.professional {
                border-color: #28a745;
            }

            .plan-card.premium {
                border-color: #17a2b8;
            }

            .plan-card.enterprise {
                border-color: #6f42c1;
            }

        .plan-header {
            padding: 30px;
            text-align: center;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .plan-card.basic .plan-header {
            background: var(--gradient-primary);
        }

        .plan-card.professional .plan-header {
            background: var(--gradient-success);
        }

        .plan-card.premium .plan-header {
            background: linear-gradient(135deg, #17a2b8 0%, #6f42c1 100%);
        }

        .plan-card.enterprise .plan-header {
            background: var(--gradient-danger);
        }

        .plan-body {
            padding: 30px;
            background: white;
            display: grid;
            grid-template-rows: auto 1fr auto;
            gap: 20px;
        }

        .plan-price-section {
            text-align: center;
            padding: 20px 0;
        }

        .plan-price {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 5px;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            line-height: 1;
        }

        .plan-period {
            color: #6c757d;
            font-size: 1rem;
            font-weight: 600;
        }

        .popular-badge {
            position: absolute;
            top: 20px;
            right: -30px;
            background: var(--gradient-warning);
            color: white;
            padding: 8px 40px;
            font-size: 0.8rem;
            font-weight: 700;
            transform: rotate(45deg);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
            animation: pulse 2s infinite;
        }

        /* Enhanced Features Grid */
        .plan-features {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .plan-features li {
                padding: 12px 0;
                border-bottom: 1px solid #f0f0f0;
                display: grid;
                grid-template-columns: 20px 1fr;
                gap: 12px;
                align-items: start;
                font-weight: 500;
                transition: var(--transition-fast);
            }

                .plan-features li:hover {
                    background: rgba(102, 126, 234, 0.05);
                    padding-left: 10px;
                    border-radius: 8px;
                }

                .plan-features li:last-child {
                    border-bottom: none;
                }

        .feature-icon {
            font-size: 0.9rem;
            margin-top: 2px;
        }

        .feature-included {
            color: #28a745;
        }

        .feature-excluded {
            color: #dc3545;
        }

        .feature-limited {
            color: #ffc107;
        }

        /* Outstanding Action Grid */
        .plan-actions {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
            margin-top: 20px;
        }

        /* Enhanced Tables with Grid Layout */
        .table-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: var(--card-radius);
            overflow: hidden;
            box-shadow: var(--shadow-light);
            margin-bottom: 30px;
            animation: fadeInUp 0.6s ease-out;
            backdrop-filter: blur(10px);
        }

        .table-responsive {
            border-radius: var(--card-radius);
            overflow: hidden;
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
            background: white;
        }

            .data-table thead th {
                background: var(--gradient-primary);
                color: white;
                border: none;
                font-weight: 600;
                padding: 20px 15px;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                font-size: 0.9rem;
                position: relative;
            }

                .data-table thead th::after {
                    content: "";
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 100%;
                    height: 2px;
                    background: rgba(255, 255, 255, 0.3);
                }

            .data-table tbody td {
                padding: 18px 15px;
                vertical-align: middle;
                border-bottom: 1px solid #e9ecef;
                transition: var(--transition-fast);
                font-weight: 500;
            }

            .data-table tbody tr {
                transition: var(--transition-fast);
            }

                .data-table tbody tr:hover {
                    background-color: rgba(102, 126, 234, 0.05);
                    transform: scale(1.01);
                }

        /* Action Buttons Grid */
        .action-buttons {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(40px, 1fr));
            gap: 8px;
        }

        /* Enhanced Tabs with Grid */
        .subscription-tabs {
            background: rgba(255, 255, 255, 0.95);
            border-radius: var(--card-radius);
            box-shadow: var(--shadow-light);
            margin-bottom: 40px;
            overflow: hidden;
            animation: fadeInUp 0.6s ease-out;
            backdrop-filter: blur(10px);
        }

        .nav-tabs-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 0;
            background: rgba(248, 249, 250, 0.8);
            padding: 0;
        }

            .nav-tabs-grid .nav-item {
                text-align: center;
            }

            .nav-tabs-grid .nav-link {
                border: none;
                padding: 20px;
                font-weight: 600;
                color: #666;
                border-radius: 0;
                position: relative;
                transition: var(--transition-fast);
                font-size: 1rem;
                background: transparent;
            }

                .nav-tabs-grid .nav-link:hover {
                    color: #667eea;
                    background: rgba(102, 126, 234, 0.05);
                }

                .nav-tabs-grid .nav-link.active {
                    color: #667eea;
                    background: white;
                    font-weight: 700;
                }

                    .nav-tabs-grid .nav-link.active::after {
                        content: "";
                        position: absolute;
                        bottom: 0;
                        left: 0;
                        width: 100%;
                        height: 3px;
                        background: var(--gradient-primary);
                    }

        .tab-content {
            padding: 30px;
        }

        /* Outstanding Badges */
        .status-badge {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            transition: var(--transition-fast);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        }

            .status-badge:hover {
                transform: scale(1.05);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.12);
            }

        .badge-active {
            background: rgba(40, 167, 69, 0.15);
            color: #28a745;
        }

        .badge-pending {
            background: rgba(255, 193, 7, 0.15);
            color: #ffc107;
        }

        .badge-expired {
            background: rgba(220, 53, 69, 0.15);
            color: #dc3545;
        }

        .badge-cancelled {
            background: rgba(108, 117, 125, 0.15);
            color: #6c757d;
        }

        /* Outstanding Buttons */
        .btn-outstanding {
            padding: 12px 25px;
            border: none;
            border-radius: 15px;
            font-weight: 600;
            transition: var(--transition-slow);
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            position: relative;
            overflow: hidden;
        }

            .btn-outstanding::before {
                content: "";
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
                transition: left 0.5s;
            }

            .btn-outstanding:hover::before {
                left: 100%;
            }

        .btn-outstanding-primary {
            background: var(--gradient-primary);
            color: white;
        }

            .btn-outstanding-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 30px rgba(102, 126, 234, 0.4);
            }

        .btn-outstanding-success {
            background: var(--gradient-success);
            color: white;
        }

            .btn-outstanding-success:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 30px rgba(40, 167, 69, 0.4);
            }

        .btn-outstanding-outline {
            background: transparent;
            border: 2px solid #667eea;
            color: #667eea;
        }

            .btn-outstanding-outline:hover {
                background: #667eea;
                color: white;
                transform: translateY(-3px);
                box-shadow: 0 12px 30px rgba(102, 126, 234, 0.3);
            }

        /* Outstanding Modal */
        .modal-outstanding .modal-content {
            border: none;
            border-radius: var(--card-radius);
            overflow: hidden;
            box-shadow: var(--shadow-heavy);
            animation: modalSlideIn 0.4s ease-out;
            backdrop-filter: blur(10px);
        }

        .modal-outstanding .modal-header {
            background: var(--gradient-primary);
            color: white;
            border: none;
            padding: 25px 30px;
        }

        .modal-outstanding .modal-body {
            padding: 30px;
        }

        .modal-outstanding .modal-footer {
            padding: 25px 30px;
            border: none;
            background: #f8f9fa;
        }

        /* Form Grid */
        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }

        /* Outstanding Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes slideInDown {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes float {
            0% {
                transform: translateY(0px) rotate(0deg);
            }

            50% {
                transform: translateY(-10px) rotate(1deg);
            }

            100% {
                transform: translateY(0px) rotate(0deg);
            }
        }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }

            40% {
                transform: translateY(-10px);
            }

            60% {
                transform: translateY(-5px);
            }
        }

        @@keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(255, 193, 7, 0.4);
            }

            70% {
                box-shadow: 0 0 0 15px rgba(255, 193, 7, 0);
            }

            100% {
                box-shadow: 0 0 0 0 rgba(255, 193, 7, 0);
            }
        }

        @@keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: translateY(-50px) scale(0.9);
            }

            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        /* Responsive Grid System */
        @@media (max-width: 1200px) {
            .plans-grid {
                grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            }

            .subscription-grid {
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            }
        }

        @@media (max-width: 992px) {
            .plans-grid {
                grid-template-columns: 1fr;
            }

            .nav-tabs-grid {
                grid-template-columns: 1fr;
            }

            .header-actions {
                grid-template-columns: 1fr;
                justify-content: stretch;
                margin-top: 20px;
            }

            .plan-actions {
                grid-template-columns: 1fr;
            }
        }

        @@media (max-width: 768px) {
            .subscription-header {
                padding: 30px 20px;
                text-align: center;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }

            .form-grid {
                grid-template-columns: 1fr;
            }

            .action-buttons {
                grid-template-columns: 1fr 1fr;
            }
        }

        @@media (max-width: 576px) {
            .subscription-header {
                padding: 25px 15px;
            }

            .stats-card, .plan-card {
                padding: 20px;
            }

            .plan-price {
                font-size: 2.5rem;
            }

            .tab-content {
                padding: 20px;
            }
        }

        /* Dark mode support */
        @@media (prefers-color-scheme: dark) {
            .stats-card,
            .plan-card,
            .table-container,
            .subscription-tabs {
                background: rgba(45, 45, 45, 0.95);
                color: white;
            }

            .plan-body {
                background: #2d2d2d;
                color: white;
            }

            .data-table {
                background: #2d2d2d;
                color: white;
            }

                .data-table tbody td {
                    border-bottom: 1px solid #444;
                }
        }
   

        /* Base Styles & CSS Variables */
        :root {
            /* Light Theme */
            --primary: #7c3aed;
            --primary-light: #8b5cf6;
            --primary-dark: #6d28d9;
            --secondary: #f59e0b;
            --success: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
            --info: #3b82f6;
            --bg-primary: #ffffff;
            --bg-secondary: #f8fafc;
            --bg-tertiary: #f1f5f9;
            --text-primary: #1e293b;
            --text-secondary: #475569;
            --text-muted: #64748b;
            --border-light: #e2e8f0;
            --border-medium: #cbd5e1;
            --sidebar-bg: #ffffff;
            --sidebar-text: #1e293b;
            --sidebar-hover: #f1f5f9;
            --card-bg: #ffffff;
            --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            --border-radius: 12px;
            --sidebar-width: 280px;
            --sidebar-collapsed: 80px;
            --header-height: 70px;
        }

        [data-theme="dark"] {
            /* Dark Theme */
            --primary: #8b5cf6;
            --primary-light: #a78bfa;
            --primary-dark: #7c3aed;
            --secondary: #f59e0b;
            --success: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
            --info: #3b82f6;
            --bg-primary: #0f172a;
            --bg-secondary: #1e293b;
            --bg-tertiary: #334155;
            --text-primary: #f1f5f9;
            --text-secondary: #cbd5e1;
            --text-muted: #94a3b8;
            --border-light: #334155;
            --border-medium: #475569;
            --sidebar-bg: #1e293b;
            --sidebar-text: #f1f5f9;
            --sidebar-hover: #334155;
            --card-bg: #1e293b;
            --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        html {
            overflow-y: scroll;
            scroll-behavior: smooth;
        }

        body {
            background: var(--bg-primary);
            color: var(--text-primary);
            line-height: 1.6;
            min-height: 100vh;
            transition: var(--transition);
        }

        /* Admin Layout */
        .admin-container {
            display: flex;
            min-height: 100vh;
            position: relative;
        }

        /* Modern Sidebar */
        .admin-sidebar {
            width: var(--sidebar-width);
            background: var(--sidebar-bg);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
            transition: var(--transition);
            box-shadow: var(--card-shadow);
            display: flex;
            flex-direction: column;
            border-right: 1px solid var(--border-light);
        }

        .sidebar-header {
            padding: 24px 20px;
            border-bottom: 1px solid var(--border-light);
            text-align: center;
            position: relative;
        }

        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            transition: var(--transition);
        }

            .logo i {
                font-size: 28px;
                color: var(--primary);
                transition: var(--transition);
            }

            .logo h2 {
                font-size: 22px;
                font-weight: 700;
                color: var(--text-primary);
                transition: var(--transition);
            }

        .logo-text {
            opacity: 1;
            transition: var(--transition);
        }

        /* User Profile */
        .user-profile {
            padding: 20px;
            border-bottom: 1px solid var(--border-light);
            text-align: center;
            transition: var(--transition);
        }

        .user-avatar {
            width: 64px;
            height: 64px;
            border-radius: 16px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 12px;
            font-size: 22px;
            color: white;

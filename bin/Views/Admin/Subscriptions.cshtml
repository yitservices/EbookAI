        // Function to create new plan
        function createNewPlan() {
            const planName = document.getElementById('planName').value;
            const planPrice = document.getElementById('planPrice').value;

            if (!planName || !planPrice) {
                Swal.fire({
                    title: 'Missing Information',
                    text: 'Please fill in all required fields.',
                    icon: 'warning',
                    confirmButtonColor: '#667eea',
                    background: 'rgba(255, 255, 255, 0.95)',
                    backdrop: 'rgba(102, 126, 234, 0.2)'
                });
                return;
            }

            // Show loading state
            const saveBtn = document.getElementById('savePlanBtn');
            const originalText = saveBtn.innerHTML;
            saveBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span> Creating...';
            saveBtn.disabled = true;

            // Simulate API call
            setTimeout(() => {
                // Close modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('addPlanModal'));
                modal.hide();

                // Show success message
                Swal.fire({
                    title: 'Plan Created!',
                    text: `The "${planName}" plan has been created successfully.`,
                    icon: 'success',
                    confirmButtonColor: '#667eea',
                    background: 'rgba(255, 255, 255, 0.95)',
                    backdrop: 'rgba(102, 126, 234, 0.2)',
                    timer: 3000,
                    timerProgressBar: true
                });

                // Reset form and button
                saveBtn.innerHTML = originalText;
                saveBtn.disabled = false;
                document.getElementById('addPlanForm').reset();
            }, 1500);
        }


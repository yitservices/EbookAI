        <p class="management-desc">Oversee books, chapters, and publications</p>
        <a href="@Url.Action("Index", "Books")" class="management-btn">Manage Content</a>
    </div>
    
    <div class="management-card">
        <div class="management-icon analytics">
            <i class="fas fa-chart-bar"></i>
        </div>
        <h3 class="management-title">Analytics</h3>
        <p class="management-desc">View detailed reports and insights</p>
        <button class="management-btn" onclick="showAnalytics()">View Analytics</button>
    </div>
    
    <div class="management-card">
        <div class="management-icon payment">
            <i class="fas fa-credit-card"></i>
        </div>
        <h3 class="management-title">Payment Management</h3>
        <p class="management-desc">Manage user subscriptions and payments</p>
        <button class="management-btn" onclick="showPayments()">Manage Payments</button>
    </div>
    
    <div class="management-card">
        <div class="management-icon settings">

@{
    ViewData["Title"] = "AI Book Cover Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --white: #FFFFFF;
        --light-gray: #F5F5F5;
        --cream-bg: #FAF8F3;
        --cream-accent: #E8DCC6;
        --text-primary: #2C2C2C;
        --text-secondary: #6B6B6B;
        --border-light: #E5E5E5;
        --primary: #8B7355;
        --success: #10b981;
        --danger: #ef4444;
    }

    .aicover-container {
        padding: 0;
    }

    .page-header {
        background: var(--white);
        border-radius: 16px;
        padding: 24px;
        margin-bottom: 24px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--border-light);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 24px;
    }

    .stat-card {
        background: var(--white);
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--border-light);
    }

    .stat-value {
        font-size: 32px;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 8px;
    }

    .stat-label {
        font-size: 14px;
        color: var(--text-secondary);
    }

    .section-card {
        background: var(--white);
        border-radius: 16px;
        padding: 24px;
        margin-bottom: 24px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--border-light);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-weight: 500;
        color: var(--text-primary);
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid var(--border-light);
        border-radius: 10px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(139, 115, 85, 0.1);
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 10px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 14px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary {
        background: var(--primary);
        color: white;
    }

    .btn-primary:hover {
        background: var(--primary-dark);
        transform: translateY(-2px);
    }

    .table-container {
        overflow-x: auto;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid var(--border-light);
    }

    th {
        font-weight: 600;
        color: var(--text-primary);
        background: var(--light-gray);
    }
</style>

<div class="aicover-container">
    <div class="page-header">
        <h1 style="font-size: 24px; font-weight: 700; color: var(--text-primary); margin-bottom: 4px;">AI Book Cover Management</h1>
        <p style="color: var(--text-secondary);">Monitor AI cover generation, set pricing, and manage prompts</p>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-value">1,234</div>
            <div class="stat-label">Total Covers Generated</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">89</div>
            <div class="stat-label">Covers Today</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">$2.99</div>
            <div class="stat-label">Current Price per Cover</div>
        </div>
        <div class="stat-card">
            <div class="stat-value">12</div>
            <div class="stat-label">Flagged for Review</div>
        </div>
    </div>

    <div class="section-card">
        <h3 style="font-size: 18px; font-weight: 600; color: var(--text-primary); margin-bottom: 20px;">Pricing & Limits</h3>
        <form id="pricingForm">
            <div class="form-group">
                <label class="form-label">Price per Cover ($)</label>
                <input type="number" class="form-control" id="coverPrice" value="2.99" step="0.01" />
            </div>
            <div class="form-group">
                <label class="form-label">Daily Generation Limit</label>
                <input type="number" class="form-control" id="dailyLimit" value="100" />
            </div>
            <div class="form-group">
                <label class="form-label">Monthly Generation Limit</label>
                <input type="number" class="form-control" id="monthlyLimit" value="2000" />
            </div>
            <button type="button" class="btn btn-primary" onclick="savePricing()">
                <i class="fas fa-save"></i> Save Settings
            </button>
        </form>
    </div>

    <div class="section-card">
        <h3 style="font-size: 18px; font-weight: 600; color: var(--text-primary); margin-bottom: 20px;">Default Prompts</h3>
        <div class="form-group">
            <label class="form-label">Default Cover Prompt</label>
            <textarea class="form-control" id="defaultPrompt" rows="4" placeholder="Enter default AI prompt for cover generation"></textarea>
        </div>
        <button type="button" class="btn btn-primary" onclick="savePrompt()">
            <i class="fas fa-save"></i> Save Prompt
        </button>
    </div>

    <div class="section-card">
        <h3 style="font-size: 18px; font-weight: 600; color: var(--text-primary); margin-bottom: 20px;">Recent Cover Generations</h3>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Cover ID</th>
                        <th>User</th>
                        <th>Book Title</th>
                        <th>Prompt Used</th>
                        <th>Status</th>
                        <th>Generated</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>#1234</td>
                        <td>John Doe</td>
                        <td>The Adventure</td>
                        <td>Fantasy book cover...</td>
                        <td><span style="color: var(--success);">âœ“ Approved</span></td>
                        <td>2 hours ago</td>
                        <td>
                            <button class="btn" style="padding: 6px 12px; font-size: 12px;" onclick="viewCover(1234)">View</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function savePricing() {
        Swal.fire({
            title: 'Saving Settings...',
            text: 'Please wait',
            icon: 'info',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

        setTimeout(() => {
            Swal.fire('Success!', 'Pricing settings saved successfully.', 'success');
        }, 1500);
    }

    function savePrompt() {
        Swal.fire({
            title: 'Saving Prompt...',
            text: 'Please wait',
            icon: 'info',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

        setTimeout(() => {
            Swal.fire('Success!', 'Prompt saved successfully.', 'success');
        }, 1500);
    }

    function viewCover(id) {
        Swal.fire({
            title: 'Cover Details',
            html: `Cover ID: ${id}<br>View cover details and moderation options.`,
            showConfirmButton: true,
            confirmButtonText: 'Close'
        });
    }
</script>


@{
    ViewData["Title"] = "Plan Confirmation - eBook Publisher";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="plan-confirmation-header">
    <h1>Plan Confirmed</h1>
    <p>Your plan has been successfully confirmed</p>
</div>

<div class="plan-summary-card">
    <div class="plan-header">
        <h2><i class="fas fa-crown"></i> Professional Plan</h2>
        <div class="plan-price">$29.99<span>/month</span></div>
    </div>
    
    <div class="plan-features">
        <h3>Included Features</h3>
        <div class="features-grid">
            <div class="feature-item">
                <i class="fas fa-book"></i>
                <span>EBook Creation</span>
            </div>
            <div class="feature-item">
                <i class="fas fa-palette"></i>
                <span>Cover Design</span>
            </div>
            <div class="feature-item">
                <i class="fas fa-chart-line"></i>
                <span>Advanced Analytics</span>
            </div>
            <div class="feature-item">
                <i class="fas fa-bullhorn"></i>
                <span>Marketing Tools</span>
            </div>
        </div>
    </div>
    
    <div class="plan-actions">
        <button class="btn btn-primary" id="upgradePlanBtn">Upgrade Plan</button>
        <button class="btn btn-secondary" id="editSelectionBtn">Edit Selection</button>
    </div>
</div>

<div class="success-animation">
    <div class="checkmark-circle">
        <div class="checkmark"></div>
    </div>
    <p>Plan successfully activated!</p>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const upgradePlanBtn = document.getElementById('upgradePlanBtn');
            const editSelectionBtn = document.getElementById('editSelectionBtn');
            
            upgradePlanBtn.addEventListener('click', function() {
                Swal.fire({
                    title: 'Upgrade Plan',
                    text: 'You will be redirected to the plan upgrade page.',
                    icon: 'info',
                    confirmButtonColor: '#4a6cf7',
                    confirmButtonText: 'Continue'
                }).then(() => {
                    // Redirect to plan suggestion page for upgrading
                    window.location.href = '/Dashboard/PlanSuggestion';
                });
            });
            
            editSelectionBtn.addEventListener('click', function() {
                Swal.fire({
                    title: 'Edit Selection',
                    text: 'You will be redirected to the features selection page.',
                    icon: 'info',
                    confirmButtonColor: '#4a6cf7',
                    confirmButtonText: 'Continue'
                }).then(() => {
                    // Redirect to features selection page
                    window.location.href = '/Dashboard/FeaturesSelection';
                });
            });
        });
    </script>
}
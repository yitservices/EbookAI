    <!-- Toast Notification -->
    <div id="toast" class="toast">
        <span class="toast-icon">âœ“</span>
        <span class="toast-message">Operation completed successfully!</span>
    </div>

    <script>
        // DOM Elements
        const themeToggle = document.getElementById('themeToggle');
        const generateAudioBtn = document.getElementById('generateAudioBtn');
        const recordBtn = document.getElementById('recordBtn');
        const recordingBtn = document.getElementById('recordingBtn');
        const pauseRecordingBtn = document.getElementById('pauseRecordingBtn');
        const saveRecordingBtn = document.getElementById('saveRecordingBtn');
        const playBtn = document.getElementById('playBtn');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const rewindBtn = document.getElementById('rewindBtn');
        const forwardBtn = document.getElementById('forwardBtn');
        const exportChapterBtn = document.getElementById('exportChapterBtn');
        const exportAllBtn = document.getElementById('exportAllBtn');
        const chapterSelect = document.getElementById('chapterSelect');
        const voiceSelect = document.getElementById('voiceSelect');
        const aiVoiceToggle = document.getElementById('aiVoiceToggle');
        const speedSlider = document.getElementById('speedSlider');
        const pitchSlider = document.getElementById('pitchSlider');
        const volumeSlider = document.getElementById('volumeSlider');
        const speedValue = document.getElementById('speedValue');
        const pitchValue = document.getElementById('pitchValue');
        const volumeValue = document.getElementById('volumeValue');
        const backgroundMusic = document.getElementById('backgroundMusic');
        const highQuality = document.getElementById('highQuality');
        const noiseReduction = document.getElementById('noiseReduction');
        const normalize = document.getElementById('normalize');
        const currentTimeEl = document.getElementById('currentTime');
        const totalTimeEl = document.getElementById('totalTime');
        const speedBtns = document.querySelectorAll('.speed-btn');
        const audioFiles = document.querySelectorAll('.audio-file button');
        const toast = document.getElementById('toast');
        const premiumModal = document.getElementById('premiumModal');
        const closeButtons = document.querySelectorAll('.close');
        const closeModalBtn = document.getElementById('closeModalBtn');
        const upgradeNowBtn = document.getElementById('upgradeNowBtn');
        const navTabs = document.querySelectorAll('.nav-tab');

        // Current state
        let isPlaying = false;
        let isRecording = false;
        let isPaused = false;
        let isPremiumUser = false;
        let audioDuration = 227; // in seconds (3:47)
        let currentTime = 0;
        let playbackInterval;

        // Theme Toggle
        let isDarkMode = localStorage.getItem('darkMode') === 'true';

        // Apply saved theme on load
        if (isDarkMode) {
            document.body.classList.add('dark-mode');
            themeToggle.textContent = 'â˜€ï¸';
        }

        themeToggle.addEventListener('click', () => {
            isDarkMode = !isDarkMode;
            document.body.classList.toggle('dark-mode');
            themeToggle.textContent = isDarkMode ? 'â˜€ï¸' : 'ðŸŒ™';

            // Save preference to localStorage
            localStorage.setItem('darkMode', isDarkMode);

            showToast(`Dark mode ${isDarkMode ? 'enabled' : 'disabled'}`, 'success');
        });

        // Navigation Tabs
        navTabs.forEach(tab => {
            tab.addEventListener('click', function() {
                // Update active tab
                navTabs.forEach(t => t.classList.remove('active'));
                this.classList.add('active');

                // In a real app, this would navigate to the selected section
                const screen = this.getAttribute('data-screen');
                showToast(`Navigating to ${screen.replace('-', ' ')}`);
            });
        });

        // Format time function
        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
        }

        // Initialize time display
        totalTimeEl.textContent = formatTime(audioDuration);
        currentTimeEl.textContent = formatTime(0);

        // Play/Pause functionality
        playBtn.addEventListener('click', function() {
            isPlaying = !isPlaying;
            if (isPlaying) {
                playBtn.innerHTML = '<i class="fas fa-pause"></i>';
                simulatePlayback();
            } else {
                playBtn.innerHTML = '<i class="fas fa-play"></i>';
                clearInterval(playbackInterval);
            }
        });

        function simulatePlayback() {
            clearInterval(playbackInterval);

            playbackInterval = setInterval(function() {
                if (currentTime >= audioDuration) {
                    clearInterval(playbackInterval);
                    isPlaying = false;
                    playBtn.innerHTML = '<i class="fas fa-play"></i>';
                    currentTime = 0;
                    currentTimeEl.textContent = formatTime(0);
                    updateWaveforms(0);
                    showToast('Playback completed', 'success');
                } else {
                    currentTime += 1;
                }

                currentTimeEl.textContent = formatTime(currentTime);

                // Update waveforms
                updateWaveforms(currentTime);

            }, 1000);
        }

        // Previous and Next buttons
        prevBtn.addEventListener('click', function() {
            // Logic to go to previous chapter
            if (chapterSelect.selectedIndex > 0) {
                chapterSelect.selectedIndex--;
                showToast('Previous chapter selected', 'success');
                resetPlayback();
            }
        });

        nextBtn.addEventListener('click', function() {
            // Logic to go to next chapter
            if (chapterSelect.selectedIndex < chapterSelect.options.length - 1) {
                chapterSelect.selectedIndex++;
                showToast('Next chapter selected', 'success');
                resetPlayback();
            }
        });

        // Rewind and Forward buttons
        rewindBtn.addEventListener('click', function() {
            currentTime = Math.max(0, currentTime - 10);
            currentTimeEl.textContent = formatTime(currentTime);
            updateWaveforms(currentTime);
            showToast('Rewinded 10 seconds', 'success');
        });

        forwardBtn.addEventListener('click', function() {
            currentTime = Math.min(audioDuration, currentTime + 10);
            currentTimeEl.textContent = formatTime(currentTime);
            updateWaveforms(currentTime);
            showToast('Forwarded 10 seconds', 'success');
        });

        // Reset playback when changing chapters
        function resetPlayback() {
            isPlaying = false;
            playBtn.innerHTML = '<i class="fas fa-play"></i>';
            clearInterval(playbackInterval);
            currentTime = 0;
            currentTimeEl.textContent = formatTime(0);
            updateWaveforms(0);
        }

        // Playback speed controls
        speedBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                speedBtns.forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                const speed = this.getAttribute('data-speed');
                showToast(`Playback speed set to ${speed}x`, 'success');
            });
        });

        // Recording button functionality
        recordingBtn.addEventListener('click', function() {
            if (isRecording) {
                isRecording = false;
                recordingBtn.innerHTML = '<i class="fas fa-microphone"></i> Start Recording';
                recordingBtn.classList.remove('btn-danger');
                recordingBtn.classList.add('btn-danger');
                pauseRecordingBtn.disabled = true;
                saveRecordingBtn.disabled = true;
                showToast('Recording stopped', 'success');
            } else {
                isRecording = true;
                recordingBtn.innerHTML = '<i class="fas fa-stop"></i> Stop Recording';
                recordingBtn.classList.remove('btn-danger');
                recordingBtn.classList.add('btn-danger');
                pauseRecordingBtn.disabled = false;
                saveRecordingBtn.disabled = false;
                showToast('Recording started', 'success');
            }
        });

        // Pause recording button
        pauseRecordingBtn.addEventListener('click', function() {
            isPaused = !isPaused;
            if (isPaused) {
                pauseRecordingBtn.innerHTML = '<i class="fas fa-play"></i> Resume';
                showToast('Recording paused', 'warning');
            } else {
                pauseRecordingBtn.innerHTML = '<i class="fas fa-pause"></i> Pause';
                showToast('Recording resumed', 'success');
            }
        });

        // Save recording button
        saveRecordingBtn.addEventListener('click', function() {
            if (confirm('Are you sure you want to save this recording?')) {
                showToast('Recording saved successfully!', 'success');
            }
        });

        // Generate Audio button
        generateAudioBtn.addEventListener('click', function() {
            const voice = voiceSelect.value;
            const aiEnabled = aiVoiceToggle.checked;
            const speed = speedSlider.value;
            const pitch = pitchSlider.value;
            const volume = volumeSlider.value;
            const bgMusic = backgroundMusic.value;

            showToast(`Generating audio with settings: ${voice}, AI: ${aiEnabled}, Speed: ${speed}x, Pitch: ${pitch}, Volume: ${volume}%, Music: ${bgMusic}`, 'success');

            // Simulate generation process
            const btn = this;
            const originalText = btn.innerHTML;

            btn.innerHTML = '<span class="loading"></span> Generating...';
            btn.disabled = true;

            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.disabled = false;
                showToast('Audio generated successfully!', 'success');
            }, 3000);
        });

        // Export buttons
        exportChapterBtn.addEventListener('click', function() {
            showToast('Exporting current chapter...', 'success');
        });

        exportAllBtn.addEventListener('click', function() {
            showToast('Exporting all chapters...', 'success');
        });

        // Audio file play buttons
        audioFiles.forEach(btn => {
            btn.addEventListener('click', function() {
                const fileName = this.parentElement.querySelector('span').textContent;
                showToast(`Playing ${fileName}`, 'success');
            });
        });

        // Slider updates
        speedSlider.addEventListener('input', function() {
            speedValue.textContent = `${this.value}x`;
        });

        pitchSlider.addEventListener('input', function() {
            pitchValue.textContent = this.value;
        });

        volumeSlider.addEventListener('input', function() {
            volumeValue.textContent = `${this.value}%`;
        });

        // Chapter selection
        chapterSelect.addEventListener('change', function() {
            showToast(`Selected: ${this.options[this.selectedIndex].text}`, 'success');
            resetPlayback();
        });

        // Voice selection
        voiceSelect.addEventListener('change', function() {
            showToast(`Voice changed to: ${this.options[this.selectedIndex].text}`, 'success');
        });

        // AI Voice Toggle
        aiVoiceToggle.addEventListener('change', function() {
            showToast(`AI Voice ${this.checked ? 'enabled' : 'disabled'}`, 'success');
        });

        // Background music selection
        backgroundMusic.addEventListener('change', function() {
            showToast(`Background music: ${this.options[this.selectedIndex].text}`, 'success');
        });

        // Audio quality options
        highQuality.addEventListener('change', function() {
            showToast(`High quality ${this.checked ? 'enabled' : 'disabled'}`, 'success');
        });

        noiseReduction.addEventListener('change', function() {
            showToast(`Noise reduction ${this.checked ? 'enabled' : 'disabled'}`, 'success');
        });

        normalize.addEventListener('change', function() {
            showToast(`Audio normalization ${this.checked ? 'enabled' : 'disabled'}`, 'success');
        });

        // Update waveforms based on current time
        function updateWaveforms(currentTime) {
            const progress = currentTime / audioDuration;
            const waveformBars = document.querySelectorAll('.waveform-bar');

            // Update waveform bars
            waveformBars.forEach((bar, index) => {
                const shouldHighlight = index / waveformBars.length <= progress;
                bar.style.backgroundColor = shouldHighlight ? '#4a6cf7' : '#a0a0a0';
            });
        }

        // Show premium modal
        function showPremiumModal() {
            premiumModal.classList.add('show');
        }

        // Close modal
        closeButtons.forEach(button => {
            button.addEventListener('click', () => {
                premiumModal.classList.remove('show');
            });
        });

        closeModalBtn.addEventListener('click', () => {
            premiumModal.classList.remove('show');
        });

        // Upgrade now button
        upgradeNowBtn.addEventListener('click', () => {
            premiumModal.classList.remove('show');
            showToast('Redirecting to premium plans...', 'success');

            // Simulate upgrade process
            setTimeout(() => {
                isPremiumUser = true;
                showToast('Welcome to Premium! All features are now unlocked.', 'success');
            }, 2000);
        });

        // Toast Notification
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            toast.className = `toast ${type}`;
            toast.querySelector('.toast-message').textContent = message;
            toast.classList.add('show');

            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Initialize page
        window.addEventListener('DOMContentLoaded', function() {
            // Set initial time display
            totalTimeEl.textContent = formatTime(audioDuration);
            currentTimeEl.textContent = formatTime(0);

            // Show welcome message
            setTimeout(() => {
                showToast('Audio Book dashboard loaded successfully!');
            }, 1000);
        });
    </script>

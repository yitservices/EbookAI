                padding: 8px;
                font-size: 0.8rem;
            }

            .step-number {
                width: 22px;
                height: 22px;
                font-size: 0.8rem;
            }

            .step-content h4 {
                font-size: 0.9rem;
            }

            .step-content p {
                font-size: 0.75rem;
            }
        }

        .theme-toggle {
            background: #2c3e50;
            color: white;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    <!-- Mobile Menu Toggle -->
    <div class="menu-toggle" id="menuToggle">
        <i class="fas fa-bars"></i>
    </div>

    <div class="dashboard-container">
        <!-- Sidebar -->
        <nav class="sidebar" id="sidebar">
            <div class="sidebar-header">

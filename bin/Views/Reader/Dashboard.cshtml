                }

            .steps-container {
                gap: 15px;
            }

            .step-content h4 {
                font-size: 1rem;
            }

            .step-content p {
                font-size: 0.85rem;
            }
        }

        /* Small mobile screens (iPhone SE, etc.) */
        @@media (max-width: 480px) {
            .main-content {
                padding: 55px 10px 10px 10px;
            }

            .top-header {
                gap: 12px;
            }

            .header-left h1 {
                font-size: 1.4rem;
            }

            .header-left p {
                font-size: 0.95rem;
            }

            .header-right {
                gap: 8px;
            }

                .header-right button {
                    padding: 8px 12px;
                    font-size: 0.85rem;

                    font-size: 1rem;
                    margin-bottom: 10px;
                }

            .stat-placeholder {
                height: 80px;
                margin-bottom: 10px;
            }

            .stat-description {
                font-size: 0.8rem;
            }

            .upload-card {
                padding: 20px;
            }

            .upload-area {
                padding: 30px 15px;
            }

            .upload-icon {
                font-size: 2.5rem;
                margin-bottom: 10px;
            }

            .upload-area p {
                font-size: 0.9rem;
            }

            .upload-subtitle {
                font-size: 0.8rem;
            }

            .stats-section {
                padding: 20px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .stat-item {
                padding: 12px;
                text-align: center;
            }

            .stat-number {
                font-size: 1.5rem;
            }

            .chart-section {
                height: 150px;
                font-size: 0.9rem;
            }

            .premium-section {
                padding: 20px;
            }

                .premium-section h3 {
                    font-size: 1.1rem;
                    margin-bottom: 15px;
                }

            .premium-features {
                flex-direction: column;
                gap: 10px;
                margin: 20px 0;
            }

            .feature-item {
                font-size: 0.85rem;
                padding: 8px 16px;
            }

            .premium-buttons {
                flex-direction: column;
                gap: 10px;
            }

                .premium-buttons button {
                    width: 100%;
                    min-height: 44px;
                }
            /* Modal responsiveness */
            .modal-content {
                width: 95%;
                max-width: 400px;
                margin: 10px;
            }

            .modal-header {
                padding: 15px;
            }

                .modal-header h3 {
                    font-size: 1.1rem;
                }

            .chat-messages {
                height: 250px;
                padding: 15px;
            }

            .message {
                font-size: 0.9rem;
                padding: 8px 12px;
            }

            .chat-input {
                padding: 12px;
            }

                .chat-input input {
                    padding: 10px;

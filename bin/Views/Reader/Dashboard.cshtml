    <!-- How to Start Modal -->
    <div id="howToStartModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3><i class="fas fa-play-circle"></i> Getting Started Guide</h3>
                <span class="close">&times;</span>
            </div>
            <div class="modal-body">
                <div class="steps-container">
                    <div class="step-item">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <h4>Upload Your Manuscript</h4>
                            <p>Start by uploading your book manuscript in .docx, .pdf, or .txt format.</p>
                        </div>
                    </div>

                    <div class="step-item">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <h4>Design Your Cover</h4>
                            <p>Use our professional templates or upload your custom cover design.</p>
                        </div>
                    </div>

                    <div class="step-item">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <h4>Format & Edit</h4>
                            <p>Apply professional formatting and use our editing tools to polish your content.</p>
                        </div>
                    </div>

                    <div class="step-item">
                        <div class="step-number">4</div>
                        <div class="step-content">

            .upload-icon {
                font-size: 1.5rem;
            }

            .upload-area p {
                font-size: 0.8rem;
            }

            .upload-subtitle {
                font-size: 0.7rem;
            }

            .stat-number {
                font-size: 1.2rem;
            }

            .stat-label {
                font-size: 0.75rem;

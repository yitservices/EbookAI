﻿@{
    ViewData["Title"] = "eBook Publisher - Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>eBook Publisher - Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Prevent layout shift from scrollbar - CRITICAL FIX */
        html {
            overflow-y: scroll;
        }

        /* Base styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #f5f7f9;
            color: #333;
            line-height: 1.6;
            overflow-x: hidden;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Dashboard layout */
        .dashboard-container {
            display: flex;
            flex: 1;
            min-height: 100vh;
        }

        /* NEW SIDEBAR STYLES - From marketing page */
        .sidebar {
            width: 250px;
            background: #1e2a4a;
            color: white;
            padding: 20px 0;
            display: flex;
            flex-direction: column;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 100;
        }

        .sidebar-header {
            padding: 0 20px 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

            .sidebar-header h2 {
                font-size: 1.5rem;
                font-weight: 600;
                color: #fff;
            }

        .sidebar-menu {
            list-style: none;
            padding: 20px 0;
            flex-grow: 1;
        }

            .sidebar-menu li {
                margin-bottom: 5px;
            }

            .sidebar-menu a {
                display: block;
                padding: 12px 20px;
                color: #b8c7ce;
                text-decoration: none;
                transition: all 0.3s;
                font-size: 0.95rem;
                display: flex;
                align-items: center;
                position: relative;
                overflow: hidden;
            }

                .sidebar-menu a::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: -100%;
                    width: 100%;
                    height: 100%;
                    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
                    transition: left 0.5s;
                }

                .sidebar-menu a:hover::before {
                    left: 100%;
                }

                .sidebar-menu a i {
                    margin-right: 10px;
                    font-size: 18px;
                }

                .sidebar-menu a:hover, .sidebar-menu a.active {
                    background-color: #2c3e50;
                    color: white;
                    border-left: 4px solid #4a6cf7;
                    padding-left: 16px;
                }

        .sidebar-footer {
            padding: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .logout-btn {
            display: block;
            text-align: center;
            padding: 10px;
            background-color: #dc3545;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

            .logout-btn:hover {
                background-color: #c0392b;
            }

        /* Mobile menu toggle (hidden by default) */
        .menu-toggle {
            display: none;
            position: fixed;
            top: 15px;
            left: 15px;
            background: #3191d2;
            color: white;
            width: 40px;
            height: 40px;
            border-radius: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1001;
            cursor: pointer;
            transition: opacity 0.3s ease;
        }

        /* Hide hamburger menu when sidebar is active */
        .sidebar.active ~ .menu-toggle {
            opacity: 0;
            pointer-events: none;
        }

        /* Main content styles */
        .main-content {
            flex: 1;
            padding: 20px;
            margin-left: 250px;
            width: calc(100% - 250px);
            transition: margin-left 0.3s ease, width 0.3s ease;
        }

        .top-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 1px solid #e0e0e0;
        }

        .header-left h1 {
            font-size: 2rem;
            font-weight: 700;
            color: #2c3e50;
        }

        .header-left p {
            font-size: 1.2rem;
            color: #7f8c8d;
        }

        .header-right {
            display: flex;
            gap: 15px;
        }

        /* Button styles */
        button {
            padding: 12px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
            color: white;
            box-shadow: 0 4px 6px rgba(76, 175, 80, 0.2);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(76, 175, 80, 0.3);
            }

        .btn-secondary {
            background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
            color: white;
            box-shadow: 0 4px 6px rgba(52, 152, 219, 0.2);
        }

            .btn-secondary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(52, 152, 219, 0.3);
            }

        .theme-toggle {
            background: #2c3e50;
            color: white;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.2rem;
        }

        /* Stats cards */
        .stats-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            cursor: pointer;
            transition: all 0.3s;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
            }

            .stat-card h3 {
                font-size: 1.1rem;
                margin-bottom: 15px;
                color: #2c3e50;
            }

        .stat-placeholder {
            height: 100px;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .stat-description {
            font-size: 0.9rem;
            color: #7f8c8d;
        }

        /* Upload section */
        .upload-section {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 30px;
        }

        .upload-card {
            background: white;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .upload-highlight {
            background: linear-gradient(135deg, #FF5722 0%, #E64A19 100%);
            color: white;
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
            display: inline-block;
            margin-bottom: 20px;
        }

        .upload-area {
            border: 2px dashed #3498db;
            border-radius: 10px;
            padding: 40px 20px;
            text-align: center;
            margin-bottom: 20px;
            transition: all 0.3s;
            background-color: rgba(52, 152, 219, 0.05);
        }

            .upload-area.drag-over {
                background-color: rgba(52, 152, 219, 0.2);
                border-color: #2980b9;
            }

        .upload-icon {
            font-size: 3rem;
            margin-bottom: 15px;
        }

        .upload-subtitle {
            font-size: 0.9rem;
            color: #7f8c8d;
            margin: 10px 0;
        }

        .upload-card h3 {
            color: #2c3e50;
            font-size: 1.1rem;
            text-align: center;
        }

        /* Stats section */
        .stats-section {
            background: white;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .landing-stats h3 {
            color: #2c3e50;
            font-size: 1.1rem;
            margin-bottom: 20px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .stat-item {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
        }

        .stat-number {
            display: block;
            font-size: 1.8rem;
            font-weight: 700;
            color: #2c3e50;
        }

        .stat-label {
            font-size: 0.9rem;
            color: #7f8c8d;
        }

        .stat-trend {
            font-size: 0.85rem;
            margin-top: 5px;
            font-weight: 600;
        }

        .positive {
            color: #2E7D32;
        }

        .neutral {
            color: #7f8c8d;
        }

        .chart-section {
            margin-top: 20px;
            height: 200px;
            background: #f8f9fa;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #7f8c8d;
        }

        /* Premium section */
        .premium-section {
            background: linear-gradient(135deg, #2c3e50 0%, #1a2530 100%);
            border-radius: 10px;
            padding: 30px;
            color: white;
            text-align: center;
            margin-bottom: 30px;
        }

            .premium-section h3 {
                font-size: 1.3rem;
                margin-bottom: 20px;
            }

        .premium-features {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin: 25px 0;
            flex-wrap: wrap;
        }

        .feature-item {
            background: rgba(255, 255, 255, 0.1);
            padding: 10px 20px;
            border-radius: 20px;
            font-size: 0.9rem;
        }

        .premium-buttons {
            display: flex;
            justify-content: center;
            gap: 15px;
        }

        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: white;
            border-radius: 10px;
            width: 90%;
            max-width: 500px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

        .modal-header {
            background: linear-gradient(135deg, #2c3e50 0%, #1a2530 100%);
            color: white;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .modal-header h3 {
                font-size: 1.3rem;
            }

        .close {
            font-size: 1.5rem;
            cursor: pointer;
            transition: color 0.3s;
        }

            .close:hover {
                color: #e74c3c;
            }

        .chat-messages {
            padding: 20px;
            height: 300px;
            overflow-y: auto;
            background-color: #f8f9fa;
        }

        .message {
            margin-bottom: 15px;
            padding: 10px 15px;
            border-radius: 8px;
            max-width: 80%;
        }

            .message.support {
                background-color: #e3f2fd;
                align-self: flex-start;
            }

            .message.user {
                background-color: #4CAF50;
                color: white;
                margin-left: auto;
            }

        .chat-input {
            display: flex;
            padding: 15px;
            border-top: 1px solid #e0e0e0;
        }

            .chat-input input {
                flex-grow: 1;
                padding: 12px;
                border: 1px solid #e0e0e0;
                border-radius: 4px;
                margin-right: 10px;
            }

        /* Steps container */
        .steps-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin: 20px 0;
        }

        .step-item {
            display: flex;
            align-items: flex-start;
            gap: 15px;
        }

        .step-number {
            background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
            color: white;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: bold;
            flex-shrink: 0;
        }

        .step-content h4 {
            margin-bottom: 5px;
            color: #2c3e50;
        }

        .step-content p {
            color: #7f8c8d;
            font-size: 0.95rem;
        }

        .modal-footer {
            padding: 20px;
            text-align: center;
            border-top: 1px solid #e0e0e0;
        }

        /* Tour highlight */
        .tour-highlight {
            position: relative;
            box-shadow: 0 0 0 4px rgba(76, 175, 80, 0.5);
            border-radius: 8px;
            z-index: 999;
            transition: all 0.5s;
        }

        /* Responsive styles */
        @@media (max-width: 1200px) {
            .main-content {
                padding: 15px;
            }

            .stats-cards {
                grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
                gap: 15px;
            }
        }

        @@media (max-width: 992px) {
            .upload-section {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .header-left h1 {
                font-size: 1.8rem;
            }

            .header-left p {
                font-size: 1.1rem;
            }

            .premium-features {
                flex-direction: column;
                gap: 15px;
                align-items: center;
            }

            .feature-item {
                text-align: center;
                width: 100%;
                max-width: 300px;
            }
        }

        /* Enhanced mobile responsiveness for all screen sizes */
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                width: 280px;
                z-index: 1000;
                box-shadow: 3px 0 15px rgba(0, 0, 0, 0.2);
                transition: transform 0.3s ease;
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .main-content {
                margin-left: 0;
                width: 100%;
                padding: 60px 15px 15px 15px;
            }

            .menu-toggle {
                display: flex !important;
            }

            .top-header {
                flex-direction: column;
                text-align: center;
                gap: 15px;
                padding-bottom: 15px;
            }

            .header-left h1 {
                font-size: 1.6rem;
            }

            .header-left p {
                font-size: 1rem;
            }

            .header-right {
                flex-wrap: wrap;
                justify-content: center;
                gap: 10px;
            }

                .header-right button {
                    padding: 10px 16px;
                    font-size: 0.9rem;
                    min-height: 44px;
                }

            .theme-toggle {
                width: 44px;
                height: 44px;
            }

            .stats-cards {
                grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
                gap: 12px;
            }

            .stat-card {

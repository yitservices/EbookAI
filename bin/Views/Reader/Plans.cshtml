@model IEnumerable<EBookDashboard.Models.Plans>

@{
    ViewData["Title"] = "Upgrade Your Plan - Reader Dashboard";
}

<div class="plans-page">
    <!-- Header Section -->
    <div class="page-header" data-aos="fade-down">
        <div class="header-content">
            <h1><i class="fas fa-crown"></i> Choose Your Plan</h1>
            <p>Upgrade your plan to access premium content and features</p>
        </div>
    </div>

    <!-- Plans Grid -->
    <div class="plans-grid" data-aos="fade-up" data-aos-delay="200">
        @foreach (var plan in Model)
        {
            <div class="plan-card" data-aos="zoom-in" data-aos-delay="@((Model.ToList().IndexOf(plan) + 1) * 100)">
                @if (plan.PlanName.Contains("Pro") || plan.PlanName.Contains("Premium"))
                {
                    <div class="popular-badge">MOST POPULAR</div>
                }
                <div class="plan-header">
                    <h3 class="plan-name">@plan.PlanName</h3>
                    <div class="plan-price">
                        <span class="amount">$@plan.PlanRate</span>
                        <span class="duration">/@(plan.PlanDays == 365 ? "year" : "month")</span>
                    </div>
                    <p class="plan-description">@plan.PlanDescription</p>
                </div>
                
                <ul class="plan-features">
                    <li>
                        <i class="fas fa-check-circle text-success"></i>
                        <span>Access to @(plan.MaxEBooks == 0 ? "unlimited" : plan.MaxEBooks.ToString()) eBooks</span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle text-success"></i>
                        <span>@(plan.AllowDownloads ? "Downloadable" : "Online reading only") eBooks</span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle text-success"></i>
                        <span>@(plan.AllowFullDashboard ? "Full dashboard access" : "Limited dashboard access")</span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle text-success"></i>
                        <span>@(plan.AllowAnalytics ? "Advanced analytics" : "Basic analytics")</span>
                    </li>
                    <li>
                        <i class="fas fa-check-circle text-success"></i>
                        <span>@(plan.AllowPublishing ? "Publish your own books" : "Read only")</span>
                    </li>
                </ul>
                
                <div class="plan-actions">
                    @if (plan.PlanRate == 0)
                    {
                        <button class="btn btn-outline-primary btn-plan" disabled>
                            Current Plan
                        </button>
                    }
                    else
                    {
                        <form method="post" action="@Url.Action("BuyPlan", "Plans")">
                            <input type="hidden" name="planId" value="@plan.PlanId" />
                            <button type="submit" class="btn btn-primary btn-plan">
                                Get Started
                            </button>
                        </form>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Plan Comparison Table -->
    <div class="comparison-section" data-aos="fade-up" data-aos-delay="400">
        <h2 class="section-title">Plan Comparison</h2>
        <div class="comparison-table-container">
            <table class="comparison-table">
                <thead>
                    <tr>
                        <th>Features</th>
                        @foreach (var plan in Model)
                        {
                            <th>@plan.PlanName</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Max eBooks</td>
                        @foreach (var plan in Model)
                        {
                            <td>@(plan.MaxEBooks == 0 ? "Unlimited" : plan.MaxEBooks.ToString())</td>
                        }
                    </tr>
                    <tr>
                        <td>Downloadable eBooks</td>
                        @foreach (var plan in Model)
                        {
                            <td>
                                @if (plan.AllowDownloads)
                                {
                                    <i class="fas fa-check text-success"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times text-danger"></i>
                                }
                            </td>
                        }
                    </tr>
                    <tr>
                        <td>Full Dashboard Access</td>
                        @foreach (var plan in Model)
                        {
                            <td>
                                @if (plan.AllowFullDashboard)
                                {
                                    <i class="fas fa-check text-success"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times text-danger"></i>
                                }
                            </td>
                        }
                    </tr>
                    <tr>
                        <td>Advanced Analytics</td>
                        @foreach (var plan in Model)
                        {
                            <td>
                                @if (plan.AllowAnalytics)
                                {
                                    <i class="fas fa-check text-success"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times text-danger"></i>
                                }
                            </td>
                        }
                    </tr>
                    <tr>
                        <td>Publish Your Own Books</td>
                        @foreach (var plan in Model)
                        {
                            <td>
                                @if (plan.AllowPublishing)
                                {
                                    <i class="fas fa-check text-success"></i>
                                }
                                else
                                {
                                    <i class="fas fa-times text-danger"></i>
                                }
                            </td>
                        }
                    </tr>
                    <tr>
                        <td>Max Pages</td>
                        @foreach (var plan in Model)
                        {
                            <td>@(plan.MaxPages == 0 ? "Unlimited" : plan.MaxPages.ToString())</td>
                        }
                    </tr>
                    <tr>
                        <td>Max Chapters</td>
                        @foreach (var plan in Model)
                        {
                            <td>@(plan.MaxChapters == 0 ? "Unlimited" : plan.MaxChapters.ToString())</td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .plans-page {
        padding: 20px;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding: 20px;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.85));
        backdrop-filter: blur(20px);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .header-content h1 {
        margin: 0;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 2rem;
        font-weight: 700;
    }

    .header-content p {
        margin: 5px 0 0;
        color: #666;
        font-size: 1rem;
    }

    .plans-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        margin-bottom: 50px;
    }

    .plan-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        position: relative;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .plan-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 45px rgba(0, 0, 0, 0.15);
    }

    .popular-badge {
        position: absolute;
        top: 15px;
        right: -30px;
        background: linear-gradient(135deg, #FFC107, #FF9800);
        color: #333;
        padding: 5px 30px;
        font-size: 0.8rem;
        font-weight: 600;
        transform: rotate(45deg);
        z-index: 10;
    }

    .plan-header {
        padding: 30px 25px 20px;
        text-align: center;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .plan-name {
        margin: 0 0 15px;
        font-size: 1.5rem;
        font-weight: 700;
        color: #333;
    }

    .plan-price {
        margin-bottom: 15px;
    }

    .amount {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .duration {
        font-size: 1rem;
        color: #666;
    }

    .plan-description {
        color: #666;
        margin: 0;
        font-size: 0.95rem;
    }

    .plan-features {
        padding: 25px;
        list-style: none;
        margin: 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .plan-features li {
        padding: 10px 0;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 0.95rem;
    }

    .plan-actions {
        padding: 25px;
        text-align: center;
    }

    .btn-plan {
        width: 100%;
        padding: 12px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
    }

    .btn-outline-primary {
        border: 2px solid #667eea;
        color: #667eea;
        background: transparent;
    }

    .btn-outline-primary:hover {
        background: #667eea;
        color: white;
    }

    .section-title {
        text-align: center;
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 30px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .comparison-section {
        margin-bottom: 50px;
    }

    .comparison-table-container {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .comparison-table {
        width: 100%;
        border-collapse: collapse;
    }

    .comparison-table th {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 20px;
        text-align: center;
        font-weight: 600;
    }

    .comparison-table th:first-child {
        background: #f8f9fa;
        color: #333;
        text-align: left;
    }

    .comparison-table td {
        padding: 15px 20px;
        text-align: center;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .comparison-table td:first-child {
        text-align: left;
        font-weight: 600;
        background: #f8f9fa;
    }

    .comparison-table tr:last-child td {
        border-bottom: none;
    }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            gap: 15px;
            text-align: center;
        }

        .plans-grid {
            grid-template-columns: 1fr;
        }

        .popular-badge {
            right: -25px;
            padding: 3px 25px;
            font-size: 0.7rem;
        }

        .plan-header {
            padding: 25px 20px 15px;
        }

        .plan-name {
            font-size: 1.3rem;
        }

        .amount {
            font-size: 2rem;
        }

        .plan-features {
            padding: 20px;
        }

        .plan-features li {
            padding: 8px 0;
            font-size: 0.9rem;
        }

        .plan-actions {
            padding: 20px;
        }

        .section-title {
            font-size: 1.5rem;
        }

        .comparison-table {
            display: block;
            overflow-x: auto;
        }
    }
</style>

<script>
    // Initialize AOS
    AOS.init({
        duration: 600,
        easing: 'ease-out',
        once: true
    });
</script>
        function submitPayoutRequest() {
            const amount = document.getElementById('payoutAmount').value;
            const method = document.getElementById('payoutMethod').value;

            if (!amount || !method) {
                Swal.fire({
                    title: 'Error',
                    text: 'Please fill in all required fields',
                    icon: 'error',
                    confirmButtonColor: '#D4B896'
                });
                return;
            }

            if (amount < 50) {
                Swal.fire({
                    title: 'Error',
                    text: 'Minimum payout amount is $50.00',
                    icon: 'error',
                    confirmButtonColor: '#D4B896'
                });
                return;
            }

            Swal.fire({
                title: 'Processing Payout Request',
                text: 'Please wait while we process your request...',
                allowOutsideClick: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            // Simulate processing
            setTimeout(() => {
                Swal.fire({
                    title: 'Payout Request Submitted!',
                    text: `Your request for $${amount} via ${method} has been submitted successfully.`,
                    icon: 'success',
                    confirmButtonColor: '#D4B896'
                });
                bootstrap.Modal.getInstance(document.getElementById('payoutModal')).hide();
            }, 2000);
        }

        // Export report
        function exportReport() {

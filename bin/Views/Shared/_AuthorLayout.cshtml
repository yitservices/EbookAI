<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Author Dashboard</title>

    <!-- External Libraries -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        /* Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        html {
            overflow-y: scroll;
            scroll-behavior: smooth;
        }

        body {
            background: linear-gradient(135deg, #fdf6e3 0%, #f5e8c8 100%);
            color: #5d4037;
            line-height: 1.6;
            min-height: 100vh;
        }

        /* Author Layout Container */
        .author-container {
            display: flex;
            min-height: 100vh;
        }

        /* Modern Sidebar */
        .author-sidebar {
            width: 280px;
            background: rgba(255, 253, 245, 0.95);
            backdrop-filter: blur(20px);
            border-right: 1px solid rgba(210, 180, 140, 0.3);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
            transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 10px 30px rgba(210, 180, 140, 0.2);
        }

        .sidebar-header {
            padding: 30px 25px;
            border-bottom: 1px solid rgba(210, 180, 140, 0.3);
            text-align: center;
        }

        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

            .logo i {
                font-size: 2.5rem;
                background: linear-gradient(135deg, #d4a574, #a67c52);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .logo h2 {
                font-size: 1.8rem;
                font-weight: 700;
                background: linear-gradient(135deg, #d4a574, #a67c52);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

        /* User Profile Section */
        .user-profile {
            padding: 20px 25px;
            border-bottom: 1px solid rgba(210, 180, 140, 0.3);
            text-align: center;
        }

        .user-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, #d4a574, #a67c52);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            font-size: 1.5rem;
            color: white;
            font-weight: 600;
        }

        .user-info h4 {
            font-size: 1.1rem;
            margin-bottom: 5px;
            color: #5d4037;
        }

        .user-role {
            display: inline-block;
            padding: 4px 12px;
            background: linear-gradient(135deg, #d4a574, #a67c52);
            color: white;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        /* Navigation Menu */
        .nav-menu {
            padding: 20px 0;
        }

        .nav-item {
            margin: 5px 15px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 15px 20px;
            color: #8d6e63;
            text-decoration: none;
            border-radius: 15px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

            .nav-link::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(212, 165, 116, 0.1), transparent);
                transition: left 0.5s;
            }

            .nav-link:hover::before {
                left: 100%;
            }

            .nav-link i {
                margin-right: 15px;
                font-size: 1.2rem;
                width: 20px;
                text-align: center;
            }

            .nav-link:hover, .nav-link.active {
                background: linear-gradient(135deg, #d4a574, #a67c52);
                color: white;
                transform: translateX(5px);
                box-shadow: 0 8px 25px rgba(212, 165, 116, 0.3);
            }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: 30px;
            background: rgba(255, 253, 245, 0.1);
            backdrop-filter: blur(20px);
            min-height: 100vh;
            transition: margin-left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* Top Header */
        .top-header {
            background: rgba(255, 253, 245, 0.95);
            backdrop-filter: blur(20px);
            padding: 25px 30px;
            border-radius: 20px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(210, 180, 140, 0.2);
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
        }

        .header-title {
            color: #5d4037;
        }

            .header-title h1 {
                font-size: 2.2rem;
                font-weight: 700;
                margin-bottom: 5px;
                background: linear-gradient(135deg, #d4a574, #a67c52);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .header-title p {
                color: #8d6e63;
            }

        .header-actions {
            display: flex;
            gap: 15px;
        }

        /* Buttons */
        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 15px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

            .btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
                transition: left 0.5s;
            }

            .btn:hover::before {
                left: 100%;
            }

        .btn-primary {
            background: linear-gradient(135deg, #d4a574, #a67c52);
            color: white;
            box-shadow: 0 8px 25px rgba(212, 165, 116, 0.3);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 35px rgba(212, 165, 116, 0.4);
            }

        .btn-secondary {
            background: rgba(255, 253, 245, 0.9);
            color: #5d4037;
            border: 1px solid rgba(210, 180, 140, 0.3);
        }

            .btn-secondary:hover {
                background: #fffdf5;
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(210, 180, 140, 0.2);
            }

        /* Content Area */
        .content-area {
            background: rgba(255, 253, 245, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(210, 180, 140, 0.2);
            min-height: 500px;
        }

        /* Mobile Responsive */
        .mobile-toggle {
            display: none;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1001;
            background: linear-gradient(135deg, #d4a574, #a67c52);
            color: white;
            border: none;
            width: 50px;
            height: 50px;
            border-radius: 15px;
            font-size: 1.2rem;
            cursor: pointer;
            box-shadow: 0 8px 25px rgba(212, 165, 116, 0.3);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .mobile-toggle:hover {
                transform: scale(1.1);
            }

        /* Mobile Styles */
        @@media (max-width: 768px) {
            .mobile-toggle

        {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .author-sidebar {
            transform: translateX(-100%);
        }

            .author-sidebar.active {
                transform: translateX(0);
            }

        .main-content {
            margin-left: 0;
            padding: 20px 15px;
            padding-top: 80px;
        }

        .top-header {
            flex-direction: column;
            gap: 20px;
            text-align: center;
        }

        .header-actions {
            width: 100%;
            justify-content: center;
        }

        .content-area {
            padding: 20px;
        }

        }

        @@media (max-width: 480px) {
            .author-sidebar

        {
            width: 100%;
        }

        .header-title h1 {
            font-size: 1.8rem;
        }

        .btn {
            padding: 10px 20px;
            font-size: 0.9rem;
        }

        }

        /* Loading Animation */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 253, 245, 0.9);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            opacity: 1;
            transition: opacity 0.5s ease;
        }

            .loading-overlay.hidden {
                opacity: 0;
                pointer-events: none;
            }

        .spinner {
            width: 50px;
            height: 50px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid #d4a574;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0%

        {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }

        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(255, 253, 245, 0.1);
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, #d4a574, #a67c52);
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(135deg, #a67c52, #d4a574);
            }

        /* New Features Styling */

        /* Quick Stats */
        .quick-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(255, 253, 245, 0.9);
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(210, 180, 140, 0.2);
            display: flex;
            align-items: center;
            gap: 15px;
            transition: transform 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
            }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: white;
            background: linear-gradient(135deg, #d4a574, #a67c52);
        }

        .stat-info h3 {
            font-size: 1.8rem;
            margin-bottom: 5px;
            color: #5d4037;
        }

        .stat-info p {
            color: #8d6e63;
            font-size: 0.9rem;
        }

        /* Recent Activity */
        .activity-section {
            background: rgba(255, 253, 245, 0.9);
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(210, 180, 140, 0.2);
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 20px;
            color: #5d4037;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .activity-list {
            list-style: none;
        }

        .activity-item {
            display: flex;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid rgba(210, 180, 140, 0.3);
        }

            .activity-item:last-child {
                border-bottom: none;
            }

        .activity-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            color: white;
            background: linear-gradient(135deg, #d4a574, #a67c52);
        }

        .activity-content {
            flex: 1;
        }

            .activity-content p {
                margin-bottom: 5px;
                color: #5d4037;
            }

        .activity-time {
            font-size: 0.8rem;
            color: #8d6e63;
        }

        /* Writing Goals */
        .goals-section {
            background: rgba(255, 253, 245, 0.9);
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(210, 180, 140, 0.2);
        }

        .goal-progress {
            margin-bottom: 20px;
        }

        .goal-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .goal-title {
            font-weight: 600;
            color: #5d4037;
        }

        .goal-percentage {
            color: #d4a574;
            font-weight: 600;
        }

        .progress-bar {
            height: 10px;
            background: rgba(210, 180, 140, 0.2);
            border-radius: 5px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(135deg, #d4a574, #a67c52);
            border-radius: 5px;
            transition: width 1s ease;
        }

        /* Search Bar */
        .search-container {
            position: relative;
            margin-bottom: 20px;
        }

        .search-input {
            width: 100%;
            padding: 12px 20px 12px 45px;
            border: 1px solid rgba(210, 180, 140, 0.3);
            border-radius: 15px;
            background: rgba(255, 253, 245, 0.9);
            color: #5d4037;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .search-input:focus {
                outline: none;
                border-color: #d4a574;
                box-shadow: 0 0 0 3px rgba(212, 165, 116, 0.2);
            }

        .search-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #8d6e63;
        }

        /* Notification Badge */
        .notification-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: #e74c3c;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.7rem;
            font-weight: bold;
        }

        /* Dark Mode Toggle */
        .theme-toggle {
            display: flex;
            align-items: center;
            gap: 10px;
            margin: 20px 15px;
            padding: 10px 15px;
            border-radius: 15px;
            background: rgba(255, 253, 245, 0.9);
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .theme-toggle:hover {
                background: rgba(212, 165, 116, 0.1);
            }

        .toggle-switch {
            position: relative;
            width: 50px;
            height: 24px;
            background: rgba(210, 180, 140, 0.3);
            border-radius: 12px;
            transition: all 0.3s ease;
        }

            .toggle-switch::after {
                content: '';
                position: absolute;
                width: 20px;
                height: 20px;
                background: white;
                border-radius: 50%;
                top: 2px;
                left: 2px;
                transition: all 0.3s ease;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            }

        .theme-toggle.active .toggle-switch {
            background: linear-gradient(135deg, #d4a574, #a67c52);
        }

            .theme-toggle.active .toggle-switch::after {
                transform: translateX(26px);
            }
    </style>
</head>
<body>
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner"></div>
    </div>

    <!-- Mobile Toggle -->
    <button class="mobile-toggle" id="mobileToggle">
        <i class="fas fa-bars"></i>
    </button>

    <div class="author-container">
        <!-- Sidebar -->
        <aside class="author-sidebar" id="authorSidebar" data-aos="fade-right">
            <div class="sidebar-header">
                <div class="logo">
                    <i class="fas fa-feather-alt"></i>
                    <h2>Author Studio</h2>
                </div>
            </div>

            <div class="user-profile" data-aos="fade-up" data-aos-delay="100">
                <div class="user-avatar">
                    @{
                        var userName = User.Identity?.Name ?? "Author";
                        var firstLetter = userName.Substring(0, 1).ToUpper();
                    }
                    @firstLetter
                </div>
                <div class="user-info">
                    <h4>@userName</h4>
                    <span class="user-role">
                        <i class="fas fa-pen-nib"></i> Author
                    </span>
                </div>
            </div>

            <!-- Search Bar -->
            <div class="search-container" data-aos="fade-up" data-aos-delay="150">
                <i class="fas fa-search search-icon" style="display:none;"></i>
                <input type="text" class="search-input" placeholder="Search..." style="display:none;">
            </div>

            <nav class="nav-menu">
                <!-- Dashboard -->
                <div class="nav-item" data-aos="fade-up" data-aos-delay="200">
                    <a href="@Url.Action("Dashboard", "Author")" class="nav-link active">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                </div>

                <!-- My Books -->
                <div class="nav-item" data-aos="fade-up" data-aos-delay="250">
                    <a href="@Url.Action("Books", "Author")" class="nav-link">
                        <i class="fas fa-book"></i>
                        <span>My Books</span>
                        <span class="notification-badge">3</span>
                    </a>
                </div>

                <!-- Write New -->
                <div class="nav-item" data-aos="fade-up" data-aos-delay="300">
                    <a href="@Url.Action("WriteNew", "Author")" class="nav-link">
                        <i class="fas fa-edit"></i>
                        <span>Write New</span>
                    </a>
                </div>

                <!-- Analytics -->
                <div class="nav-item" data-aos="fade-up" data-aos-delay="350">
                    <a href="@Url.Action("Analytics", "Author")" class="nav-link">
                        <i class="fas fa-chart-bar"></i>
                        <span>Analytics</span>
                    </a>
                </div>

                <!-- Royalties -->
                <div class="nav-item" data-aos="fade-up" data-aos-delay="400">
                    <a href="@Url.Action("Royalties", "Author")" class="nav-link">
                        <i class="fas fa-dollar-sign"></i>
                        <span>Royalties</span>
                    </a>
                </div>

                <!-- Marketing -->
                <div class="nav-item" data-aos="fade-up" data-aos-delay="450">
                    <a href="@Url.Action("Marketing", "Author")" class="nav-link">
                        <i class="fas fa-bullhorn"></i>
                        <span>Marketing</span>
                    </a>
                </div>

                <!-- Settings -->
                <div class="nav-item" data-aos="fade-up" data-aos-delay="500">
                    <a href="@Url.Action("Settings", "Author")" class="nav-link">
                        <i class="fas fa-cog"></i>
                        <span>Settings</span>
                    </a>
                </div>

                <!-- Dark Mode Toggle -->
                <div class="theme-toggle" id="themeToggle" data-aos="fade-up" data-aos-delay="550">
                    <i class="fas fa-moon"></i>
                    <span>Dark Mode</span>
                    <div class="toggle-switch"></div>
                </div>

                <!-- Logout -->
                <div class="nav-item" data-aos="fade-up" data-aos-delay="600">
                    <a href="@Url.Action("Logout", "Account")" class="nav-link" onclick="handleLogout(event)">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="top-header" data-aos="fade-down">
                <div class="header-title">
                    <h1>@ViewData["Title"]</h1>
                    <p>Welcome back, @userName! Ready to create amazing stories?</p>
                </div>
                <div class="header-actions">
                    <button class="btn btn-secondary" onclick="showHelp()">
                        <i class="fas fa-question-circle"></i>
                        <span>Help</span>
                    </button>
                    <button class="btn btn-secondary" onclick="showDrafts()">
                        <i class="fas fa-file-alt"></i>
                        <span>My Drafts</span>
                    </button>
                    <button class="btn btn-primary" onclick="startWriting()">
                        <i class="fas fa-plus"></i>
                        <span>Start Writing</span>
                    </button>
                </div>
            </header>

            <div class="content-area" data-aos="fade-up" data-aos-delay="200">
             
                <!-- This is where ASP.NET content will be rendered -->
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // Initialize AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            offset: 100
        });

        // Hide loading overlay
        window.addEventListener('load', function() {
            setTimeout(() => {
                document.getElementById('loadingOverlay').classList.add('hidden');
            }, 1000);
        });

        // Mobile sidebar toggle
        document.getElementById('mobileToggle').addEventListener('click', function() {
            const sidebar = document.getElementById('authorSidebar');
            sidebar.classList.toggle('active');
        });

        // Close sidebar on outside click (mobile)
        document.addEventListener('click', function(e) {
            const sidebar = document.getElementById('authorSidebar');
            const toggle = document.getElementById('mobileToggle');

            if (window.innerWidth <= 768 && !sidebar.contains(e.target) && !toggle.contains(e.target)) {
                sidebar.classList.remove('active');
            }
        });

        // Welcome message
        document.addEventListener('DOMContentLoaded', function() {
            const userName = '@Html.Raw(User.Identity?.Name ?? "Author")';
            Swal.fire({
                title: 'Welcome Back!',
                text: `Hello ${userName}, ready to write your next masterpiece?`,
                icon: 'success',
                timer: 3000,
                timerProgressBar: true,
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                background: 'linear-gradient(135deg, #d4a574, #a67c52)',
                color: 'white'
            });
        });

        // Logout handler
        function handleLogout(event) {
            event.preventDefault();
            Swal.fire({
                title: 'Confirm Logout',
                text: 'Are you sure you want to logout?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#d4a574',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, logout',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Goodbye!',
                        text: 'Keep writing amazing stories!',
                        icon: 'success',
                        timer: 2000,
                        timerProgressBar: true,
                        showConfirmButton: false
                    }).then(() => {
                        window.location.href = '@Url.Action("Logout", "Account")';
                    });
                }
            });
        }

        // Show drafts
        function showDrafts() {
            Swal.fire({
                title: 'My Drafts',
                html: `
                    <div style="text-align: left;">
                        <div style="padding: 15px; border-left: 3px solid #d4a574; margin: 10px 0; background: rgba(212, 165, 116, 0.1);">
                            <strong>The Adventure Begins</strong><br>

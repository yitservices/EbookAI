<script>
    // ===================== TABS MANAGEMENT =====================
    const tabButtons = document.querySelectorAll('.tab-btn');
    const tabContents = document.querySelectorAll('.tab-content');

    tabButtons.forEach(button => {
        button.addEventListener('click', function() {
            if (this.classList.contains('disabled')) {
                showNotification('Upgrade to premium to access this feature', 'warning');
                return;
            }

            const tabId = this.getAttribute('data-tab');

            // Remove active class from all buttons and contents
            tabButtons.forEach(btn => btn.classList.remove('active'));
            tabContents.forEach(content => content.classList.remove('active'));

            // Add active class to current button and content
            this.classList.add('active');
            document.getElementById(tabId).classList.add('active');
        });
    });

    // ===================== PAYMENT & ACCESS CONTROL =====================
    let userIsPremium = false;
    let currentBookData = null;

    function checkUserStatus() {
        setTimeout(() => {
            userIsPremium = false;
            updateUIForUserStatus();
        }, 100);
    }

    function updateUIForUserStatus() {
        const statusBadge = document.getElementById('userStatus');

        if (userIsPremium) {
            statusBadge.textContent = 'Premium User';
            statusBadge.className = 'status-badge status-premium';

            // Enable all tabs
            document.querySelectorAll('.tab-btn.disabled').forEach(tab => {
                tab.classList.remove('disabled');
                tab.innerHTML = tab.innerHTML.replace('🔒', '');
            });

            // Remove payment overlays
            document.querySelectorAll('.payment-overlay').forEach(overlay => {
                overlay.style.display = 'none';
            });

            // Enable editor
            document.getElementById('bookEditor').classList.remove('readonly');
            document.getElementById('bookEditor').contentEditable = true;

            // Enable toolbar buttons
            document.querySelectorAll('.toolbar-btn').forEach(btn => {
                btn.disabled = false;
            });

        } else {
            statusBadge.textContent = 'Free User';
            statusBadge.className = 'status-badge status-free';
        }
    }

    function showPaymentModal() {
        const modal = new bootstrap.Modal(document.getElementById('paymentModal'));
        modal.show();
        updatePaymentTotal();
    }

    function updatePaymentTotal() {
        let total = 0;

        document.querySelectorAll('.form-check-input[type="checkbox"]:checked').forEach(checkbox => {
            total += parseFloat(checkbox.value);
        });

        const selectedPlan = document.querySelector('input[name="plan"]:checked');
        if (selectedPlan) {
            total = parseFloat(selectedPlan.value);
        }

        document.getElementById('totalAmount').textContent = total.toFixed(2);
    }

    document.querySelectorAll('.form-check-input').forEach(input => {
        input.addEventListener('change', updatePaymentTotal);
    });

    function processPayment() {
        const total = parseFloat(document.getElementById('totalAmount').textContent);
        if (total === 0) {
            showNotification('Please select a plan or features', 'warning');
            return;
        }

        showNotification('Redirecting to Stripe payment...', 'success');

        setTimeout(() => {
            userIsPremium = true;
            updateUIForUserStatus();
            showNotification('Payment successful! Premium features unlocked.', 'success');

            const modal = bootstrap.Modal.getInstance(document.getElementById('paymentModal'));
            modal.hide();
        }, 2000);
    }

    // ===================== THEME MANAGEMENT =====================
    const themeToggle = document.getElementById('themeToggle');
    const themeIcon = themeToggle.querySelector('i');

    const currentTheme = localStorage.getItem('theme') || 'light';
    if (currentTheme === 'dark') {
        document.body.classList.add('dark-mode');
        themeIcon.className = 'bi bi-sun';
    }

    function toggleTheme() {
        document.body.classList.toggle('dark-mode');

        if (document.body.classList.contains('dark-mode')) {
            localStorage.setItem('theme', 'dark');
            themeIcon.className = 'bi bi-sun';
        } else {
            localStorage.setItem('theme', 'light');
            themeIcon.className = 'bi bi-moon';
        }
    }

    themeToggle.addEventListener('click', toggleTheme);

    // ===================== AI BOOK GENERATOR FUNCTIONS =====================
    // All your existing API functions remain exactly the same
    // They are preserved from the previous implementation

    // ===================== INITIALIZATION =====================
    document.addEventListener('DOMContentLoaded', function() {
        checkUserStatus();
        loadSavedResponsesDropdown();

        document.getElementById('UserInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') generateBook();
        });
    });

    // ==== AI Book Generator (dummy data binding) ====
    async function loadSavedResponsesDropdown() {
        try {
            const uid = document.getElementById('UserId').value || '1';
            const bid = document.getElementById('BookId').value || '1';
            const res = await fetch(`/Books/GetSavedResponses?userId=${encodeURIComponent(uid)}&bookId=${encodeURIComponent(bid)}`);
            if (!res.ok) return;
            const data = await res.json();
            const ddl = document.getElementById('savedResponsesDropdown');
            ddl.innerHTML = '<option value="">📚 Load a previously generated book...</option>' +
                (data || []).map(x => `<option value="${x.responseId}">#${x.responseId} — ${x.createdAt}</option>`).join('');
        } catch {}
    }

    async function loadSelectedResponse(responseId) {
        if (!responseId) return;
        try {
            const res = await fetch(`/Books/GetResponseById?id=${encodeURIComponent(responseId)}`);
            if (!res.ok) throw new Error('Failed to load response');
            const data = await res.json();
            document.getElementById('APIRawResponse').value = data.apiRaw || '';
            try { currentBookData = JSON.parse(data.apiRaw || '{}'); } catch { currentBookData = null; }
            showSelectedBook();
            showNotification('Loaded saved book', 'success');
        } catch (e) {
            showNotification(e.message || 'Could not load saved response', 'error');
        }
    }

    function generateDummyResponse(topic, chapterCount) {
        const title = topic && topic.trim() ? `Book: ${topic}` : 'Untitled Book';
        const chapters = [];
        let full = '';
        for (let i = 1; i <= chapterCount; i++) {
            const chTitle = `Chapter ${i}: ${topic} — Key Idea ${i}`;
            const chPara = `This section explores ${topic.toLowerCase()} with emphasis on aspect ${i}. It introduces core concepts, practical examples, and actionable strategies to understand and apply ${topic.toLowerCase()} effectively.`;
            const chContent = `${chPara}\n\nKey points:\n- Point A about ${topic}\n- Point B on technique ${i}\n- Point C for outcomes`;
            chapters.push({ title: chTitle, content: chContent });
            full += `<h2>${chTitle}</h2><p>${chPara}</p><ul><li>Point A about ${topic}</li><li>Point B on technique ${i}</li><li>Point C for outcomes</li></ul>`;
        }
        const ai = {
            title: title,
            status: 'Raw',
            data: {
                style: 'Professional',
                suggest_chapter_name: chapters[0]?.title || 'Introduction',
                content: full,
                highlights: 'Concise highlights for quick scanning.'
            },
            chapters: chapters
        };
        return ai;
    }

    function appendAiMessage(html) {
        const box = document.getElementById('chatContainer');
        const wrap = document.createElement('div');
        wrap.className = 'message message-ai';
        wrap.innerHTML = `<div class="message-avatar">AI</div><div class="message-content">${html}</div>`;
        box.appendChild(wrap);
        box.scrollTop = box.scrollHeight;
    }

    function appendUserMessage(text) {
        const box = document.getElementById('chatContainer');
        const wrap = document.createElement('div');
        wrap.className = 'message message-user';
        wrap.innerHTML = `<div class="message-content">${text}</div><div class="message-avatar">You</div>`;
        box.appendChild(wrap);
        box.scrollTop = box.scrollHeight;
    }

    function generateBook() {
        const userId = document.getElementById('UserId').value || '1';
        const bookId = document.getElementById('BookId').value || '1';
        const chapters = Math.max(1, Math.min(50, parseInt(document.getElementById('Chapter').value || '5', 10)));
        const topic = document.getElementById('UserInput').value || 'Sample Topic';

        appendUserMessage(`Generate a ${chapters}-chapter book about: <strong>${topic}</strong>`);
        appendAiMessage(`<div class="typing-indicator"><span class="typing-dot"></span><span class="typing-dot"></span><span class="typing-dot"></span></div>`);

        setTimeout(() => {
            const ai = generateDummyResponse(topic, chapters);
            currentBookData = ai;
            document.getElementById('APIRawResponse').value = JSON.stringify(ai);

            const list = (ai.chapters || []).map((c, idx) => `<li><strong>${c.title}</strong><br/><span style='color:#64748b;'>${c.content.split('\n')[0]}</span></li>`).join('');
            const html = `<div><h4>${ai.title}</h4><p>Generated ${ai.chapters.length} chapters.</p><ol style='margin-top:.5rem;'>${list}</ol></div>`;
            appendAiMessage(html);
            showNotification('Book generated (dummy)', 'success');
        }, 600);
    }

    function showSelectedBook() {
        if (!currentBookData) { showNotification('No book loaded yet', 'warning'); return; }
        const editor = document.getElementById('bookEditor');
        const data = currentBookData;
        const content = (data.data && data.data.content) ? data.data.content : (data.chapters||[]).map(c => `<h2>${c.title}</h2><p>${(c.content||'').replace(/\n/g,'<br/>')}</p>`).join('');
        editor.innerHTML = `<h2>${data.title || 'Untitled'}</h2>` + content;
        showNotification('Book content loaded in editor (read-only in Free)', 'success');
        // Switch to editor tab for preview
        document.querySelector('[data-tab="editor"]').classList.remove('disabled');
        document.querySelector('[data-tab="editor"]').click();
    }

    async function saveBook() {
        try {
            const apiRaw = document.getElementById('APIRawResponse').value || '';
            if (!apiRaw) { showNotification('Generate a book first', 'warning'); return; }
            const userId = document.getElementById('UserId').value || '1';
            const bookId = document.getElementById('BookId').value || '1';
            const res = await fetch('/Books/SaveBookFromAPI', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ userId: userId, bookId: bookId, apiRaw: apiRaw })
            });
            if (!res.ok) throw new Error(await res.text());
            const msg = await res.text();
            showNotification(msg || 'Book saved', 'success');
        } catch (e) {
            showNotification(e.message || 'Save failed', 'error');
        }
    }
</script>


                            <label class="form-label" for="Title">
                                <i class="fas fa-heading"></i> Book Title
                            </label>
                            <input type="text" id="Title" class="form-control" placeholder="Enter your book title" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="Description">
                                <i class="fas fa-align-left"></i> Description
                            </label>
                            <textarea id="Description" class="form-control" placeholder="Describe what your book is about"></textarea>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="Dedication">
                                <i class="fas fa-align-left"></i> Dedication
                            </label>
                            <textarea id="Dedication" class="form-control" placeholder="Describe to whome this book is Dedicated"></textarea>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="Ghostwriting">
                                <i class="fas fa-align-left"></i> Ghostwriting
                            </label>
                            <textarea id="Ghostwriting" class="form-control" placeholder="Describe who will be Ghost writer"></textarea>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="Epigraph">
                                <i class="fas fa-align-left"></i> Epigraph
                            </label>
                            <textarea id="Epigraph" class="form-control" placeholder="Describe Epigraph of this book"></textarea>
                        </div>


                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" for="CategoryId">
                                        <i class="fas fa-folder"></i> Category
                                    </label>
                                    <select id="CategoryId" class="form-control" required>
                                        <option value="">Select a category</option>
                                        @{
                                            var categories = ViewBag.Categories as System.Collections.IEnumerable;
                                            if (categories != null)
                                            {
                                                foreach (var cat in categories)
                                                {
                                                    var c = (dynamic)cat;
                                                    <option value="@c.CategoryId">@c.CategoryName</option>
                                                }
                                            }
                                            else
                                            {
                                                <option value="1">General</option>
                                                <option value="2">Fiction</option>
                                                <option value="3">Non-Fiction</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" for="Genre">
                                        <i class="fas fa-tags"></i> Genre
                                    </label>
                                    <input type="text" id="Genre" class="form-control" placeholder="e.g., Fantasy, Romance">
                                </div>
                            </div>
                        </div>

                        @*  <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-palette"></i> Cover Design
                            </label>
                            <div class="color-picker-group">
                                <div class="color-picker">
                                    <input type="color" id="PrimaryColor" value="#7c3aed">
                                    <span class="color-label">Primary</span>
                                </div>
                                <div class="color-picker">
                                    <input type="color" id="SecondaryColor" value="#06b6d4">
                                    <span class="color-label">Secondary</span>
                                </div>
                                <div class="color-picker">
                                    <select id="TitleStyle" class="form-control">
                                        <option value="display">Modern</option>
                                        <option value="serif">Classic</option>
                                        <option value="sans">Elegant</option>
                                    </select>
                                    <span class="color-label">Style</span>
                                </div>
                            </div>
                        </div> *@

                        <div class="form-group">
                            <label class="form-label" for="TagsInput">
                                <i class="fas fa-hashtag"></i> Tags
                            </label>
                            <input type="text" id="TagsInput" class="form-control" placeholder="Type a tag and press Enter">
                            <div class="tags-container" id="TagsList">
                                <!-- Tags will be added here dynamically -->
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Action Buttons -->
                <div class="action-buttons">
                    @*  <button class="btn btn-primary" id="createBookBtn">
                        <i class="fas fa-plus-circle"></i> Create Book
                    </button> 
                    <button id="createBookBtn" class="btn btn-primary custom-small-btn" onclick="createNewBook()">
                        <i class="fas fa-plus-circle"></i> Create Book
                    </button>*@
                    <button id="createBookBtn" class="btn btn-primary custom-small-btn">
                        <i class="fas fa-plus-circle"></i> Create Book
                    </button>

                    <a href="/Books/AIGenerateBook" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>

                <!-- Loading Spinner -->
                @*   <div class="loading-spinner" id="loadingSpinner">
                    <div class="book-spinner">
                        <div class="page"></div>
                        <div class="page"></div>
                        <div class="page"></div>
                    </div>
                    <h3>Creating Your Book</h3>
                    <p>We're setting up your new book. This will just take a moment...</p>
                </div> *@
            </div>

            <!-- Right Column - Preview -->
            <div class="preview-container">
                <div class="glass-card">
                    <div class="card-header">
                        <div class="card-icon">
                            <i class="fas fa-eye"></i>
                        </div>
                        <h2 class="card-title">Live Preview</h2>
                    </div>

                    <div class="book-cover" id="bookCover">
                        <h3 class="book-title" id="previewTitle">Your Book Title</h3>
                    </div>

                    <div class="book-meta">
                        <div class="meta-item">
                            <select id="savedResponsesDropdown" class="form-control" onchange="loadSelectedResponse(this.value)">
                                <option value="">📚 Load a previously generated book...</option>
                            </select>

                            <i class="fas fa-folder"></i>
                            <span id="previewCategory">Category</span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-tag"></i>
                            <span id="previewGenre">Genre</span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-palette"></i>
                            <span id="previewStyle">Style</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


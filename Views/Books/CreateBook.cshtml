        // Add event listeners for real-time preview
        if (bookTitle) bookTitle.addEventListener('input', updatePreview);
        if (bookCategory) bookCategory.addEventListener('change', updatePreview);
        if (bookGenre) bookGenre.addEventListener('input', updatePreview);

        // Tags functionality (if you're using it)
        const bookTags = document.getElementById('TagsInput');
        const tagsList = document.getElementById('TagsList');

        if (bookTags && tagsList) {
            bookTags.addEventListener('keydown', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    const tagText = bookTags.value.trim();
                    if (tagText) {
                        addTag(tagText);
                        bookTags.value = '';
                    }
                }
            });

            function addTag(text) {
                const tag = document.createElement('div');
                tag.className = 'tag';
                tag.innerHTML = `
                    ${text}
                    <i class="fas fa-times"></i>
                `;

                tag.querySelector('i').addEventListener('click', function() {
                    tag.remove();
                });

                tagsList.appendChild(tag);
            }
        }

        // Initialize preview
        updatePreview();
    });

</script>

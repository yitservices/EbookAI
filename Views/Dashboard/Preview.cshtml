@{
    ViewData["Title"] = "Preview";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    :root {
        --primary: #7c3aed;
        --secondary: #06b6d4;
        --surface: #ffffff;
        --background: #f8fafc;
        --text-primary: #1e293b;
        --border: #e2e8f0;
        --shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
        --radius: 16px;
    }

    .page-container {
        width: 100%;
        padding: 30px;
        background: var(--background);
        min-height: 100vh;
    }

    .page-header h1 {
        font-size: 2.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 10px;
    }

    .card {
        background: var(--surface);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        border: 1px solid var(--border);
        padding: 30px;
        margin-bottom: 24px;
    }

    .card-header {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 20px;
        color: var(--text-primary);
        border-bottom: 2px solid var(--border);
        padding-bottom: 12px;
    }

    .btn-group {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

    .btn {
        padding: 10px 20px;
        border: 2px solid var(--border);
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        background: var(--surface);
        transition: all 0.3s;
    }

    .btn:hover {
        border-color: var(--primary);
        background: rgba(124, 58, 237, 0.05);
    }

    .btn.active {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        color: white;
        border-color: var(--primary);
    }

    .preview-container {
        border: 2px solid var(--border);
        border-radius: 12px;
        padding: 30px;
        background: white;
        min-height: 600px;
        overflow: auto;
    }

    .preview-ebook {
        max-width: 600px;
        margin: 0 auto;
        font-family: Georgia, serif;
        line-height: 1.8;
    }

    .preview-print {
        max-width: 8.5in;
        margin: 0 auto;
        padding: 1in;
        background: white;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }
</style>

<div class="page-container">
    <div class="page-header">
        <h1><i class="fas fa-eye"></i> Preview</h1>
        <p>Preview your book in different formats and devices</p>
    </div>

    <!-- Book Selection -->
    <div class="card">
        <div class="card-header">Select Book</div>
        <div class="form-group">
            <label class="form-label">Choose Book to Preview</label>
            <select id="bookSelect" class="form-control" onchange="loadBookPreview(this.value)">
                <option value="">-- Select Book --</option>
                @if (ViewBag.UserBooks != null)
                {
                    @foreach (var book in ViewBag.UserBooks)
                    {
                        var isSelected = ViewBag.SelectedBookId != null && ViewBag.SelectedBookId == book.BookId;
                        <option value="@book.BookId" selected="@(isSelected ? "selected" : null)">
                            @book.Title
                        </option>
                    }
                }
            </select>
        </div>
        <input type="hidden" id="userId" value="@ViewBag.UserId" />
        <input type="hidden" id="currentBookId" value="@ViewBag.SelectedBookId" />
    </div>

    <!-- Preview Options -->
    <div class="card">
        <div class="card-header">Preview Options</div>
        <div class="btn-group">
            <button class="btn active" onclick="setPreviewMode('ebook')">eBook</button>
            <button class="btn" onclick="setPreviewMode('print')">Print</button>
        </div>
        <div class="btn-group">
            <button class="btn active" onclick="setPreviewDevice('kindle')">Kindle</button>
            <button class="btn" onclick="setPreviewDevice('ipad')">iPad/Apple Books</button>
            <button class="btn" onclick="setPreviewDevice('tablet')">Tablet</button>
            <button class="btn" onclick="setPreviewDevice('phone')">Phone</button>
        </div>
        <div id="previewContent" class="preview-container">
            <p class="text-muted text-center">Select a book and preview mode to see preview</p>
        </div>
        <div id="previewStatus" class="mt-2 text-muted"></div>
    </div>
</div>

<script>
    let previewMode = 'ebook';
    let previewDevice = 'kindle';

    function getBookId() {
        const bookId = document.getElementById('currentBookId')?.value || document.getElementById('bookSelect')?.value;
        if (!bookId) {
            alert('Please select a book first');
            return null;
        }
        return parseInt(bookId);
    }

    function loadBookPreview(bookId) {
        if (bookId) {
            document.getElementById('currentBookId').value = bookId;
            refreshPreview();
        }
    }

    function setPreviewMode(mode) {
        previewMode = mode;
        document.querySelectorAll('.btn-group .btn').forEach(btn => {
            if (btn.textContent.includes('eBook') || btn.textContent.includes('Print')) {
                btn.classList.remove('active');
            }
        });
        event.target.classList.add('active');
        refreshPreview();
    }

    function setPreviewDevice(device) {
        previewDevice = device;
        document.querySelectorAll('.btn-group .btn').forEach(btn => {
            if (btn.textContent.includes('Kindle') || btn.textContent.includes('iPad') || 
                btn.textContent.includes('Tablet') || btn.textContent.includes('Phone')) {
                btn.classList.remove('active');
            }
        });
        event.target.classList.add('active');
        refreshPreview();
    }

    // Refresh preview - Database connected
    async function refreshPreview() {
        const bookId = getBookId();
        if (!bookId) return;

        const previewContent = document.getElementById('previewContent');
        const status = document.getElementById('previewStatus');
        
        status.textContent = 'Loading preview...';
        previewContent.innerHTML = '<div class="text-center"><div class="spinner-border" role="status"></div></div>';

        try {
            const res = await fetch(`/Books/GetPreviewHtml?bookId=${bookId}&mode=${previewMode}&device=${previewDevice}`);
            const html = await res.text();
            
            if (res.ok) {
                previewContent.innerHTML = html;
                previewContent.className = `preview-container preview-${previewMode}`;
                status.textContent = '';
            } else {
                previewContent.innerHTML = '<p class="text-danger">Failed to load preview</p>';
                status.textContent = 'Preview failed';
            }
        } catch (e) {
            previewContent.innerHTML = `<p class="text-danger">Error: ${e.message}</p>`;
            status.textContent = 'Error loading preview';
        }
    }

    // Auto-refresh on page load if book selected
    document.addEventListener('DOMContentLoaded', function() {
        @if (ViewBag.SelectedBookId != null)
        {
            <text>
            refreshPreview();
            </text>
        }
    });
</script>


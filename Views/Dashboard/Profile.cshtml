                uploadMessage.hide();

                console.log('Sending AJAX request to /Dashboard/UploadProfilePicture');
                console.log('FormData entries:');
                for (let pair of formData.entries()) {
                    console.log(pair[0] + ': ' + (pair[1] instanceof File ? pair[1].name + ' (' + pair[1].size + ' bytes)' : pair[1]));
                }
                
                $.ajax({
                    url: '/Dashboard/UploadProfilePicture',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    headers: token ? {
                        'RequestVerificationToken': token
                    } : {},
                    beforeSend: function(xhr) {
                        console.log('Before send - setting headers');
                        if (token) {
                            xhr.setRequestHeader('RequestVerificationToken', token);
                        }
                    },
                    success: function (response) {
                        console.log('Upload success response:', response);
                        uploadProgress.hide();
                        uploadBtn.prop('disabled', false);
                        cancelBtn.prop('disabled', false);

                        if (response && response.success) {
                            console.log('Upload successful, image path:', response.imagePath);
                            showMessage(response.message || 'Profile picture uploaded successfully', 'success');
                            hideUploadSection();
                            removeBtn.show();

                            // Store in sessionStorage and localStorage to update sidebar
                            if (response.imagePath) {
                                sessionStorage.setItem('newProfilePicture', response.imagePath);
                                localStorage.setItem('profilePicturePath', response.imagePath);
                                
                                // Update sidebar immediately if on same page
                                updateSidebarProfilePicture(response.imagePath);
                            }

                            // Update profile picture display
                            if (response.imagePath) {
                                if (profilePictureDisplay.length) {
                                    profilePictureDisplay.attr('src', response.imagePath + '?t=' + new Date().getTime());
                                } else {
                                    // Replace placeholder with image
                                    const placeholder = $('.profile-picture-placeholder');
                                    if (placeholder.length) {
                                        placeholder.replaceWith(`<img id="profilePictureDisplay" src="${response.imagePath}?t=${new Date().getTime()}" alt="Profile Picture" class="profile-picture-img"><div class="profile-picture-overlay"><button type="button" class="btn-change-picture" onclick="document.getElementById('profilePictureInput').click()"><i class="fas fa-camera"></i></button></div>`);
                                    }
                                }
                            }

                            // Reload page after 1.5 seconds to show updated picture
                            setTimeout(function () {
                                window.location.reload();
                            }, 1500);
                        } else {
                            console.error('Upload failed:', response);
                            showMessage(response ? (response.message || 'Upload failed') : 'Upload failed', 'danger');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Upload error:', {
                            status: xhr.status,
                            statusText: xhr.statusText,
                            responseText: xhr.responseText,
                            error: error
                        });
                        uploadProgress.hide();
                        uploadBtn.prop('disabled', false);
                        cancelBtn.prop('disabled', false);
                        
                        let errorMsg = 'An error occurred while uploading. Please try again.';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMsg = xhr.responseJSON.message;
                        } else if (xhr.responseText) {
                            try {
                                const errorResponse = JSON.parse(xhr.responseText);
                                if (errorResponse.message) {
                                    errorMsg = errorResponse.message;
                                }
                            } catch (e) {
                                // Use default error message
                            }
                        }
                        
                        showMessage(errorMsg, 'danger');
                    }
                });
            }

            // Remove profile picture function
            function removeProfilePicture() {
                const token = $('#profileAntiForgery input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: '/Dashboard/RemoveProfilePicture',
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: token
                    },
                    headers: {
                        'RequestVerificationToken': token || ''
                    },
                    success: function (response) {
                        if (response && response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Removed!',
                                text: response.message || 'Profile picture removed successfully',
                                timer: 1500,
                                showConfirmButton: false
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response ? (response.message || 'Failed to remove profile picture') : 'Failed to remove profile picture'
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'An error occurred while removing. Please try again.'
                        });
                        console.error('Remove error:', xhr, status, error);
                    }
                });
            }

            // Show message function
            function showMessage(message, type) {
                uploadMessage.removeClass('alert-success alert-danger alert-warning alert-info')
                    .addClass('alert-' + type)
                    .html(message)
                    .fadeIn();

                setTimeout(function () {
                    uploadMessage.fadeOut();
                }, 5000);
            }

            // Function to update sidebar profile picture
            function updateSidebarProfilePicture(imagePath) {
                if (!imagePath) {
                    const stored = sessionStorage.getItem('newProfilePicture') || localStorage.getItem('profilePicturePath');
                    if (stored) imagePath = stored;
                }
                
                if (imagePath) {
                    const sidebarAvatar = document.getElementById('sidebarUserAvatar');
                    const sidebarImg = document.getElementById('sidebarProfileImg');
                    
                    if (sidebarAvatar) {
                        if (!sidebarImg) {
                            // Create image element
                            const img = document.createElement('img');
                            img.src = imagePath + '?t=' + new Date().getTime();
                            img.alt = '@Model.UserName';
                            img.className = 'sidebar-profile-img';
                            img.id = 'sidebarProfileImg';
                            
                            // Remove initial
                            const initial = sidebarAvatar.querySelector('.sidebar-avatar-initial');
                            if (initial) initial.remove();
                            
                            sidebarAvatar.appendChild(img);
                            
                            // Add overlay
                            const overlay = document.createElement('div');
                            overlay.className = 'sidebar-avatar-overlay';
                            overlay.innerHTML = '<i class="fas fa-camera"></i>';
                            sidebarAvatar.appendChild(overlay);
                        } else {
                            sidebarImg.src = imagePath + '?t=' + new Date().getTime();
                        }
                    }
                }
            }
        });
    }


    // Open file upload dialog
    function openFileUpload() {
        console.log('Upload button clicked');
        const input = document.getElementById('profilePictureInput');
        if (input) {
            console.log('Opening file picker...');
            input.click();
            
            // Add change listener if not already added
            input.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    console.log('File selected:', file.name, file.size, file.type);
                    
                    // Validate file
                    const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                    const maxSize = 2 * 1024 * 1024; // 2 MB
                    
                    if (!allowedTypes.includes(file.type)) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Invalid File Type',
                            text: 'Please select a JPG, JPEG, or PNG image file.',
                            confirmButtonColor: '#4a6cf7'
                        });
                        return;
                    }
                    
                    if (file.size > maxSize) {
                        Swal.fire({
                            icon: 'error',
                            title: 'File Too Large',
                            text: 'File size must be less than 2 MB. Your file is ' + (file.size / 1024 / 1024).toFixed(2) + ' MB.',
                            confirmButtonColor: '#4a6cf7'
                        });
                        return;
                    }
                    
                    // Show upload section and handle file
                    const uploadSection = document.getElementById('profileUploadSection');
                    if (uploadSection) {
                        uploadSection.style.display = 'block';
                        setTimeout(() => {
                            uploadSection.style.opacity = '1';
                            uploadSection.style.transform = 'translateY(0)';
                        }, 10);
                    }
                    
                    // Try direct upload without jQuery
                    uploadFileDirect(file);
                }
            }, { once: true });
        } else {
            console.error('Input not found!');
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Upload functionality not available. Please refresh the page.',
                confirmButtonColor: '#4a6cf7'
            });
        }
    }

    // Direct upload function without jQuery
    function uploadFileDirect(file) {
        console.log('=== DIRECT UPLOAD STARTED ===');
        const formData = new FormData();
        formData.append('profilePicture', file);
        
        // Get anti-forgery token
        const tokenInput = document.querySelector('#profileAntiForgery input[name="__RequestVerificationToken"]');
        const token = tokenInput ? tokenInput.value : '';
        console.log('Token found:', !!token);
        
        if (token) {
            formData.append('__RequestVerificationToken', token);
        }

        // Show progress
        const progressDiv = document.getElementById('uploadProgress');
        const messageDiv = document.getElementById('uploadMessage');
        if (progressDiv) progressDiv.style.display = 'block';
        if (messageDiv) {
            messageDiv.style.display = 'block';
            messageDiv.className = 'alert alert-info';
            messageDiv.textContent = 'Uploading...';
        }

        // Use fetch API (no jQuery needed)
        fetch('/Dashboard/UploadProfilePicture', {
            method: 'POST',
            body: formData,
            headers: token ? {
                'RequestVerificationToken': token
            } : {}
        })
        .then(response => {
            console.log('Response status:', response.status);
            return response.json();
        })
        .then(data => {
            console.log('Response data:', data);
            if (progressDiv) progressDiv.style.display = 'none';
            
                        if (data && data.success) {
                            if (messageDiv) {
                                messageDiv.className = 'alert alert-success';
                                messageDiv.textContent = data.message || 'Upload successful!';
                            }
                            
                            // Store in sessionStorage to update sidebar
                            if (data.imagePath) {
                                sessionStorage.setItem('newProfilePicture', data.imagePath);
                                localStorage.setItem('profilePicturePath', data.imagePath);
                            }
                            
                            alert('Upload successful! Image path: ' + (data.imagePath || 'N/A'));
                            setTimeout(() => window.location.reload(), 1500);
                        } else {
                if (messageDiv) {
                    messageDiv.className = 'alert alert-danger';
                    messageDiv.textContent = data ? data.message : 'Upload failed';
                }
                alert('Upload failed: ' + (data ? data.message : 'Unknown error'));
            }
        })
        .catch(error => {
            console.error('Upload error:', error);
            if (progressDiv) progressDiv.style.display = 'none';
            if (messageDiv) {
                messageDiv.className = 'alert alert-danger';
                messageDiv.textContent = 'Error: ' + error.message;
            }
            alert('Upload error: ' + error.message);
        });
    }

    // Also make profile picture wrapper clickable
    document.addEventListener('DOMContentLoaded', function() {
        console.log('DOM loaded, setting up click handlers...');
        const wrapper = document.querySelector('.profile-picture-wrapper');
        if (wrapper) {
            console.log('Wrapper found, adding click handler');
            wrapper.addEventListener('click', function(e) {
                if (!e.target.closest('.btn-change-picture')) {
                    console.log('Wrapper clicked');
                    const input = document.getElementById('profilePictureInput');
                    if (input) {
                        input.click();
                    }
                }
            });
        } else {
            console.warn('Wrapper not found');
        }
    });

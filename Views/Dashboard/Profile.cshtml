@model EBookDashboard.Models.DashboardProfileViewModel

@{
    ViewData["Title"] = "Profile - eBook Publisher";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- Add jQuery if not already loaded -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // Ensure jQuery is loaded
    if (typeof jQuery === 'undefined') {
        document.write('<script src="https://code.jquery.com/jquery-3.6.0.min.js"><\/script>');
    }
</script>

<form id="profileAntiForgery" method="post" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" />
</form>

<div class="profile-container">
    <header class="top-header" data-aos="fade-down">
        <div class="header-left">
            <h1>My Profile</h1>
            <p>Manage your account settings and preferences</p>
        </div>
        <div class="header-actions">
            <button class="btn btn-outline" onclick="exportProfileData()">
                <i class="fas fa-download"></i> Export Data
            </button>
        </div>
    </header>

    <div class="profile-content" data-aos="fade-up" data-aos-delay="200">
        <div class="profile-grid">
            <!-- Profile Info Card -->
            <div class="profile-card" data-aos="fade-right" data-aos-delay="300">
                <div class="card-header">
                    <h3><i class="fas fa-user"></i> Personal Information</h3>
                    <button class="btn-icon" onclick="editProfile()">
                        <i class="fas fa-edit"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div class="profile-avatar-section">
                        <!-- Profile Picture Display/Upload -->
                        <div class="profile-picture-container">
                            <div class="profile-picture-wrapper">
                                @if (!string.IsNullOrEmpty(ViewBag.ProfilePicturePath as string))
                                {
                                    <img id="profilePictureDisplay" src="@ViewBag.ProfilePicturePath" alt="Profile Picture" class="profile-picture-img">
                                    <div class="profile-picture-overlay">
                                        <button type="button" class="btn-change-picture" onclick="document.getElementById('profilePictureInput').click()">
                                            <i class="fas fa-camera"></i>
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <div class="profile-picture-placeholder">
                                        @{
                                            var firstLetter = Model.UserName.Substring(0, 1).ToUpper();
                                        }
                                        <span class="placeholder-text">@firstLetter</span>
                                        <div class="profile-picture-overlay">
                                            <button type="button" class="btn-change-picture" onclick="document.getElementById('profilePictureInput').click()">
                                                <i class="fas fa-camera"></i>
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                            <input type="file" id="profilePictureInput" accept=".jpg,.jpeg,.png" style="display: none;">
                            <p class="profile-picture-hint">Click to upload profile picture</p>
                            <!-- Upload Button -->
                            <div style="margin-top: 15px; display: flex; justify-content: center;">
                                <button type="button" onclick="openFileUpload()" class="btn-upload-profile">
                                    <i class="fas fa-cloud-upload-alt"></i> Upload Picture
                                </button>
                            </div>
                        </div>
                        <div class="avatar-info">
                            <h4>@Model.UserName</h4>
                            <p class="user-role @(Model.UserRole.ToLower())-role">
                                <i class="fas fa-book-reader"></i> @Model.UserRole
                            </p>
                            <div class="profile-stats">
                                <div class="stat">
                                    <span class="number">@Model.TotalBooks</span>
                                    <span class="label">Books</span>
                                </div>
                                <div class="stat">
                                    <span class="number">@Model.BooksReading</span>
                                    <span class="label">Reading</span>
                                </div>
                                <div class="stat">
                                    <span class="number">@Model.Reviews</span>
                                    <span class="label">Reviews</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Profile Picture Upload Section -->
                    <div class="profile-upload-section" id="profileUploadSection" style="display: none;">
                        <div class="upload-area-wrapper">
                            <div class="profile-upload-area" id="profileUploadArea">
                                <input type="file" id="profilePictureUploadInput" accept=".jpg,.jpeg,.png" style="display: none;">
                                <div class="upload-content">
                                    <i class="fas fa-cloud-upload-alt upload-icon-large"></i>
                                    <p class="upload-text-main">Drop your image here or click to upload</p>
                                    <p class="upload-text-sub">Supported formats: JPG, JPEG, PNG (Max 2 MB)</p>
                                </div>
                            </div>
                            <div class="upload-preview-container">
                                <div class="upload-preview-wrapper">
                                    <img id="uploadPreview" src="" alt="Preview" class="upload-preview-img" style="display: none;">
                                    <div id="uploadPreviewPlaceholder" class="upload-preview-placeholder">
                                        <i class="fas fa-image"></i>
                                        <p>Preview will appear here</p>
                                    </div>
                                </div>
                                <div class="upload-actions">
                                    <button type="button" class="btn btn-primary" id="uploadProfileBtn" style="display: none;">
                                        <i class="fas fa-upload"></i> Upload Picture
                                    </button>
                                    <button type="button" class="btn btn-danger" id="removeProfileBtn" style="display: @(string.IsNullOrEmpty(ViewBag.ProfilePicturePath as string) ? "none" : "inline-block");">
                                        <i class="fas fa-trash"></i> Remove Picture
                                    </button>
                                    <button type="button" class="btn btn-secondary" id="cancelUploadBtn" style="display: none;">
                                        <i class="fas fa-times"></i> Cancel
                                    </button>
                                </div>
                                <div id="uploadProgress" class="upload-progress" style="display: none;">
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 100%"></div>
                                    </div>
                                    <p class="text-center mt-2 mb-0">Uploading...</p>
                                </div>
                                <div id="uploadMessage" class="alert mt-3" style="display: none;"></div>
                            </div>
                        </div>
                    </div>

                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="info-content">
                                <label>Full Name</label>
                                <p>@Model.UserName</p>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="info-content">
                                <label>Email Address</label>
                                <p>@Model.UserEmail</p>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-calendar"></i>
                            </div>
                            <div class="info-content">
                                <label>Member Since</label>
                                <p>@Model.MemberSince.ToString("MMMM yyyy")</p>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-globe"></i>
                            </div>
                            <div class="info-content">
                                <label>Country</label>
                                <p>@Model.Country</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reading Stats Card -->
            <div class="profile-card" data-aos="fade-up" data-aos-delay="600">
                <div class="card-header">
                    <h3><i class="fas fa-chart-bar"></i> Reading Statistics</h3>
                </div>
                <div class="card-body">
                    <div class="stats-grid">
                        <div class="stat-card">
                            <div class="stat-icon books-read">
                                <i class="fas fa-book"></i>
                            </div>
                            <div class="stat-content">
                                <span class="number">@Model.BooksRead</span>
                                <span class="label">Books Read</span>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon reading-time">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="stat-content">
                                <span class="number">@Model.ReadingHours</span>
                                <span class="label">Hours Read</span>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon pages-read">
                                <i class="fas fa-file-alt"></i>
                            </div>
                            <div class="stat-content">
                                <span class="number">@Model.PagesRead.ToString("N0")</span>
                                <span class="label">Pages Read</span>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-icon streak">
                                <i class="fas fa-fire"></i>
                            </div>
                            <div class="stat-content">
                                <span class="number">@Model.ReadingStreak</span>
                                <span class="label">Day Streak</span>
                            </div>
                        </div>
                    </div>

                    <div class="progress-section">
                        <div class="progress-item">
                            <div class="progress-info">
                                <span>Monthly Goal</span>
                                <span>8/10 books</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: 80%"></div>
                            </div>
                        </div>
                        <div class="progress-item">
                            <div class="progress-info">
                                <span>Yearly Challenge</span>
                                <span>47/100 books</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: 47%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Change Password Modal -->
<div id="changePasswordModal" class="modal">
    <div class="modal-content" data-aos="zoom-in">
        <div class="modal-header">
            <h3><i class="fas fa-key"></i> Change Password</h3>
            <span class="close" onclick="closeModal('changePasswordModal')">&times;</span>
        </div>
        <div class="modal-body">
            <form id="changePasswordForm">
                <div class="form-group">
                    <label for="currentPassword">Current Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="currentPassword" class="form-control" placeholder="Enter current password" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="newPassword">New Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="newPassword" class="form-control" placeholder="Enter new password" required>
                    </div>
                    <div class="password-strength" id="passwordStrength">
                        <div class="strength-bar">
                            <div class="strength-fill" id="strengthFill"></div>
                        </div>
                        <span id="strengthText">Password strength</span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm New Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="confirmPassword" class="form-control" placeholder="Confirm new password" required>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Update Password
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="closeModal('changePasswordModal')">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Subscription Modal -->
<div id="subscriptionModal" class="modal">
    <div class="modal-content subscription-modal" data-aos="zoom-in">
        <div class="modal-header">
            <h3><i class="fas fa-crown"></i> Choose Your Plan</h3>
            <span class="close" onclick="closeModal('subscriptionModal')">&times;</span>
        </div>
        <div class="modal-body">
            <div class="pricing-container">
                <div class="pricing-cards-horizontal">
                    <!-- Basic Plan -->
                    <div class="pricing-card-horizontal">
                        <div class="plan-header">
                            <div class="plan-icon">
                                <i class="fas fa-book"></i>
                            </div>
                            <h4>Basic Plan</h4>
                            <div class="price">$19<span>/month</span></div>
                        </div>
                        <div class="plan-features">
                            <div class="feature-item">
                                <i class="fas fa-check"></i>
                                <span>Ebook formatting</span>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-check"></i>
                                <span>Basic cover design</span>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-check"></i>
                                <span>Distribution to 3 platforms</span>
                            </div>
                            <div class="feature-item disabled">
                                <i class="fas fa-times"></i>
                                <span>AI cover design</span>
                            </div>
                            <div class="feature-item disabled">
                                <i class="fas fa-times"></i>
                                <span>Advanced analytics</span>
                            </div>
                        </div>
                        <button class="btn btn-outline full-width">
                            <i class="fas fa-check"></i> Current Plan
                        </button>
                    </div>

                    <!-- Premium Plan -->
                    <div class="pricing-card-horizontal popular">
                        <div class="popular-badge">Most Popular</div>
                        <div class="plan-header">
                            <div class="plan-icon premium">
                                <i class="fas fa-crown"></i>
                            </div>
                            <h4>Premium Plan</h4>
                            <div class="price">$29<span>/month</span></div>
                        </div>
                        <div class="plan-features">
                            <div class="feature-item">
                                <i class="fas fa-check"></i>
                                <span>Everything in Basic</span>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-check"></i>
                                <span>AI cover design</span>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-check"></i>
                                <span>Advanced analytics</span>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-check"></i>
                                <span>Priority support</span>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-check"></i>
                                <span>Marketing tools</span>
                            </div>
                        </div>
                        <button class="btn btn-primary full-width">
                            <i class="fas fa-rocket"></i> Upgrade Now
                        </button>
                    </div>

                    <!-- Enterprise Plan -->
                    <div class="pricing-card-horizontal">
                        <div class="plan-header">
                            <div class="plan-icon enterprise">
                                <i class="fas fa-star"></i>
                            </div>
                            <h4>Enterprise Plan</h4>
                            <div class="price">$99<span>/month</span></div>
                        </div>
                        <div class="plan-features">
                            <div class="feature-item">
                                <i class="fas fa-check"></i>
                                <span>Everything in Premium</span>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-check"></i>
                                <span>Audio book creation</span>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-check"></i>
                                <span>White-label options</span>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-check"></i>
                                <span>Custom integrations</span>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-check"></i>
                                <span>Dedicated account manager</span>
                            </div>
                        </div>
                        <button class="btn btn-outline full-width">
                            <i class="fas fa-headset"></i> Contact Sales
                        </button>
                    </div>
                </div>

                <div class="plan-comparison">
                    <h4>Plan Comparison</h4>
                    <div class="comparison-table">
                        <div class="comparison-row header">
                            <div class="comparison-feature">Feature</div>
                            <div class="comparison-plan">Basic</div>
                            <div class="comparison-plan">Premium</div>
                            <div class="comparison-plan">Enterprise</div>
                        </div>
                        <div class="comparison-row">
                            <div class="comparison-feature">Ebook Formatting</div>
                            <div class="comparison-plan"><i class="fas fa-check"></i></div>
                            <div class="comparison-plan"><i class="fas fa-check"></i></div>
                            <div class="comparison-plan"><i class="fas fa-check"></i></div>
                        </div>
                        <div class="comparison-row">
                            <div class="comparison-feature">AI Cover Design</div>
                            <div class="comparison-plan"><i class="fas fa-times"></i></div>
                            <div class="comparison-plan"><i class="fas fa-check"></i></div>
                            <div class="comparison-plan"><i class="fas fa-check"></i></div>
                        </div>
                        <div class="comparison-row">
                            <div class="comparison-feature">Advanced Analytics</div>
                            <div class="comparison-plan"><i class="fas fa-times"></i></div>
                            <div class="comparison-plan"><i class="fas fa-check"></i></div>
                            <div class="comparison-plan"><i class="fas fa-check"></i></div>
                        </div>
                        <div class="comparison-row">
                            <div class="comparison-feature">Audio Book Creation</div>
                            <div class="comparison-plan"><i class="fas fa-times"></i></div>
                            <div class="comparison-plan"><i class="fas fa-times"></i></div>
                            <div class="comparison-plan"><i class="fas fa-check"></i></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .subscription-modal {
        max-width: 1000px !important;
        width: 95% !important;
    }

    .pricing-container {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .pricing-cards-horizontal {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin-bottom: 10px;
    }

    .pricing-card-horizontal {
        background: white;
        border: 2px solid #e2e8f0;
        border-radius: 16px;
        padding: 25px;
        text-align: center;
        transition: all 0.3s ease;
        position: relative;
        display: flex;
        flex-direction: column;
        height: fit-content;
    }

        .pricing-card-horizontal:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            border-color: #4a6cf7;
        }

        .pricing-card-horizontal.popular {
            border-color: #4a6cf7;
            background: linear-gradient(135deg, #f8faff, #f0f4ff);
            transform: scale(1.02);
        }

            .pricing-card-horizontal.popular:hover {
                transform: scale(1.02) translateY(-5px);
            }

    .popular-badge {
        position: absolute;
        top: -12px;
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(135deg, #4a6cf7, #6b46c1);
        color: white;
        padding: 6px 20px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        white-space: nowrap;
    }

    .plan-header {
        margin-bottom: 25px;
    }

    .plan-icon {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        color: white;
        font-size: 1.5rem;
    }

        .plan-icon.premium {
            background: linear-gradient(135deg, #fbbf24, #f59e0b);
        }

        .plan-icon.enterprise {
            background: linear-gradient(135deg, #10b981, #059669);
        }

    .plan-header h4 {
        font-size: 1.4rem;
        font-weight: 700;
        color: #1e293b;
        margin: 0 0 10px 0;
    }

    .plan-header .price {
        font-size: 2.2rem;
        font-weight: 800;
        color: #4a6cf7;
        margin: 0;
    }

        .plan-header .price span {
            font-size: 1rem;
            color: #64748b;
            font-weight: normal;
        }

    .plan-features {
        flex: 1;
        margin-bottom: 25px;
        text-align: left;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 10px 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

        .feature-item:last-child {
            border-bottom: none;
        }

        .feature-item i {
            width: 20px;
            text-align: center;
        }

            .feature-item i.fa-check {
                color: #22c55e;
            }

            .feature-item i.fa-times {
                color: #ef4444;
            }

        .feature-item.disabled {
            color: #94a3b8;
        }

        .feature-item span {
            font-size: 0.95rem;
            font-weight: 500;
            color: #374151;
        }

        .feature-item.disabled span {
            color: #94a3b8;
        }

    .full-width {
        width: 100%;
        margin-top: auto;
    }

    /* Plan Comparison Table */
    .plan-comparison {
        background: white;
        border-radius: 16px;
        padding: 25px;
        border: 1px solid #e2e8f0;
    }

        .plan-comparison h4 {
            font-size: 1.3rem;
            font-weight: 700;
            color: #1e293b;
            margin: 0 0 20px 0;
            text-align: center;
        }

    .comparison-table {
        display: table;
        width: 100%;
        border-collapse: collapse;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .comparison-row {
        display: table-row;
    }

        .comparison-row.header {
            background: linear-gradient(135deg, #4a6cf7, #6b46c1);
            color: white;
        }

        .comparison-row:not(.header):nth-child(even) {
            background: #f8fafc;
        }

    .comparison-feature, .comparison-plan {
        display: table-cell;
        padding: 15px 20px;
        border-bottom: 1px solid #e2e8f0;
        vertical-align: middle;
    }

    .comparison-row.header .comparison-feature,
    .comparison-row.header .comparison-plan {
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .comparison-feature {
        font-weight: 600;
        color: #374151;
        width: 40%;
        border-right: 1px solid #e2e8f0;
    }

    .comparison-row.header .comparison-feature {
        border-right: 1px solid rgba(255, 255, 255, 0.2);
    }

    .comparison-plan {
        text-align: center;
        width: 20%;
        font-weight: 500;
    }

        .comparison-plan i.fa-check {
            color: #22c55e;
            font-size: 1.1rem;
        }

        .comparison-plan i.fa-times {
            color: #ef4444;
            font-size: 1.1rem;
        }

    /* Responsive Design for Modal */
    @@media (max-width: 1024px) {
        .subscription-modal {
            max-width: 95% !important;
            margin: 20px;
        }

        .pricing-cards-horizontal {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .subscription-modal {
            max-width: 100% !important;
            margin: 10px;
            border-radius: 12px;
        }

        .pricing-cards-horizontal {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .pricing-card-horizontal.popular {
            transform: scale(1);
        }

            .pricing-card-horizontal.popular:hover {
                transform: translateY(-5px);
            }

        .plan-comparison {
            padding: 20px 15px;
        }

        .comparison-table {
            display: block;
            overflow-x: auto;
        }

        .comparison-row {
            display: flex;
            border-bottom: 1px solid #e2e8f0;
        }

            .comparison-row.header {
                display: none;
            }

        .comparison-feature, .comparison-plan {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            border: none;
            border-right: 1px solid #e2e8f0;
        }

        .comparison-feature {

@{
    ViewData["Title"] = "Profile - eBook Publisher";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="profile-container">
    <header class="top-header" data-aos="fade-down">
        <div class="header-left">
            <h1>My Profile</h1>
            <p>Manage your account settings and preferences</p>
        </div>
    </header>

    <div class="profile-content" data-aos="fade-up" data-aos-delay="200">
        <div class="profile-grid">
            <!-- Profile Info Card -->
            <div class="profile-card" data-aos="fade-right" data-aos-delay="300">
                <div class="card-header">
                    <h3><i class="fas fa-user"></i> Personal Information</h3>
                </div>
                <div class="card-body">
                    <div class="profile-avatar-section">
                        <div class="profile-avatar">
                            @{
                                var userName = User.Identity?.Name ?? "Reader";
                                var firstLetter = userName.Substring(0, 1).ToUpper();
                            }
                            @firstLetter
                        </div>
                        <div class="avatar-info">
                            <h4>@userName</h4>
                            <p class="user-role reader-role">
                                <i class="fas fa-book-reader"></i> Reader
                            </p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="fullName">Full Name</label>
                        <div class="input-wrapper">
                            <i class="fas fa-user"></i>
                            <input type="text" id="fullName" class="form-control" value="@userName" readonly>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <div class="input-wrapper">
                            <i class="fas fa-envelope"></i>
                            <input type="email" id="email" class="form-control" value="@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value" readonly>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="memberSince">Member Since</label>
                        <div class="input-wrapper">
                            <i class="fas fa-calendar"></i>
                            <input type="text" id="memberSince" class="form-control" value="January 2023" readonly>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Settings Card -->
            <div class="profile-card" data-aos="fade-left" data-aos-delay="400">
                <div class="card-header">
                    <h3><i class="fas fa-cog"></i> Account Settings</h3>
                </div>
                <div class="card-body">
                    <div class="setting-item">
                        <div class="setting-info">
                            <h4>Change Password</h4>
                            <p>Update your account password</p>
                        </div>
                        <button class="btn btn-primary" onclick="showChangePasswordModal()">
                            <i class="fas fa-key"></i> Change
                        </button>
                    </div>

                    <div class="setting-item">
                        <div class="setting-info">
                            <h4>Notification Preferences</h4>
                            <p>Manage email and push notifications</p>
                        </div>
                        <button class="btn btn-secondary" onclick="showNotificationsModal()">
                            <i class="fas fa-bell"></i> Configure
                        </button>
                    </div>

                    <div class="setting-item">
                        <div class="setting-info">
                            <h4>Privacy Settings</h4>
                            <p>Control your data and privacy</p>
                        </div>
                        <button class="btn btn-secondary" onclick="showPrivacyModal()">
                            <i class="fas fa-shield-alt"></i> Manage
                        </button>
                    </div>

                    <div class="setting-item">
                        <div class="setting-info">
                            <h4>Subscription Plan</h4>
                            <p>View or change your plan</p>
                        </div>
                        <button class="btn btn-primary" onclick="showSubscriptionModal()">
                            <i class="fas fa-crown"></i> View Plan
                        </button>
                    </div>
                </div>
            </div>

            <!-- Subscription Info Card -->
            <div class="profile-card" data-aos="fade-up" data-aos-delay="500">
                <div class="card-header">
                    <h3><i class="fas fa-receipt"></i> Subscription Details</h3>
                </div>
                <div class="card-body">
                    <div class="subscription-info">
                        <div class="subscription-badge">
                            <span class="badge premium">Premium Plan</span>
                        </div>
                        <div class="subscription-details">
                            <p><strong>Next Billing Date:</strong> March 15, 2024</p>
                            <p><strong>Amount:</strong> $29.99/month</p>
                            <p><strong>Features:</strong> AI Cover Design, Advanced Analytics, Priority Support</p>
                        </div>
                        <div class="subscription-actions">
                            <button class="btn btn-primary" onclick="manageSubscription()">
                                <i class="fas fa-edit"></i> Manage
                            </button>
                            <button class="btn btn-secondary" onclick="cancelSubscription()">
                                <i class="fas fa-times"></i> Cancel
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Change Password Modal -->
<div id="changePasswordModal" class="modal">
    <div class="modal-content" data-aos="zoom-in">
        <div class="modal-header">
            <h3><i class="fas fa-key"></i> Change Password</h3>
            <span class="close" onclick="closeModal('changePasswordModal')">&times;</span>
        </div>
        <div class="modal-body">
            <form id="changePasswordForm">
                <div class="form-group">
                    <label for="currentPassword">Current Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="currentPassword" class="form-control" placeholder="Enter current password" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="newPassword">New Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="newPassword" class="form-control" placeholder="Enter new password" required>
                    </div>
                    <div class="password-strength" id="passwordStrength">
                        <div class="strength-bar"></div>
                        <span id="strengthText">Password strength</span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm New Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="confirmPassword" class="form-control" placeholder="Confirm new password" required>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Update Password
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="closeModal('changePasswordModal')">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Subscription Modal -->
<div id="subscriptionModal" class="modal">
    <div class="modal-content" data-aos="zoom-in">
        <div class="modal-header">
            <h3><i class="fas fa-crown"></i> Subscription Plans</h3>
            <span class="close" onclick="closeModal('subscriptionModal')">&times;</span>
        </div>
        <div class="modal-body">
            <div class="pricing-cards">
                <div class="pricing-card">
                    <h4>Basic Plan</h4>
                    <div class="price">$19<span>/month</span></div>
                    <ul>
                        <li><i class="fas fa-check"></i> Ebook formatting</li>
                        <li><i class="fas fa-check"></i> Basic cover design</li>
                        <li><i class="fas fa-check"></i> Distribution to 3 platforms</li>
                        <li><i class="fas fa-times"></i> AI cover design</li>
                        <li><i class="fas fa-times"></i> Advanced analytics</li>
                    </ul>
                    <button class="btn btn-outline">Current Plan</button>
                </div>

                <div class="pricing-card popular">
                    <div class="popular-badge">Most Popular</div>
                    <h4>Premium Plan</h4>
                    <div class="price">$29<span>/month</span></div>
                    <ul>
                        <li><i class="fas fa-check"></i> Everything in Basic</li>
                        <li><i class="fas fa-check"></i> AI cover design</li>
                        <li><i class="fas fa-check"></i> Advanced analytics</li>
                        <li><i class="fas fa-check"></i> Priority support</li>
                        <li><i class="fas fa-check"></i> Marketing tools</li>
                    </ul>
                    <button class="btn btn-primary">Upgrade</button>
                </div>

                <div class="pricing-card">
                    <h4>Enterprise Plan</h4>
                    <div class="price">$99<span>/month</span></div>
                    <ul>
                        <li><i class="fas fa-check"></i> Everything in Premium</li>
                        <li><i class="fas fa-check"></i> Audio book creation</li>
                        <li><i class="fas fa-check"></i> White-label options</li>
                        <li><i class="fas fa-check"></i> Custom integrations</li>
                        <li><i class="fas fa-check"></i> Dedicated account manager</li>
                    </ul>
                    <button class="btn btn-outline">Contact Sales</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-container {
        padding: 20px;
    }

    .profile-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
        margin-top: 20px;
    }

    .profile-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .profile-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 45px rgba(0, 0, 0, 0.15);
    }

    .card-header {
        padding: 20px;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .card-header h3 {
        margin: 0;
        color: #667eea;
        font-size: 1.3rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .card-body {
        padding: 25px;
    }

    .profile-avatar-section {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .profile-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2rem;
        font-weight: bold;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

    .avatar-info h4 {
        margin: 0 0 10px 0;
        font-size: 1.4rem;
        font-weight: 600;
        color: #333;
    }

    .user-role {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .reader-role {
        background: rgba(102, 126, 234, 0.1);
        color: #667eea;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        color: #333;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .input-wrapper {
        position: relative;
    }

    .input-wrapper i {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #667eea;
        z-index: 2;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px 12px 45px;
        border: 2px solid rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.9);
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        background: white;
    }

    .form-control[readonly] {
        background: rgba(245, 245, 245, 0.8);
        cursor: not-allowed;
    }

    .setting-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .setting-item:last-child {
        border-bottom: none;
    }

    .setting-info h4 {
        margin: 0 0 5px 0;
        font-size: 1rem;
        font-weight: 600;
        color: #333;
    }

    .setting-info p {
        margin: 0;
        color: #666;
        font-size: 0.9rem;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }

    .btn-secondary {
        background: #6c757d;
        color: white;
    }

    .btn-outline {
        background: transparent;
        border: 2px solid #667eea;
        color: #667eea;
    }

    .subscription-info {
        text-align: center;
    }

    .subscription-badge {
        margin-bottom: 20px;
    }

    .badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
    }

    .badge.premium {
        background: linear-gradient(135deg, #ff9800, #f57c00);
        color: white;
    }

    .subscription-details {
        text-align: left;
        margin-bottom: 25px;
    }

    .subscription-details p {
        margin: 10px 0;
        color: #666;
    }

    .subscription-actions {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .pricing-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin: 20px 0;
    }

    .pricing-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        padding: 25px;
        text-align: center;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
        position: relative;
        transition: all 0.3s ease;
    }

    .pricing-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }

    .pricing-card.popular {
        border: 2px solid #667eea;
        transform: scale(1.05);
    }

    .popular-badge {
        position: absolute;
        top: -12px;
        right: 20px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .price {
        font-size: 2rem;
        font-weight: 700;
        margin: 20px 0;
        color: #667eea;
    }

    .price span {
        font-size: 1rem;
        color: #666;
        font-weight: normal;
    }

    .pricing-card ul {
        list-style: none;
        padding: 0;
        margin: 25px 0;
        text-align: left;
    }

    .pricing-card ul li {
        padding: 8px 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .pricing-card ul li i.fa-check {
        color: #4caf50;
    }

    .pricing-card ul li i.fa-times {
        color: #f44336;
    }

    .password-strength {
        margin-top: 10px;
    }

    .strength-bar {
        height: 5px;
        background: #eee;
        border-radius: 3px;
        margin-bottom: 5px;
        overflow: hidden;
    }

    .strength-bar::after {
        content: '';
        display: block;
        height: 100%;
        width: 0%;
        background: #ccc;
        transition: width 0.3s ease, background 0.3s ease;
    }

    #strengthText {
        font-size: 0.8rem;
        color: #666;
    }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .profile-container {
            padding: 15px;
        }

        .profile-grid {
            grid-template-columns: 1fr;
        }

        .profile-card {
            margin-bottom: 20px;
        }

        .profile-avatar-section {
            flex-direction: column;
            text-align: center;
        }

        .setting-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }

        .subscription-actions {
            flex-direction: column;
        }

        .pricing-cards {
            grid-template-columns: 1fr;
        }

        .pricing-card.popular {
            transform: scale(1);
        }
    }
</style>

<script>
    // Initialize AOS
    AOS.init({
        duration: 600,
        easing: 'ease-out',
        once: true
    });

    // Modal functions
    function showModal(modalId) {
        document.getElementById(modalId).style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }

    function closeModal(modalId) {
        document.getElementById(modalId).style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    function showChangePasswordModal() {
        showModal('changePasswordModal');
    }

    function showSubscriptionModal() {
        showModal('subscriptionModal');
    }

    function showNotificationsModal() {
        Swal.fire({
            title: 'Notification Settings',
            html: `
                <div style="text-align: left;">
                    <div style="margin-bottom: 15px;">
                        <label style="display: flex; align-items: center;">
                            <input type="checkbox" checked style="margin-right: 10px;"> 
                            <span>Email notifications for new messages</span>
                        </label>
                    </div>
                    <div style="margin-bottom: 15px;">
                        <label style="display: flex; align-items: center;">
                            <input type="checkbox" checked style="margin-right: 10px;"> 
                            <span>Push notifications for important updates</span>
                        </label>
                    </div>
                    <div style="margin-bottom: 15px;">
                        <label style="display: flex; align-items: center;">
                            <input type="checkbox" style="margin-right: 10px;"> 
                            <span>Newsletter and promotional emails</span>
                        </label>
                    </div>
                </div>
            `,
            showCancelButton: true,
            confirmButtonText: 'Save Settings',
            cancelButtonText: 'Cancel'
        });
    }

    function showPrivacyModal() {
        Swal.fire({
            title: 'Privacy Settings',
            html: `
                <div style="text-align: left;">
                    <p>Control your privacy preferences:</p>
                    <div style="margin-bottom: 15px;">
                        <label style="display: flex; align-items: center;">
                            <input type="checkbox" checked style="margin-right: 10px;"> 
                            <span>Allow profile to be visible to other users</span>
                        </label>
                    </div>
                    <div style="margin-bottom: 15px;">
                        <label style="display: flex; align-items: center;">
                            <input type="checkbox" checked style="margin-right: 10px;"> 
                            <span>Allow data to be used for analytics</span>
                        </label>
                    </div>
                    <div style="margin-bottom: 15px;">
                        <label style="display: flex; align-items: center;">
                            <input type="checkbox" style="margin-right: 10px;"> 
                            <span>Share reading preferences with publishers</span>
                        </label>
                    </div>
                </div>
            `,
            showCancelButton: true,
            confirmButtonText: 'Save Settings',
            cancelButtonText: 'Cancel'
        });
    }

    function manageSubscription() {
        showSubscriptionModal();
    }

    function cancelSubscription() {
        Swal.fire({
            title: 'Cancel Subscription',
            text: 'Are you sure you want to cancel your Premium subscription? You will lose access to premium features at the end of your billing period.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, cancel it'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire(
                    'Cancelled!',
                    'Your subscription has been cancelled. You can reactivate it anytime.',
                    'success'
                );
            }
        });
    }

    // Password strength checker
    document.getElementById('newPassword').addEventListener('input', function() {
        const password = this.value;
        const strengthBar = document.querySelector('.strength-bar::after');
        const strengthText = document.getElementById('strengthText');
        
        let strength = 0;
        const checks = [
            password.length >= 8,
            /[a-z]/.test(password),
            /[A-Z]/.test(password),
            /[0-9]/.test(password),
            /[^a-zA-Z0-9]/.test(password)
        ];
        
        strength = checks.filter(check => check).length;
        
        const bar = document.querySelector('.strength-bar::after');
        const width = (strength / 5) * 100;
        
        // Update strength bar
        document.querySelector('.strength-bar').style.background = 
            `linear-gradient(to right, ${getStrengthColor(strength)} ${width}%, #eee ${width}%)`;
        
        // Update text
        const strengthLabels = ['Very Weak', 'Weak', 'Fair', 'Good', 'Strong'];
        strengthText.textContent = strength > 0 ? strengthLabels[strength - 1] : 'Password strength';
        strengthText.style.color = getStrengthColor(strength);
    });
    
    function getStrengthColor(strength) {
        const colors = ['#ef4444', '#ef4444', '#f59e0b', '#22c55e', '#22c55e'];
        return colors[strength] || '#ccc';
    }

    // Form submission
    document.getElementById('changePasswordForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const currentPassword = document.getElementById('currentPassword').value;
        const newPassword = document.getElementById('newPassword').value;
        const confirmPassword = document.getElementById('confirmPassword').value;
        
        if (newPassword !== confirmPassword) {
            Swal.fire({
                title: 'Error!',
                text: 'New passwords do not match!',
                icon: 'error',
                confirmButtonText: 'OK'
            });
            return;
        }
        
        if (newPassword.length < 8) {
            Swal.fire({
                title: 'Error!',
                text: 'Password must be at least 8 characters long!',
                icon: 'error',
                confirmButtonText: 'OK'
            });
            return;
        }
        
        // Simulate password change
        Swal.fire({
            title: 'Success!',
            text: 'Password updated successfully!',
            icon: 'success',
            confirmButtonText: 'OK'
        });
        
        closeModal('changePasswordModal');
        this.reset();
    });

    // Close modals when clicking outside
    window.addEventListener('click', function(event) {
        const modals = document.querySelectorAll('.modal');
        modals.forEach(modal => {
            if (event.target === modal) {
                closeModal(modal.id);
            }
        });
    });
</script>
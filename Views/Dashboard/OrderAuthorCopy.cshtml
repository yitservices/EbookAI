    <script>
        // DOM Elements
        const themeToggle = document.getElementById('themeToggle');
        const publishEbookBtn = document.getElementById('publishEbookBtn');
        const previewBtn = document.getElementById('previewBtn');
        const logoutBtn = document.getElementById('logoutBtn');
        const orderBtn = document.getElementById('orderBtn');
        const quantityInput = document.getElementById('quantity');
        const addressTextarea = document.getElementById('address');
        const successModal = document.getElementById('successModal');
        const closeButtons = document.querySelectorAll('.close');
        const toast = document.getElementById('toast');
        const deliveryDate = document.getElementById('deliveryDate');

        // Summary Elements
        const summaryQuantity = document.getElementById('summaryQuantity');
        const subtotal = document.getElementById('subtotal');
        const shippingCost = document.getElementById('shippingCost');
        const totalCost = document.getElementById('totalCost');

        // Current state
        let selectedBook = {
            type: 'paperback',
            size: '6',
            price: 10.99
        };
        let selectedShipping = {
            type: 'standard',
            price: 0
        };
        let selectedDesign = 'current';
        let quantity = 1;

        // Theme Toggle
        let isDarkMode = false;
        themeToggle.addEventListener('click', () => {
            isDarkMode = !isDarkMode;
            document.body.classList.toggle('dark-mode');
            themeToggle.textContent = isDarkMode ? 'â˜€ï¸' : 'ðŸŒ™';

            if (isDarkMode) {
                document.body.style.backgroundColor = '#1a1a1a';
                document.body.style.color = '#f0f0f0';

                document.querySelectorAll('.order-options, .order-preview').forEach(el => {
                    el.style.backgroundColor = '#2d2d2d';
                    el.style.color = '#f0f0f0';
                });

                document.querySelectorAll('h1, h2, h3, h4').forEach(el => {
                    el.style.color = '#f0f0f0';
                });

                document.querySelectorAll('.book-front').forEach(el => {
                    el.style.background = 'linear-gradient(135deg, #4a5568 0%, #2d3748 100%)';
                });
            } else {
                document.body.style.backgroundColor = '#f5f7f9';
                document.body.style.color = '#333';

                document.querySelectorAll('.order-options, .order-preview').forEach(el => {
                    el.style.backgroundColor = 'white';
                    el.style.color = '#333';
                });

                document.querySelectorAll('h1, h2, h3, h4').forEach(el => {
                    el.style.color = '#212529';
                });

                document.querySelectorAll('.book-front').forEach(el => {
                    el.style.background = 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)';
                });
            }
        });

        // Publish Ebook Button
        publishEbookBtn.addEventListener('click', () => {
            showToast('Redirecting to publishing page...', 'success');
            // In a real app: window.location.href = 'publishing.html';
        });

        // Preview Button
        previewBtn.addEventListener('click', () => {
            updateOrderSummary();
            showToast('Order preview updated', 'success');
        });

        // Size Options
        document.querySelectorAll('.size-option').forEach(option => {
            option.addEventListener('click', () => {
                // Remove selected class from all options of the same type
                document.querySelectorAll(`.size-option[data-type="${option.dataset.type}"]`).forEach(opt => {
                    opt.classList.remove('selected');
                });

                // Add selected class to clicked option
                option.classList.add('selected');

                // Update selected book
                selectedBook = {
                    type: option.dataset.type,
                    size: option.dataset.size,
                    price: parseFloat(option.dataset.price)
                };

                // Update order summary
                updateOrderSummary();

                showToast(`${option.dataset.type.charAt(0).toUpperCase() + option.dataset.type.slice(1)} ${option.dataset.size}" selected`, 'success');
            });
        });

        // Design Options
        document.querySelectorAll('.design-card').forEach(card => {
            card.addEventListener('click', () => {
                // Remove selected class from all options
                document.querySelectorAll('.design-card').forEach(c => {
                    c.classList.remove('selected');
                });

                // Add selected class to clicked card
                card.classList.add('selected');

                // Update selected design
                selectedDesign = card.dataset.design;

                showToast(`"${card.querySelector('span').textContent}" design selected`, 'success');
            });
        });

        // Shipping Options
        document.querySelectorAll('input[name="shipping"]').forEach(option => {
            option.addEventListener('change', () => {
                selectedShipping = {
                    type: option.value,
                    price: parseFloat(option.dataset.price)
                };

                updateOrderSummary();

                showToast(`${option.value.charAt(0).toUpperCase() + option.value.slice(1)} shipping selected`, 'success');
            });
        });

        // Quantity Input
        quantityInput.addEventListener('change', () => {
            quantity = parseInt(quantityInput.value);
            if (quantity < 1) quantity = 1;
            if (quantity > 100) quantity = 100;
            quantityInput.value = quantity;

            updateOrderSummary();
        });

        // Update order summary
        function updateOrderSummary() {
            const bookPrice = selectedBook.price;
            const shippingPrice = selectedShipping.price;
            const total = (bookPrice * quantity) + shippingPrice;

            summaryQuantity.textContent = quantity;
            subtotal.textContent = `$${(bookPrice * quantity).toFixed(2)}`;
            shippingCost.textContent = shippingPrice === 0 ? 'Free' : `$${shippingPrice.toFixed(2)}`;
            totalCost.textContent = `$${total.toFixed(2)}`;
        }

        // Order Button
        orderBtn.addEventListener('click', () => {
            if (!addressTextarea.value.trim()) {
                showToast('Please enter your shipping address', 'error');
                addressTextarea.focus();
                return;
            }

            // Calculate delivery date (3-5 business days from now)
            const delivery = new Date();
            let daysToAdd = selectedShipping.type === 'express' ? 3 : 5;

            // Add business days (skip weekends)
            while (daysToAdd > 0) {
                delivery.setDate(delivery.getDate() + 1);
                if (delivery.getDay() !== 0 && delivery.getDay() !== 6) {
                    daysToAdd--;
                }
            }

            // Format delivery date
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            deliveryDate.textContent = delivery.toLocaleDateString('en-US', options);

            // Show success modal
            successModal.classList.add('show');

            showToast('Order placed successfully!', 'success');
        });

        // Close modals
        closeButtons.forEach(button => {
            button.addEventListener('click', () => {
                successModal.classList.remove('show');
            });
        });

        // Close modals when clicking outside
        window.addEventListener('click', (e) => {
            if (e.target === successModal) {
                successModal.classList.remove('show');
            }
        });

        // Modal buttons
        document.getElementById('continueShopping').addEventListener('click', () => {
            successModal.classList.remove('show');
        });

        document.getElementById('viewOrderDetails').addEventListener('click', () => {
            successModal.classList.remove('show');
            showToast('Redirecting to order details...', 'success');
        });

        // Toast Notification
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            toast.className = `toast ${type}`;
            toast.querySelector('.toast-message').textContent = message;
            toast.classList.add('show');

            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Initialize page
        window.addEventListener('DOMContentLoaded', function() {
            // Initial summary update
            updateOrderSummary();
        });
    </script>

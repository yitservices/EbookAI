@{
    ViewData["Title"] = "Dashboard Summary - eBook Publisher";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="summary-header">
    <h1>Dashboard Summary</h1>
    <p>Your publishing progress and plan overview</p>
</div>

<div class="summary-content">
    <!-- Features Table -->
    <div class="summary-section">
        <h2><i class="fas fa-list"></i> Selected Features</h2>
        <div class="features-table">
            <div class="table-header">
                <div class="table-cell">Feature</div>
                <div class="table-cell">Status</div>
                <div class="table-cell">Type</div>
            </div>
            <div class="table-row">
                <div class="table-cell">
                    <i class="fas fa-book"></i>
                    <span>EBook Creation</span>
                </div>
                <div class="table-cell status-active">Active</div>
                <div class="table-cell">Basic</div>
            </div>
            <div class="table-row">
                <div class="table-cell">
                    <i class="fas fa-palette"></i>
                    <span>Cover Design</span>
                </div>
                <div class="table-cell status-active">Active</div>
                <div class="table-cell">Premium</div>
            </div>
            <div class="table-row">
                <div class="table-cell">
                    <i class="fas fa-chart-line"></i>
                    <span>Advanced Analytics</span>
                </div>
                <div class="table-cell status-active">Active</div>
                <div class="table-cell">Premium</div>
            </div>
            <div class="table-row">
                <div class="table-cell">
                    <i class="fas fa-bullhorn"></i>
                    <span>Marketing Tools</span>
                </div>
                <div class="table-cell status-inactive">Inactive</div>
                <div class="table-cell">Marketing</div>
            </div>
        </div>
    </div>

    <!-- Current Plan Card -->
    <div class="summary-section">
        <h2><i class="fas fa-crown"></i> Current Plan</h2>
        <div class="plan-card">
            <div class="plan-header">
                <h3>Professional Plan</h3>
                <div class="plan-price">$29.99<span>/month</span></div>
            </div>
            <div class="plan-benefits">
                <ul>
                    <li><i class="fas fa-check"></i> Unlimited EBook Creation</li>
                    <li><i class="fas fa-check"></i> Advanced Formatting Tools</li>
                    <li><i class="fas fa-check"></i> Priority Support</li>
                    <li><i class="fas fa-check"></i> Advanced Analytics</li>
                    <li><i class="fas fa-times"></i> Audio Book Conversion</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="summary-actions">
        <button class="btn btn-primary" id="upgradePlanBtn">
            <i class="fas fa-arrow-up"></i> Upgrade Plan
        </button>
        <button class="btn btn-secondary" id="addFeaturesBtn">
            <i class="fas fa-plus"></i> Add More Features
        </button>
        <button class="btn btn-secondary" id="editPlanBtn">
            <i class="fas fa-edit"></i> Edit Plan
        </button>
    </div>

    <!-- Save and Continue Button -->
    <div class="save-continue">
        <button class="btn btn-primary">
            <i class="fas fa-save"></i> Save and Continue
            <div class="progress-bar">
                <div class="progress-fill" style="width: 75%"></div>
            </div>
        </button>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const upgradePlanBtn = document.getElementById('upgradePlanBtn');
            const addFeaturesBtn = document.getElementById('addFeaturesBtn');
            const editPlanBtn = document.getElementById('editPlanBtn');
            
            upgradePlanBtn.addEventListener('click', function() {
                Swal.fire({
                    title: 'Upgrade Plan',
                    text: 'You will be redirected to the plan upgrade page.',
                    icon: 'info',
                    confirmButtonColor: '#4a6cf7',
                    confirmButtonText: 'Continue'
                }).then(() => {
                    window.location.href = '/Dashboard/PlanSuggestion';
                });
            });
            
            addFeaturesBtn.addEventListener('click', function() {
                Swal.fire({
                    title: 'Add More Features',
                    text: 'You will be redirected to the features selection page.',
                    icon: 'info',
                    confirmButtonColor: '#4a6cf7',
                    confirmButtonText: 'Continue'
                }).then(() => {
                    window.location.href = '/Dashboard/FeaturesSelection';
                });
            });
            
            editPlanBtn.addEventListener('click', function() {
                Swal.fire({
                    title: 'Edit Plan',
                    text: 'You will be redirected to the plan editing page.',
                    icon: 'info',
                    confirmButtonColor: '#4a6cf7',
                    confirmButtonText: 'Continue'
                }).then(() => {
                    window.location.href = '/Dashboard/PlanSuggestion';
                });
            });
        });
    </script>
}
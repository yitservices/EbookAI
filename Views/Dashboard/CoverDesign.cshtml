    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h2>eBook Publisher</h2>
            <button class="close-sidebar" id="closeSidebar">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="sidebar-nav">
            <div class="nav-item" data-screen="home-screen">
                <i class="fas fa-home"></i> Home
            </div>
            <div class="nav-item" data-screen="ebook-screen">
                <i class="fas fa-book"></i> E-Book
            </div>
            <div class="nav-item active" data-screen="cover-design-screen">
                <i class="fas fa-palette"></i> Cover Design
            </div>
            <div class="nav-item" data-screen="editing-screen">
                <i class="fas fa-edit"></i> Editing & Formatting
            </div>
            <div class="nav-item" data-screen="proofreading-screen">
                <i class="fas fa-check-circle"></i> Proofreading
            </div>
            <div class="nav-item" data-screen="copyright-screen">
                <i class="fas fa-copyright"></i> Copyright
            </div>
            <div class="nav-item" data-screen="publishing-screen">
                <i class="fas fa-upload"></i> Publishing
            </div>
            <div class="nav-item" data-screen="audio-book-screen">

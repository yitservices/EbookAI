<script>
    // DOM Elements - SINGLE DECLARATION
    const downloadBtn = document.getElementById('downloadBtn');
    const previewBtn = document.getElementById('previewBtn');
    const generateBtn = document.getElementById('generateBtn');
    const toolsBtn = document.getElementById('toolsBtn');
    const attachBtn = document.getElementById('attachBtn');
    const designPrompt = document.getElementById('designPrompt');
    const designOptions = document.querySelectorAll('.design-option');
    const fantasyTemplate = document.getElementById('fantasyTemplate');
    const aiTemplate = document.getElementById('aiTemplate');
    const toastElement = document.getElementById('toast');
    const previewModal = document.getElementById('previewModal');
    const closeModalBtn = document.getElementById('closeModalBtn');
    const useDesignBtn = document.getElementById('useDesignBtn');
    const previewImage = document.getElementById('previewImage');
    const closeModal = document.getElementById('closeModal'); // Added this line

    // Get all close buttons
    const closeModalButtons = document.querySelectorAll('.close, #closeModalBtn');

    // Current state - SINGLE DECLARATION
    let isPremiumUser = false;
    let currentDesignId = null;

    // Toast Notification
    function showToast(message, type = 'success') {
        toastElement.className = `toast ${type}`;
        toastElement.querySelector('.toast-message').textContent = message;
        toastElement.classList.add('show');

        setTimeout(() => {
            toastElement.classList.remove('show');
        }, 3000);
    }

    // Generate Button
    generateBtn.addEventListener('click', function() {
        const prompt = designPrompt.value;
        if (!prompt) {
            showToast('Please describe your cover design first', 'error');
            return;
        }

        const btn = this;
        const originalText = btn.innerHTML;

        // Show loading state
        btn.innerHTML = '<span class="loading"></span> Generating...';
        btn.disabled = true;

        // Simulate AI generation
        setTimeout(() => {
            generateDesignOptions();
            btn.innerHTML = originalText;
            btn.disabled = false;
            showToast('New cover designs generated successfully!');
        }, 2500);
    });

    // Generate design options
    function generateDesignOptions() {
        designOptions.forEach(option => {
            const id = option.getAttribute('data-id');
            const hue = (id * 90) % 360;

            const placeholder = option.querySelector('.design-placeholder');
            placeholder.innerHTML = '';
            placeholder.style.background = `linear-gradient(135deg, hsl(${hue}, 70%, 60%), hsl(${hue + 30}, 70%, 40%))`;
            placeholder.style.display = 'flex';
            placeholder.style.alignItems = 'center';
            placeholder.style.justifyContent = 'center';
            placeholder.style.color = 'white';
            placeholder.style.fontWeight = 'bold';
            placeholder.style.fontSize = '1.2rem';
            placeholder.textContent = `Cover Option ${id}`;
        });
    }

    // Design option click
    designOptions.forEach(option => {
        option.addEventListener('click', function() {
            const id = this.getAttribute('data-id');
            currentDesignId = id;

            const hue = (id * 90) % 360;
            previewImage.src = `https://via.placeholder.com/400x600/${hue.toString(16).padStart(2, '0')}${((hue + 30) % 360).toString(16).padStart(2, '0')}${((hue + 60) % 360).toString(16).padStart(2, '0')}?text=Cover+Option+${id}`;

            previewModal.classList.add('show');
            document.body.style.overflow = 'hidden';
        });
    });

    // Template card click
    fantasyTemplate.addEventListener('click', function() {
        const title = this.querySelector('h4').textContent;
        showToast(`"${title}" template selected`);

        // Add template text to prompt
        designPrompt.value = 'Fantasy book cover with dragons, castles, and magical elements in epic style';
    });

    aiTemplate.addEventListener('click', function() {
        const title = this.querySelector('h4').textContent;
        showToast(`"${title}" template selected`);

        // Add template text to prompt
        designPrompt.value = 'Modern ebook cover with AI technology themes, futuristic design';
    });

    // Tool buttons
    toolsBtn.addEventListener('click', function() {
        showToast('Design tools opened');
    });

    attachBtn.addEventListener('click', function() {
        showToast('Attachment dialog opened');
    });

    // Preview Button
    previewBtn.addEventListener('click', function() {
        const prompt = designPrompt.value;
        if (!prompt) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Please describe your cover design first!',
                confirmButtonColor: '#4a6cf7'
            });
            return;
        }

        // Show loading SweetAlert
        Swal.fire({
            title: 'Generating Preview',
            text: 'Please wait while we create your cover preview...',
            allowOutsideClick: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });

        // Simulate loading
        setTimeout(() => {
            Swal.close();
            previewImage.src = 'https://via.placeholder.com/400x600/3498db/ffffff?text=Cover+Preview';
            previewModal.classList.add('show');
            document.body.style.overflow = 'hidden';
        }, 1500);
    });

    // Download Button
    downloadBtn.addEventListener('click', function() {
        Swal.fire({
            title: 'Preparing Download',
            text: 'Your ebook cover is being prepared for download...',
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#4a6cf7',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Continue',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                // Simulate download process
                Swal.fire({
                    title: 'Download Complete!',
                    text: 'Your ebook cover has been downloaded successfully.',
                    icon: 'success',
                    confirmButtonColor: '#4a6cf7'
                });
            }
        });
    });

    // Use Design Button
    useDesignBtn.addEventListener('click', function() {
        previewModal.classList.remove('show');
        document.body.style.overflow = 'auto';

        Swal.fire({
            title: 'Design Applied!',
            text: `Cover design ${currentDesignId} has been applied successfully.`,
            icon: 'success',
            confirmButtonColor: '#4a6cf7'
        });
    });

    // Close modal - handle all close buttons
    closeModalButtons.forEach(button => {
        button.addEventListener('click', () => {
            previewModal.classList.remove('show');
            document.body.style.overflow = 'auto';
        });
    });

    // Close modal when clicking outside
    window.addEventListener('click', (e) => {
        if (e.target === previewModal) {
            previewModal.classList.remove('show');
            document.body.style.overflow = 'auto';
        }
    });

    // Initialize page
    window.addEventListener('DOMContentLoaded', function() {
        // Generate initial design options
        generateDesignOptions();

        // Show welcome message
        setTimeout(() => {
            Swal.fire({
                title: 'Welcome to Cover Design!',
                text: 'Create stunning ebook covers with our AI-powered tools.',
                icon: 'info',
                confirmButtonColor: '#4a6cf7'
            });
        }, 1000);
    });
</script>
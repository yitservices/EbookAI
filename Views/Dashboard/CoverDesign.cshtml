@{
    ViewData["Title"] = "Advanced Editing - eBook Publisher";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    /* Your existing CSS remains the same */
    .cover-design-content {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 30px;
        transition: transform var(--transition-speed);
        max-width: 1888px;
        margin: 0 auto;
    }

    .ai-generator, .design-gallery, .template-card, .tip-card {
        background: white;
        border-radius: var(--border-radius);
        padding: 30px;
        box-shadow: var(--shadow);
        margin-bottom: 20px;
        transition: transform var(--transition-speed) ease, box-shadow 0.3s ease;
        border: 1px solid rgba(0,0,0,0.05);
        position: relative;
        overflow: hidden;
    }

    body.dark-mode .ai-generator,
    body.dark-mode .design-gallery,
    body.dark-mode .template-card,
    body.dark-mode .tip-card {
        background: var(--dark-card);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255,255,255,0.05);
    }

    .ai-generator:hover, .design-gallery:hover, .template-card:hover, .tip-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-hover);
    }

    .ai-generator h3, .design-gallery h3, .template-card h3, .tip-card h3 {
        margin-bottom: 15px;
        color: var(--dark);
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
        font-size: 1.4rem;
        font-weight: 600;
    }

    body.dark-mode .ai-generator h3,
    body.dark-mode .design-gallery h3,
    body.dark-mode .template-card h3,
    body.dark-mode .tip-card h3 {
        color: #f0f0f0;
        border-bottom: 1px solid #2a2a2a;
    }

    .premium-badge {
        background: var(--premium);
        color: #333;
        font-size: 0.7rem;
        padding: 3px 8px;
        border-radius: 20px;
        font-weight: bold;
        display: inline-block;
        margin-left: 10px;
    }

    .sparkle-icon {
        font-size: 2.5rem;
        margin-bottom: 15px;
        text-align: center;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
        }
    }

    .design-prompt {
        width: 100%;
        min-height: 120px;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 1rem;
        resize: vertical;
        margin-bottom: 20px;
        transition: border-color 0.3s, box-shadow 0.3s;
        background: white;
        color: #333;
        font-family: inherit;
    }

    body.dark-mode .design-prompt {
        background: #1e2a4a;
        border-color: #2a3a5a;
        color: #e0e0e0;
    }

    .design-prompt:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 2px rgba(74, 108, 247, 0.2);
    }

    .design-tools {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .btn-tool {
        padding: 8px 15px;
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 5px;
        font-size: 0.9rem;
    }

    body.dark-mode .btn-tool {
        background-color: #1e2a4a;
        border-color: #2a3a5a;
        color: #e0e0e0;
    }

    .btn-tool:hover {
        background-color: #e9ecef;
        transform: translateY(-2px);
    }

    body.dark-mode .btn-tool:hover {
        background-color: #2a3a5a;
    }

    .generate-btn {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .design-options {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .design-option {
        background: #f8f9fa;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        cursor: pointer;
        transition: transform var(--transition-speed);
        position: relative;
    }

    body.dark-mode .design-option {
        background: #1e2a4a;
    }

    .design-option:hover {
        transform: translateY(-5px) scale(1.02);
    }

    .design-placeholder {
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        background: linear-gradient(135deg, #4a6cf7 0%, #1e2a4a 100%);
        color: white;
        position: relative;
        overflow: hidden;
    }

        .design-placeholder::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 100%);
        }

    .design-info {
        padding: 15px;
        text-align: center;
    }

        .design-info h4 {
            color: var(--dark);
            margin-bottom: 5px;
        }

    body.dark-mode .design-info h4 {
        color: #f0f0f0;
    }

    .design-info p {
        color: var(--secondary);
    }

    body.dark-mode .design-info p {
        color: #b0b0b0;
    }

    .tip-card {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        position: relative;
        overflow: hidden;
    }

    body.dark-mode .tip-card {
        background: linear-gradient(135deg, #2d3a4d 0%, #1e2a4a 100%);
    }

    .tip-icon {
        font-size: 2rem;
        margin-bottom: 10px;
        text-align: center;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-10px);
        }

        60% {
            transform: translateY(-5px);
        }
    }

    .tip-card h4 {
        margin-bottom: 10px;
        color: #1565c0;
        text-align: center;
    }

    body.dark-mode .tip-card h4 {
        color: #90caf9;
    }

    .tip-card p {
        color: #1976d2;
        line-height: 1.5;
        text-align: center;
    }

    body.dark-mode .tip-card p {
        color: #bbdefb;
    }

    .template-cards {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .template-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        cursor: pointer;
        transition: transform var(--transition-speed);
        padding: 20px;
        position: relative;
        overflow: hidden;
    }

        .template-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .template-card:hover::before {
            left: 100%;
        }

        .template-card:hover {
            transform: translateY(-5px) scale(1.02);
        }

    .template-icon {
        font-size: 2.5rem;
        margin-bottom: 15px;
        color: var(--primary);
        transition: transform 0.3s;
    }

    .template-card:hover .template-icon {
        transform: scale(1.2);
    }

    .template-card h4 {
        margin-bottom: 10px;
        color: var(--dark);
    }

    body.dark-mode .template-card h4 {
        color: #f0f0f0;
    }

    .template-card p {
        color: var(--secondary);
        line-height: 1.5;
    }

    body.dark-mode .template-card p {
        color: #b0b0b0;
    }

    /* Toast Notification */
    .toast {
        position: fixed;
        top: 20px;
        right: 20px;
        background: white;
        padding: 15px 25px;
        border-radius: var(--border-radius);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        gap: 10px;
        transform: translateX(150%);
        transition: transform 0.3s;
        z-index: 1000;
    }

    body.dark-mode .toast {
        background: var(--dark-card);
        color: #e0e0e0;
    }

    .toast.show {
        transform: translateX(0);
    }

    .toast.success {
        border-left: 4px solid var(--success);
    }

    .toast.error {
        border-left: 4px solid var(--danger);
    }

    .toast.warning {
        border-left: 4px solid var(--warning);
    }

    .toast-icon {
        font-size: 24px;
    }

    .toast.success .toast-icon {
        color: var(--success);
    }

    .toast.error .toast-icon {
        color: var(--danger);
    }

    .toast.warning .toast-icon {
        color: var(--warning);
    }

    /* Preview Modal */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1100;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity var(--transition-speed);
    }

        .modal.show {
            display: flex;
            opacity: 1;
        }

    .modal-content {
        background-color: white;
        border-radius: var(--border-radius);
        width: 90%;
        max-width: 500px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        transform: scale(0.9);
        transition: transform var(--transition-speed);
    }

    body.dark-mode .modal-content {
        background-color: var(--dark-card);
        color: #e0e0e0;
    }

    .modal.show .modal-content {
        transform: scale(1);
    }

    .modal-header {
        background: linear-gradient(135deg, #ffd700 0%, #ff9800 100%);
        color: #333;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .modal-header h3 {
            font-size: 1.3rem;
            font-weight: bold;
            margin: 0;
        }

    .close {
        font-size: 1.5rem;
        cursor: pointer;
        transition: color 0.3s, transform 0.3s;
        background: transparent;
        border: none;
        color: #333;
    }

        .close:hover {
            color: var(--danger);
            transform: rotate(90deg);
        }

    .modal-body {
        padding: 20px;
        text-align: center;
    }

    .preview-image {
        width: 100%;
        max-height: 400px;
        object-fit: contain;
        margin: 20px 0;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .modal-footer {
        padding: 20px;
        text-align: center;
        border-top: 1px solid #e0e0e0;
        display: flex;
        gap: 10px;
        justify-content: center;
        flex-wrap: wrap;
    }

    body.dark-mode .modal-footer {
        border-top: 1px solid #2a2a2a;
    }

    /* Button Loading Animation */
    .loading {
        display: inline-block;
        width: 16px;
        height: 16px;
        border: 3px solid rgba(255,255,255,.3);
        border-radius: 50%;
        border-top-color: #fff;
        animation: spin 1s ease-in-out infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    /* Improved button focus states */
    button:focus {
        outline: 2px solid var(--primary);
        outline-offset: 2px;
    }

    /* Responsive Styles */
    @@media (max-width: 1200px) {
        .cover-design-content {
            grid-template-columns: 1.5fr 1fr;
            gap: 20px;
        }
    }

    @@media (max-width: 992px) {
        .cover-design-content {
            grid-template-columns: 1fr;
        }

        .design-options {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 768px) {
        .ai-generator, .design-gallery, .template-card, .tip-card {
            padding: 20px;
        }

            .ai-generator h3, .design-gallery h3, .template-card h3, .tip-card h3 {
                font-size: 1.3rem;
            }

        .design-prompt {
            min-height: 100px;
            font-size: 0.95rem;
        }

        .design-placeholder {
            height: 150px;
        }

        .template-icon {
            font-size: 2rem;
        }

        .template-card h4 {
            font-size: 1.1rem;
        }

        .template-card p {
            font-size: 0.9rem;
        }

        .btn-group {
            display: flex;
            flex-direction: column;
            gap: 10px;
            width: 100%;
        }

            .btn-group button {
                width: 100%;
                justify-content: center;
            }
    }

    @@media (max-width: 576px) {
        .ai-generator, .design-gallery, .template-card, .tip-card {
            padding: 15px;
        }

            .ai-generator h3, .design-gallery h3, .template-card h3, .tip-card h3 {
                font-size: 1.2rem;
            }

        .design-tools {
            flex-direction: column;
        }

            .design-tools button {
                width: 100%;
                justify-content: center;
            }

        .toast {
            left: 15px;
            right: 15px;
            width: auto;
            padding: 12px 20px;
        }

        .modal-content {
            width: 95%;
        }

        .modal-header, .modal-body, .modal-footer {
            padding: 15px;
        }
    }

    /* Enhanced Header Styles */
    .top-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 1px solid #e0e0e0;
    }

    body.dark-mode .top-header {
        border-bottom: 1px solid #2a2a2a;
    }

    .header-left h1 {
        font-size: 2.2rem;
        font-weight: 700;
        color: var(--dark);
        transition: transform var(--transition-speed);
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;

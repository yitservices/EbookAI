    }

    .header-right {
        display: flex;
        gap: 15px;
    }

    .header-left p {
        font-size: 1.2rem;
        color: #7f8c8d;
    }

    body.dark-mode .header-left p {
        color: #a0aec0;
    }

    .main-content {
        flex: 1;
        padding: 0;
        margin-left: 141px;
        width: calc(105% - 250px);
        transition: margin-left 0.3s ease, width 0.3s ease;
        min-height: 100vh;
        margin-top:20px;
        background: #f8fafc;
    }
</style>


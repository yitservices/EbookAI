    <script>
        // DOM Elements
        const sidebar = document.getElementById('sidebar');
        const menuToggle = document.getElementById('menuToggle');
        const closeSidebar = document.getElementById('closeSidebar');
        const mainContent = document.getElementById('mainContent');
        const themeToggle = document.getElementById('themeToggle');
        const downloadBtn = document.getElementById('downloadBtn');
        const previewBtn = document.getElementById('previewBtn');
        const generateBtn = document.getElementById('generateBtn');
        const toolsBtn = document.getElementById('toolsBtn');
        const attachBtn = document.getElementById('attachBtn');
        const designPrompt = document.getElementById('designPrompt');
        const designOptions = document.querySelectorAll('.design-option');
        const fantasyTemplate = document.getElementById('fantasyTemplate');
        const aiTemplate = document.getElementById('aiTemplate');
        const toast = document.getElementById('toast');
        const previewModal = document.getElementById('previewModal');
        const closeModal = document.getElementById('closeModal');
        const closeModalBtn = document.getElementById('closeModalBtn');
        const useDesignBtn = document.getElementById('useDesignBtn');
        const previewImage = document.getElementById('previewImage');
        const navTabs = document.querySelectorAll('.nav-tab');
        const navItems = document.querySelectorAll('.nav-item');

        // Current state
        let isPremiumUser = false;
        let currentDesignId = null;

        // Theme Toggle
        let isDarkMode = localStorage.getItem('darkMode') === 'true';

        // Apply saved theme on load
        if (isDarkMode) {
            document.body.classList.add('dark-mode');
            themeToggle.textContent = 'â˜€ï¸';
        }

        // Sidebar functionality
        menuToggle.addEventListener('click', () => {
            sidebar.classList.add('show');
        });

        closeSidebar.addEventListener('click', () => {
            sidebar.classList.remove('show');
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', (e) => {
            if (window.innerWidth <= 992 &&
                !sidebar.contains(e.target) &&
                !menuToggle.contains(e.target) &&
                sidebar.classList.contains('show')) {
                sidebar.classList.remove('show');
            }
        });

        // Theme toggle functionality
        themeToggle.addEventListener('click', () => {
            isDarkMode = !isDarkMode;
            document.body.classList.toggle('dark-mode');
            themeToggle.textContent = isDarkMode ? 'â˜€ï¸' : 'ðŸŒ™';

            // Save preference to localStorage
            localStorage.setItem('darkMode', isDarkMode);

            showToast(`Dark mode ${isDarkMode ? 'enabled' : 'disabled'}`, 'success');
        });

        // Navigation Tabs
        navTabs.forEach(tab => {
            tab.addEventListener('click', function() {
                // Update active tab
                navTabs.forEach(t => t.classList.remove('active'));
                this.classList.add('active');

                // In a real app, this would navigate to the selected section
                const screen = this.getAttribute('data-screen');
                showToast(`Navigating to ${screen.replace('-', ' ')}`);
            });
        });

        // Sidebar navigation
        navItems.forEach(item => {
            item.addEventListener('click', function() {
                // Update active item
                navItems.forEach(i => i.classList.remove('active'));
                this.classList.add('active');

                // Close sidebar on mobile after selection
                if (window.innerWidth <= 992) {
                    sidebar.classList.remove('show');
                }

                // In a real app, this would navigate to the selected section
                const screen = this.getAttribute('data-screen');
                showToast(`Navigating to ${screen.replace('-', ' ')}`);
            });
        });

        // Toast Notification
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            toast.className = `toast ${type}`;
            toast.querySelector('.toast-message').textContent = message;
            toast.classList.add('show');

            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Generate Button
        generateBtn.addEventListener('click', function() {
            const prompt = designPrompt.value;
            if (!prompt) {
                showToast('Please describe your cover design first', 'error');
                return;
            }

            const btn = this;
            const originalText = btn.innerHTML;

            // Show loading state
            btn.innerHTML = '<span class="loading"></span> Generating...';
            btn.disabled = true;

            // Simulate AI generation
            setTimeout(() => {
                generateDesignOptions();
                btn.innerHTML = originalText;
                btn.disabled = false;
                showToast('New cover designs generated successfully!');
            }, 2500);
        });

        // Generate design options
        function generateDesignOptions() {
            designOptions.forEach(option => {
                const id = option.getAttribute('data-id');
                const hue = (id * 90) % 360;

                const placeholder = option.querySelector('.design-placeholder');
                placeholder.innerHTML = '';
                placeholder.style.background = `linear-gradient(135deg, hsl(${hue}, 70%, 60%), hsl(${hue + 30}, 70%, 40%))`;
                placeholder.style.display = 'flex';
                placeholder.style.alignItems = 'center';
                placeholder.style.justifyContent = 'center';
                placeholder.style.color = 'white';
                placeholder.style.fontWeight = 'bold';
                placeholder.style.fontSize = '1.2rem';
                placeholder.textContent = `Cover Option ${id}`;
            });
        }

        // Design option click
        designOptions.forEach(option => {
            option.addEventListener('click', function() {
                const id = this.getAttribute('data-id');
                currentDesignId = id;

                const hue = (id * 90) % 360;
                previewImage.src = `https://via.placeholder.com/400x600/${hue.toString(16).padStart(2, '0')}${((hue + 30) % 360).toString(16).padStart(2, '0')}${((hue + 60) % 360).toString(16).padStart(2, '0')}?text=Cover+Option+${id}`;

                previewModal.classList.add('show');
                document.body.style.overflow = 'hidden';
            });
        });

        // Template card click
        fantasyTemplate.addEventListener('click', function() {
            const title = this.querySelector('h4').textContent;
            showToast(`"${title}" template selected`);

            // Add template text to prompt
            designPrompt.value = 'Fantasy book cover with dragons, castles, and magical elements in epic style';
        });

        aiTemplate.addEventListener('click', function() {
            const title = this.querySelector('h4').textContent;
            showToast(`"${title}" template selected`);

            // Add template text to prompt
            designPrompt.value = 'Modern ebook cover with AI technology themes, futuristic design';
        });

        // Tool buttons
        toolsBtn.addEventListener('click', function() {
            showToast('Design tools opened');
        });

        attachBtn.addEventListener('click', function() {
            showToast('Attachment dialog opened');
        });

        // Preview Button
        previewBtn.addEventListener('click', function() {
            const prompt = designPrompt.value;
            if (!prompt) {
                showToast('Please describe your cover design first', 'error');
                return;
            }

            showToast('Generating preview...');

            // Simulate loading
            setTimeout(() => {
                previewImage.src = 'https://via.placeholder.com/400x600/3498db/ffffff?text=Cover+Preview';
                previewModal.classList.add('show');
                document.body.style.overflow = 'hidden';
            }, 1500);
        });

        // Download Button
        downloadBtn.addEventListener('click', function() {
            showToast('Your ebook cover is being prepared for download...');

            // Simulate download process
            setTimeout(() => {
                showToast('Download complete! Check your downloads folder.');
            }, 2000);
        });

        // Use Design Button
        useDesignBtn.addEventListener('click', function() {
            previewModal.classList.remove('show');
            document.body.style.overflow = 'auto';
            showToast(`Cover design ${currentDesignId} applied successfully!`);
        });

        // Close modal
        closeModal.addEventListener('click', () => {
            previewModal.classList.remove('show');
            document.body.style.overflow = 'auto';
        });

        closeModalBtn.addEventListener('click', () => {
            previewModal.classList.remove('show');
            document.body.style.overflow = 'auto';
        });

        // Close modal when clicking outside
        window.addEventListener('click', (e) => {
            if (e.target === previewModal) {
                previewModal.classList.remove('show');
                document.body.style.overflow = 'auto';
            }
        });

        // Initialize page
        window.addEventListener('DOMContentLoaded', function() {
            // Generate initial design options
            generateDesignOptions();

            // Simulate loading
            setTimeout(() => {
                showToast('Cover design dashboard loaded successfully!');
            }, 1000);
        });

        <div class="proofreading-content">
            <div class="proofreading-panel">
                <h3>
                    Proofreading Controls
                    <span class="premium-badge">Premium</span>
                </h3>

                <!-- Proofreading Tiers -->
                <div class="proofreading-tiers">
                    <div class="tier-option selected" data-tier="basic">
                        <div class="tier-name">Basic Check</div>
                        <div class="tier-desc">Grammar & Spelling</div>
                    </div>
                    <div class="tier-option disabled" data-tier="advanced">
                        <div class="tier-name">Advanced</div>
                        <div class="tier-desc">Style & Flow</div>
                    </div>
                    <div class="tier-option disabled" data-tier="professional">
                        <div class="tier-name">Professional</div>
                        <div class="tier-desc">Human Review</div>

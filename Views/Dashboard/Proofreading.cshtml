                </div>

                <div class="proofreading-actions">
                    <button class="btn-primary" id="analyzeBtn"><i class="fas fa-search"></i> Analyze Text</button>
                    <button class="btn-secondary" id="clearBtn"><i class="fas fa-trash"></i> Clear</button>
                </div>

                <div class="progress-container">
                    <div class="progress-bar" id="progressBar"></div>
                </div>

                <div class="proofreading-stats">
                    <div class="stat-box">
                        <div class="stat-value" id="errorsFound">0</div>
                        <div class="stat-label">Errors Found</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-value" id="wordsChecked">0</div>
                        <div class="stat-label">Words Checked</div>
                    </div>
                </div>

                <div class="page-info">
                    <span>Page 1 of 1</span>
                    <div>
                        <button class="btn-small" id="prevPageBtn"><i class="fas fa-chevron-left"></i></button>
                        <button class="btn-small" id="nextPageBtn"><i class="fas fa-chevron-right"></i></button>
                    </div>
                </div>
            </div>

            <div class="content-preview">
                <h3>Document Preview</h3>
                <div class="preview-text" id="previewText" contenteditable="true">
                    <p>Welcome to the proofreading service. Upload your document or paste your text here to begin the proofreading process.</p>

                    <p>This advanced system will detect <span class="spelling-error" data-suggestion="grammar">grammer</span> errors, spelling mistakes, and provide <span class="style-suggestion" data-suggestion="style">suggestions for improvement</span>. The AI-powered engine analyzes your text for clarity, readability, and <span class="grammar-error" data-suggestion="consistent">consistency</span>.</p>

                    <p>Click on any highlighted text to see suggested corrections. Premium users get access to advanced features including style recommendations and human proofreader reviews.</p>
                </div>

                <div class="editing-tools">
                    <button class="btn-small" id="acceptAllBtn"><i class="fas fa-check-double"></i> Accept All</button>
                    <button class="btn-small" id="rejectAllBtn"><i class="fas fa-times"></i> Reject All</button>
                    <button class="btn-small" id="exportBtn"><i class="fas fa-download"></i> Export</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Correction Popup -->
    <div id="correctionPopup" class="correction-popup">
        <h4>Suggested Correction</h4>
        <ul class="correction-options" id="correctionOptions">
            <!-- Dynamic suggestions will be inserted here -->
        </ul>
        <div class="correction-actions">
            <button class="btn-small btn-primary" id="acceptBtn">Accept</button>
            <button class="btn-small btn-secondary" id="ignoreBtn">Ignore</button>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="toast">
        <span class="toast-icon">‚úì</span>
        <span class="toast-message">Operation completed successfully!</span>
    </div>

    <script>
        // DOM Elements
        const themeToggle = document.getElementById('themeToggle');
        const startProofreadingBtn = document.getElementById('startProofreadingBtn');
        const uploadDocBtn = document.getElementById('uploadDocBtn');
        const premiumBtn = document.getElementById('premiumBtn');
        const analyzeBtn = document.getElementById('analyzeBtn');
        const clearBtn = document.getElementById('clearBtn');
        const acceptAllBtn = document.getElementById('acceptAllBtn');
        const rejectAllBtn = document.getElementById('rejectAllBtn');
        const exportBtn = document.getElementById('exportBtn');
        const prevPageBtn = document.getElementById('prevPageBtn');
        const nextPageBtn = document.getElementById('nextPageBtn');
        const acceptBtn = document.getElementById('acceptBtn');
        const ignoreBtn = document.getElementById('ignoreBtn');
        const progressBar = document.getElementById('progressBar');
        const errorsFound = document.getElementById('errorsFound');
        const wordsChecked = document.getElementById('wordsChecked');
        const previewText = document.getElementById('previewText');
        const correctionPopup = document.getElementById('correctionPopup');
        const correctionOptions = document.getElementById('correctionOptions');
        const aiSelector = document.getElementById('aiSelector');
        const tierOptions = document.querySelectorAll('.tier-option');
        const planButtons = document.querySelectorAll('.plan-button');
        const toast = document.getElementById('toast');

        // Current state
        let isDarkMode = localStorage.getItem('darkMode') === 'true';
        let currentTier = 'basic';
        let isAnalyzing = false;

        // Apply saved theme on load
        if (isDarkMode) {
            document.body.classList.add('dark-mode');
            themeToggle.textContent = '‚òÄÔ∏è';
        }

        // Theme toggle functionality
        themeToggle.addEventListener('click', () => {
            isDarkMode = !isDarkMode;
            document.body.classList.toggle('dark-mode');
            themeToggle.textContent = isDarkMode ? '‚òÄÔ∏è' : 'üåô';
            localStorage.setItem('darkMode', isDarkMode);
            showToast(`Dark mode ${isDarkMode ? 'enabled' : 'disabled'}`, 'success');
        });

        // Start Proofreading Button
        startProofreadingBtn.addEventListener('click', function() {
            showToast('Starting proofreading process...', 'success');

            // Simulate proofreading process
            const btn = this;
            const originalText = btn.innerHTML;

            btn.innerHTML = '<span class="loading"></span> Processing...';
            btn.disabled = true;

            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.disabled = false;
                showToast('Proofreading completed!', 'success');
            }, 3000);
        });

        // Upload Document Button
        uploadDocBtn.addEventListener('click', function() {
            // Create a file input element dynamically
            const fileInput = document.createElement('input');
            fileInput.type = 'file';
            fileInput.accept = '.doc,.docx,.pdf,.txt';

            fileInput.addEventListener('change', function() {
                if (this.files && this.files[0]) {
                    showToast(`Document "${this.files[0].name}" uploaded successfully!`, 'success');
                }
            });

            fileInput.click();
        });

        // Premium Button
        premiumBtn.addEventListener('click', function() {
            showToast('Redirecting to premium plans...', 'success');
        });

        // Analyze Button
        analyzeBtn.addEventListener('click', function() {
            if (isAnalyzing) return;

            isAnalyzing = true;
            progressBar.style.width = '0%';
            errorsFound.textContent = '0';
            wordsChecked.textContent = '0';

            const btn = this;
            const originalText = btn.innerHTML;

            btn.innerHTML = '<span class="loading"></span> Analyzing...';
            btn.disabled = true;

            let progress = 0;
            const interval = setInterval(() => {
                progress += 10;
                progressBar.style.width = progress + '%';
                wordsChecked.textContent = Math.floor(progress * 2.5);

                if (progress >= 100) {
                    clearInterval(interval);
                    errorsFound.textContent = '3';
                    wordsChecked.textContent = '250';
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                    isAnalyzing = false;
                    showToast('Proofreading analysis completed!', 'success');
                }
            }, 200);
        });

        // Clear Button
        clearBtn.addEventListener('click', function() {
            previewText.innerHTML = `
                <p>Welcome to the proofreading service. Upload your document or paste your text here to begin the proofreading process.</p>

                <p>This advanced system will detect <span class="spelling-error" data-suggestion="grammar">grammer</span> errors, spelling mistakes, and provide <span class="style-suggestion" data-suggestion="style">suggestions for improvement</span>. The AI-powered engine analyzes your text for clarity, readability, and <span class="grammar-error" data-suggestion="consistent">consistency</span>.</p>

                <p>Click on any highlighted text to see suggested corrections. Premium users get access to advanced features including style recommendations and human proofreader reviews.</p>
            `;
            progressBar.style.width = '0%';
            errorsFound.textContent = '0';
            wordsChecked.textContent = '0';
            showToast('Text cleared successfully!', 'success');
        });

        // Accept All Button
        acceptAllBtn.addEventListener('click', function() {
            const errors = previewText.querySelectorAll('.spelling-error, .grammar-error, .style-suggestion');
            errors.forEach(error => {
                const suggestion = error.getAttribute('data-suggestion');
                error.outerHTML = suggestion;
            });
            showToast('All corrections accepted!', 'success');
        });

        // Reject All Button
        rejectAllBtn.addEventListener('click', function() {
            const errors = previewText.querySelectorAll('.spelling-error, .grammar-error, .style-suggestion');
            errors.forEach(error => {
                error.classList.remove('spelling-error', 'grammar-error', 'style-suggestion');
                error.style.backgroundColor = 'transparent';
                error.style.borderBottom = 'none';
            });
            showToast('All corrections rejected!', 'success');
        });

        // Export Button
        exportBtn.addEventListener('click', function() {
            showToast('Exporting corrected document...', 'success');
        });

        // Page Navigation Buttons
        prevPageBtn.addEventListener('click', function() {
            showToast('Previous page', 'success');
        });

        nextPageBtn.addEventListener('click', function() {
            showToast('Next page', 'success');
        });

        // Tier Selection
        tierOptions.forEach(tier => {
            tier.addEventListener('click', function() {
                if (this.classList.contains('disabled')) {
                    showToast('This tier requires a premium subscription', 'warning');
                    return;
                }

                tierOptions.forEach(t => t.classList.remove('selected'));
                this.classList.add('selected');
                currentTier = this.getAttribute('data-tier');
                showToast(`${this.querySelector('.tier-name').textContent} tier selected`, 'success');
            });
        });

        // Plan Buttons
        planButtons.forEach(button => {
            button.addEventListener('click', function() {
                const planName = this.closest('.subscription-plan').querySelector('.plan-name').textContent;
                showToast(`Selected plan: ${planName}`, 'success');
            });
        });

        // AI Selector
        aiSelector.addEventListener('change', function() {
            if (this.options[this.selectedIndex].disabled) {
                showToast('This AI engine requires a premium subscription', 'warning');
                this.value = 'basic';
                return;
            }
            showToast(`AI engine changed to: ${this.options[this.selectedIndex].text}`, 'success');
        });

        // Error correction popup
        previewText.addEventListener('click', function(e) {
            if (e.target.classList.contains('spelling-error') ||
                e.target.classList.contains('grammar-error') ||
                e.target.classList.contains('style-suggestion')) {

                const rect = e.target.getBoundingClientRect();
                correctionPopup.style.display = 'block';
                correctionPopup.style.left = rect.left + 'px';
                correctionPopup.style.top = (rect.bottom + 10) + 'px';

                const suggestion = e.target.getAttribute('data-suggestion');
                correctionOptions.innerHTML = '';

                if (suggestion === 'grammar') {
                    correctionOptions.innerHTML = '<li>grammar</li><li>spelling</li>';
                } else if (suggestion === 'style') {
                    correctionOptions.innerHTML = '<li>improvements</li><li>enhancements</li>';
                } else if (suggestion === 'consistent') {
                    correctionOptions.innerHTML = '<li>consistency</li><li>coherence</li>';
                }

                // Store the current error element for later use
                correctionPopup.currentError = e.target;
            }
        });

        // Accept Correction
        acceptBtn.addEventListener('click', function() {
            if (correctionPopup.currentError && correctionOptions.querySelector('li')) {
                const selectedOption = correctionOptions.querySelector('li:hover') || correctionOptions.querySelector('li');
                correctionPopup.currentError.outerHTML = selectedOption.textContent;
                correctionPopup.style.display = 'none';
                showToast('Correction accepted!', 'success');
            }
        });

        // Ignore Correction
        ignoreBtn.addEventListener('click', function() {
            if (correctionPopup.currentError) {
                correctionPopup.currentError.classList.remove('spelling-error', 'grammar-error', 'style-suggestion');
                correctionPopup.currentError.style.backgroundColor = 'transparent';
                correctionPopup.currentError.style.borderBottom = 'none';
                correctionPopup.style.display = 'none';
                showToast('Correction ignored!', 'success');
            }
        });

        // Close popup when clicking elsewhere
        document.addEventListener('click', function(e) {
            if (!correctionPopup.contains(e.target) && !e.target.closest('.spelling-error, .grammar-error, .style-suggestion')) {
                correctionPopup.style.display = 'none';
            }
        });

        // Toast Notification
        function showToast(message, type = 'success') {
            toast.className = `toast ${type}`;
            toast.querySelector('.toast-message').textContent = message;
            toast.classList.add('show');

            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Initialize page
        window.addEventListener('DOMContentLoaded', function() {
            showToast('Proofreading dashboard loaded successfully!');
        });
    </script>
</body>
</html>
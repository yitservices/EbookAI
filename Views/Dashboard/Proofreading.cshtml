        <header class="top-header">
            <div class="header-left">
                <h1>Proofreading Service</h1>
                <p>Professional proofreading and error detection</p>
            </div>
            <div class="header-right">
                <button class="btn-primary" id="startProofreadingBtn"><i class="fas fa-play"></i> Start Proofreading</button>
                <button class="btn-secondary" id="uploadDocBtn"><i class="fas fa-upload"></i> Upload Document</button>
                <button class="theme-toggle" id="themeToggle">üåô</button>
            </div>
        </header>

        <!-- Subscription Section -->
        <div class="subscription-section">
            <div class="subscription-header">
                <h2 class="subscription-title">Choose Your Proofreading Plan</h2>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // DOM Elements
            const themeToggle = document.getElementById('themeToggle');
            const downloadReportBtn = document.getElementById('downloadReportBtn');
            const requestPaymentBtn = document.getElementById('requestPaymentBtn');
            const downloadTaxBtn = document.getElementById('downloadTaxBtn');
            const toast = document.getElementById('toast');

            // Dark Mode State - Check localStorage first
            let isDarkMode = localStorage.getItem('darkMode') === 'true';

            // Also check system preference
            if (!localStorage.getItem('darkMode') && window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                isDarkMode = true;
            }

            // Apply theme on load
            function applyTheme() {
                if (isDarkMode) {
                    document.body.classList.add('dark-mode');
                    themeToggle.textContent = 'â˜€ï¸';
                    themeToggle.title = 'Switch to Light Mode';
                } else {
                    document.body.classList.remove('dark-mode');
                    themeToggle.textContent = 'ðŸŒ™';
                    themeToggle.title = 'Switch to Dark Mode';
                }
            }

            applyTheme();

            // Theme Toggle
            themeToggle.addEventListener('click', () => {
                isDarkMode = !isDarkMode;
                applyTheme();

                // Save preference to localStorage
                localStorage.setItem('darkMode', isDarkMode);

                // Show toast notification
                showToast(`Switched to ${isDarkMode ? 'Dark' : 'Light'} Mode`, 'success');
            });

            // Download Report Button
            downloadReportBtn.addEventListener('click', function() {
                // Show loading state
                const originalText = downloadReportBtn.innerHTML;
                downloadReportBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Generating...';
                downloadReportBtn.disabled = true;

                setTimeout(() => {
                    showToast('Earnings report downloaded successfully!', 'success');

                    // Restore button state
                    downloadReportBtn.innerHTML = originalText;
                    downloadReportBtn.disabled = false;
                }, 2000);
            });

            // Request Payment Button
            requestPaymentBtn.addEventListener('click', function() {
                const pendingAmount = document.querySelector('.earnings-card:nth-child(2) .amount').textContent;

                // Show loading state
                const originalText = requestPaymentBtn.innerHTML;
                requestPaymentBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
                requestPaymentBtn.disabled = true;

                setTimeout(() => {
                    showToast(`Payment request submitted for ${pendingAmount}!`, 'success');

                    // Update status
                    const pendingStatus = document.querySelector('.status.pending');
                    if (pendingStatus) {
                        pendingStatus.textContent = 'Processing';
                        pendingStatus.className = 'status processing';

                        // Update pending amount to $0
                        document.querySelector('.earnings-card:nth-child(2) .amount').textContent = '$0.00';
                        document.querySelector('.earnings-card:nth-child(2) .change').textContent = 'Payment requested';
                    }

                    // Restore button state
                    requestPaymentBtn.innerHTML = originalText;
                    requestPaymentBtn.disabled = false;
                }, 2000);
            });

            // Download Tax Button
            downloadTaxBtn.addEventListener('click', function() {
                // Show loading state
                const originalText = downloadTaxBtn.innerHTML;
                downloadTaxBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Downloading...';
                downloadTaxBtn.disabled = true;

                setTimeout(() => {
                    showToast('Tax document downloaded successfully!', 'success');

                    // Restore button state
                    downloadTaxBtn.innerHTML = originalText;
                    downloadTaxBtn.disabled = false;
                }, 1500);
            });

            // Toast function
            function showToast(message, type = 'success') {
                toast.className = `toast ${type}`;
                toast.querySelector('.toast-message').textContent = message;
                toast.classList.add('show');
                setTimeout(() => toast.classList.remove('show'), 3000);
            }

            // Animate platform bars on load
            setTimeout(() => {
                const barFills = document.querySelectorAll('.bar-fill');
                barFills.forEach(bar => {
                    const width = bar.style.width;
                    bar.style.width = '0';
                    setTimeout(() => {
                        bar.style.width = width;
                    }, 300);
                });
            }, 500);

            // Listen for system theme changes
            if (window.matchMedia) {
                window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', e => {
                    if (!localStorage.getItem('darkMode')) {
                        isDarkMode = e.matches;
                        applyTheme();
                    }
                });
            }

            // Initialize page
            setTimeout(() => {
                showToast('Royalties dashboard loaded successfully!', 'success');
            }, 1000);

            // Debug function to check dark mode status
            console.log('Dark mode is currently:', isDarkMode ? 'ON' : 'OFF');
            console.log('Stored preference:', localStorage.getItem('darkMode'));
        });
    </script>

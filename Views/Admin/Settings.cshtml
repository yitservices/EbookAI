@{
    ViewData["Title"] = "Settings Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System Settings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        :root {
            --primary: #6c63ff;
            --primary-light: #8a85ff;
            --primary-dark: #5651d9;
            --secondary: #ff6584;
            --success: #4caf50;
            --warning: #ff9800;
            --danger: #f44336;
            --dark: #2d3748;
            --light: #f8f9fa;
            --gray: #718096;
            --border-radius: 12px;
            --box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            --transition: all 0.3s ease;
        }

        * {
            font-family: 'Poppins', sans-serif;
        }

        body {
            background-color: #f5f7fb;
            color: var(--dark);
        }

        .settings-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .settings-header {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            border-radius: var(--border-radius);
            padding: 25px 30px;
            color: white;
            margin-bottom: 30px;
            box-shadow: var(--box-shadow);
            position: relative;
            overflow: hidden;
        }

            .settings-header::before {
                content: "";
                position: absolute;
                top: -50%;
                right: -50%;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.1);
                transform: rotate(30deg);
            }

            .settings-header h1 {
                font-weight: 700;
                margin-bottom: 5px;
                font-size: 2rem;
            }

            .settings-header p {
                opacity: 0.9;
                margin-bottom: 0;
            }

        .settings-card {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            margin-bottom: 25px;
            border: none;
            transition: var(--transition);
            overflow: hidden;
        }

            .settings-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            }

        .card-header {
            background: white;
            border-bottom: 1px solid #eaeaea;
            padding: 20px 25px;
            font-weight: 600;
            color: var(--dark);
            font-size: 1.1rem;
        }

        .card-body {
            padding: 25px;
        }

        .settings-tabs {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            overflow: hidden;
            margin-bottom: 30px;
        }

        .nav-tabs {
            border-bottom: 1px solid #eaeaea;
            padding: 0 20px;
            background: #f8f9fa;
        }

            .nav-tabs .nav-link {
                border: none;
                padding: 15px 20px;
                font-weight: 500;
                color: var(--gray);
                border-radius: 0;
                position: relative;
                transition: var(--transition);
            }

                .nav-tabs .nav-link:hover {
                    color: var(--primary);
                    background: transparent;
                }

                .nav-tabs .nav-link.active {
                    color: var(--primary);
                    background: transparent;
                    font-weight: 600;
                }

                    .nav-tabs .nav-link.active::after {
                        content: "";
                        position: absolute;
                        bottom: 0;
                        left: 0;
                        width: 100%;
                        height: 3px;
                        background: var(--primary);
                    }

        .tab-content {
            padding: 0;
        }

        .tab-pane {
            padding: 30px;
        }

        .form-label {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 8px;
        }

        .form-control, .form-select {
            border-radius: 8px;
            padding: 12px 15px;
            border: 1px solid #e1e5eb;
            transition: var(--transition);
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 0.25rem rgba(108, 99, 255, 0.15);
            }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 600;
            transition: var(--transition);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(108, 99, 255, 0.4);
            }

        .btn-outline-primary {
            color: var(--primary);
            border-color: var(--primary);
            border-radius: 8px;
            font-weight: 500;
            transition: var(--transition);
        }

            .btn-outline-primary:hover {
                background-color: var(--primary);
                border-color: var(--primary);
                transform: translateY(-2px);
            }

        .form-check-input:checked {
            background-color: var(--primary);
            border-color: var(--primary);
        }

        .form-switch .form-check-input:checked {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='-4 -4 8 8'%3e%3ccircle r='3' fill='%23fff'/%3e%3c/svg%3e");
        }

        .form-switch .form-check-input {
            width: 3em;
            height: 1.5em;
        }

        .sidebar-card {
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 20px;
            margin-bottom: 25px;
        }

            .sidebar-card h5 {
                font-weight: 600;
                margin-bottom: 15px;
                color: var(--dark);
            }

        .logo-preview {
            border: 2px dashed #e1e5eb;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            margin-bottom: 15px;
            transition: var(--transition);
        }

            .logo-preview:hover {
                border-color: var(--primary);
            }

            .logo-preview img {
                max-width: 100%;
                max-height: 80px;
            }

        .status-indicator {
            display: inline-block;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-right: 8px;
        }

        .status-active {
            background-color: var(--success);
        }

        .status-inactive {
            background-color: var(--gray);
        }

        .test-btn {
            background: linear-gradient(135deg, var(--success) 0%, #45a049 100%);
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            color: white;
            font-weight: 500;
            transition: var(--transition);
        }

            .test-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(76, 175, 80, 0.4);
            }

        .security-btn {
            margin-bottom: 10px;
            border-radius: 8px;
            padding: 10px 15px;
            font-weight: 500;
            transition: var(--transition);
        }

        /* Responsive Styles */
        @@media (max-width: 768px) {
            .settings-container

        {
            padding: 15px;
        }

        .settings-header {
            padding: 20px;
        }

            .settings-header h1 {
                font-size: 1.7rem;
            }

        .card-body {
            padding: 20px;
        }

        .tab-pane {
            padding: 20px;
        }

        .nav-tabs .nav-link {
            padding: 12px 15px;
            font-size: 0.9rem;
        }

        }

        @@media (max-width: 576px) {
            .settings-container

        {
            padding: 10px;
        }

        .settings-header {
            padding: 15px;
            text-align: center;
        }

            .settings-header h1 {
                font-size: 1.5rem;
            }

        .card-body {
            padding: 15px;
        }

        .tab-pane {
            padding: 15px;
        }

        .nav-tabs {
            flex-direction: column;
        }

            .nav-tabs .nav-link {
                width: 100%;
                text-align: center;
                border-bottom: 1px solid #eaeaea;
            }

                .nav-tabs .nav-link.active::after {
                    display: none;
                }

        .btn-primary, .btn-outline-primary {
            width: 100%;
            margin-bottom: 10px;
        }

        }
    </style>
</head>
<body>
    <div class="settings-container">
        <!-- Header Section -->
        <div class="settings-header">
            <h1><i class="fas fa-cog me-2"></i>System Settings</h1>
            <p>Manage your platform configuration and preferences</p>
        </div>

        <!-- Tabs Navigation -->
        <div class="settings-tabs">
            <ul class="nav nav-tabs" id="settingsTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab">
                        <i class="fas fa-sliders-h me-2"></i>General
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="payment-tab" data-bs-toggle="tab" data-bs-target="#payment" type="button" role="tab">
                        <i class="fas fa-credit-card me-2"></i>Payment
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="email-tab" data-bs-toggle="tab" data-bs-target="#email" type="button" role="tab">
                        <i class="fas fa-envelope me-2"></i>Email
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="security-tab" data-bs-toggle="tab" data-bs-target="#security" type="button" role="tab">
                        <i class="fas fa-shield-alt me-2"></i>Security
                    </button>
                </li>
            </ul>

            <div class="tab-content" id="settingsTabContent">
                <!-- General Settings -->
                <div class="tab-pane fade show active" id="general" role="tabpanel">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="settings-card">
                                <div class="card-header">
                                    <i class="fas fa-cog me-2"></i>General Settings
                                </div>
                                <div class="card-body">
                                    <form id="generalForm">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="siteName" class="form-label">Site Name</label>
                                                <input type="text" class="form-control" id="siteName" value="eBook Publisher">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="adminEmail" class="form-label">Admin Email</label>
                                                <input type="email" class="form-control" id="adminEmail" value="admin@ebookpublisher.com">
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="siteDescription" class="form-label">Site Description</label>
                                            <textarea class="form-control" id="siteDescription" rows="3">The ultimate platform for authors to publish and readers to discover amazing books.</textarea>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="supportEmail" class="form-label">Support Email</label>
                                                <input type="email" class="form-control" id="supportEmail" value="support@ebookpublisher.com">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="timezone" class="form-label">Timezone</label>
                                                <select class="form-select" id="timezone">
                                                    <option value="UTC" selected>UTC</option>
                                                    <option value="EST">Eastern Time</option>
                                                    <option value="PST">Pacific Time</option>
                                                    <option value="GMT">GMT</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="maintenanceMode">
                                                <label class="form-check-label" for="maintenanceMode">Enable maintenance mode</label>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Save Changes</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="sidebar-card">
                                <h5><i class="fas fa-image me-2"></i>Site Logo</h5>
                                <div class="logo-preview">
                                    <img src="https://via.placeholder.com/200x60/6c63ff/ffffff?text=eBook+Publisher" alt="Site Logo">
                                </div>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-outline-primary"><i class="fas fa-upload me-2"></i>Upload New Logo</button>
                                    <button class="btn btn-outline-danger"><i class="fas fa-trash me-2"></i>Remove Logo</button>
                                </div>
                            </div>

                            <div class="sidebar-card">
                                <h5><i class="fas fa-info-circle me-2"></i>System Status</h5>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Website Status:</span>
                                    <span><span class="status-indicator status-active"></span>Online</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Database:</span>
                                    <span><span class="status-indicator status-active"></span>Connected</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>SSL Certificate:</span>
                                    <span><span class="status-indicator status-active"></span>Active</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Maintenance Mode:</span>
                                    <span><span class="status-indicator status-inactive"></span>Disabled</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Settings -->
                <div class="tab-pane fade" id="payment" role="tabpanel">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="settings-card">
                                <div class="card-header">
                                    <i class="fas fa-credit-card me-2"></i>Payment Settings
                                </div>
                                <div class="card-body">
                                    <form id="paymentForm">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="currency" class="form-label">Default Currency</label>
                                                <select class="form-select" id="currency">
                                                    <option value="USD" selected>USD - US Dollar</option>
                                                    <option value="EUR">EUR - Euro</option>
                                                    <option value="GBP">GBP - British Pound</option>
                                                    <option value="CAD">CAD - Canadian Dollar</option>
                                                </select>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="paymentGateway" class="form-label">Payment Gateway</label>
                                                <select class="form-select" id="paymentGateway">
                                                    <option value="stripe" selected>Stripe</option>
                                                    <option value="paypal">PayPal</option>
                                                    <option value="both">Both Stripe and PayPal</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="taxRate" class="form-label">Tax Rate (%)</label>
                                            <input type="number" class="form-control" id="taxRate" value="0" min="0" max="100" step="0.1">
                                        </div>
                                        <h6 class="mt-4 mb-3">Stripe Configuration</h6>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="stripeKey" class="form-label">Stripe Publishable Key</label>
                                                <input type="text" class="form-control" id="stripeKey" placeholder="pk_live_...">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="stripeSecret" class="form-label">Stripe Secret Key</label>
                                                <input type="password" class="form-control" id="stripeSecret" placeholder="sk_live_...">
                                            </div>
                                        </div>
                                        <h6 class="mt-4 mb-3">PayPal Configuration</h6>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="paypalClientId" class="form-label">PayPal Client ID</label>
                                                <input type="text" class="form-control" id="paypalClientId" placeholder="Client ID">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="paypalSecret" class="form-label">PayPal Secret</label>
                                                <input type="password" class="form-control" id="paypalSecret" placeholder="Secret">
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Save Payment Settings</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="sidebar-card">
                                <h5><i class="fas fa-vial me-2"></i>Payment Test</h5>
                                <p class="text-muted">Test your payment configuration to ensure everything is working correctly.</p>
                                <div class="d-grid">
                                    <button class="test-btn" id="testPaymentBtn"><i class="fas fa-play-circle me-2"></i>Test Payment</button>
                                </div>
                            </div>

                            <div class="sidebar-card">
                                <h5><i class="fas fa-chart-line me-2"></i>Payment Statistics</h5>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Successful Payments:</span>
                                    <span class="fw-bold">1,248</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Failed Payments:</span>
                                    <span class="fw-bold text-danger">12</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Total Revenue:</span>
                                    <span class="fw-bold text-success">$24,580.50</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Avg. Transaction:</span>
                                    <span class="fw-bold">$19.68</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Email Settings -->
                <div class="tab-pane fade" id="email" role="tabpanel">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="settings-card">
                                <div class="card-header">
                                    <i class="fas fa-envelope me-2"></i>Email Settings
                                </div>
                                <div class="card-body">
                                    <form id="emailForm">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="smtpHost" class="form-label">SMTP Host</label>
                                                <input type="text" class="form-control" id="smtpHost" placeholder="smtp.example.com">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="smtpPort" class="form-label">SMTP Port</label>
                                                <input type="number" class="form-control" id="smtpPort" value="587">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="smtpUsername" class="form-label">SMTP Username</label>
                                                <input type="text" class="form-control" id="smtpUsername" placeholder="username@example.com">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="smtpPassword" class="form-label">SMTP Password</label>
                                                <input type="password" class="form-control" id="smtpPassword" placeholder="Password">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="emailFrom" class="form-label">From Email Address</label>
                                                <input type="email" class="form-control" id="emailFrom" value="noreply@ebookpublisher.com">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="emailFromName" class="form-label">From Name</label>
                                                <input type="text" class="form-control" id="emailFromName" value="eBook Publisher">
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Save Email Settings</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="sidebar-card">
                                <h5><i class="fas fa-paper-plane me-2"></i>Test Email</h5>
                                <div class="mb-3">
                                    <label for="testEmail" class="form-label">Send Test To</label>
                                    <input type="email" class="form-control" id="testEmail" placeholder="test@example.com">
                                </div>
                                <div class="d-grid">
                                    <button class="test-btn" id="testEmailBtn"><i class="fas fa-paper-plane me-2"></i>Send Test Email</button>
                                </div>
                            </div>

                            <div class="sidebar-card">
                                <h5><i class="fas fa-history me-2"></i>Recent Activity</h5>
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span class="fw-medium">Welcome Email</span>
                                        <small class="text-muted">2 min ago</small>
                                    </div>
                                    <small class="text-success">Sent successfully</small>
                                </div>
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between">
                                        <span class="fw-medium">Password Reset</span>
                                        <small class="text-muted">15 min ago</small>
                                    </div>
                                    <small class="text-success">Sent successfully</small>
                                </div>
                                <div>
                                    <div class="d-flex justify-content-between">
                                        <span class="fw-medium">Newsletter</span>
                                        <small class="text-muted">1 hour ago</small>
                                    </div>
                                    <small class="text-success">Sent to 1,248 users</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Security Settings -->
                <div class="tab-pane fade" id="security" role="tabpanel">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="settings-card">
                                <div class="card-header">
                                    <i class="fas fa-shield-alt me-2"></i>Security Settings
                                </div>
                                <div class="card-body">
                                    <form id="securityForm">
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="passwordMinLength" class="form-label">Minimum Password Length</label>
                                                <input type="number" class="form-control" id="passwordMinLength" value="8" min="6" max="50">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="sessionTimeout" class="form-label">Session Timeout (minutes)</label>
                                                <input type="number" class="form-control" id="sessionTimeout" value="30" min="5" max="1440">
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Password Requirements</label>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-check mb-2">
                                                        <input class="form-check-input" type="checkbox" id="requireUppercase" checked>
                                                        <label class="form-check-label" for="requireUppercase">Require uppercase letters</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="requireLowercase" checked>
                                                        <label class="form-check-label" for="requireLowercase">Require lowercase letters</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-check mb-2">
                                                        <input class="form-check-input" type="checkbox" id="requireNumbers" checked>
                                                        <label class="form-check-label" for="requireNumbers">Require numbers</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="requireSpecialChars">
                                                        <label class="form-check-label" for="requireSpecialChars">Require special characters</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="maxLoginAttempts" class="form-label">Max Login Attempts</label>

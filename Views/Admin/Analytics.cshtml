@model EBookDashboard.Models.AnalyticsViewModel
@{
    ViewData["Title"] = "Analytics & Reporting";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script src="~/js/admin-animations.js"></script>

<style>
    :root {
        --white: #FFFFFF;
        --light-gray: #F5F5F5;
        --warm-gray: #E8E8E8;
        --text-primary: #2C2C2C;
        --text-secondary: #6B6B6B;
        --text-muted: #9B9B9B;
        --border-light: #E5E5E5;
        --shadow-soft: rgba(0, 0, 0, 0.05);
        --primary: #7c3aed;
        --success: #10b981;
        --danger: #ef4444;
        --warning: #f59e0b;
    }

    .analytics-container {
        padding: 0;
    }

    .page-header {
        background: var(--white);
        border-radius: 16px;
        padding: 24px;
        margin-bottom: 24px;
        box-shadow: 0 2px 8px var(--shadow-soft);
        border: 1px solid var(--border-light);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 16px;
    }

    .page-title {
        font-size: 24px;
        font-weight: 700;
        color: var(--text-primary);
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 10px;
        font-weight: 500;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 14px;
    }

    .btn-primary {
        background: var(--primary);
        color: white;
    }

    .btn-primary:hover {
        background: #6d28d9;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
    }

    .btn-secondary {
        background: var(--light-gray);
        color: var(--text-primary);
        border: 1px solid var(--border-light);
    }

    /* KPI Cards */
    .kpi-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        margin-bottom: 24px;
    }

    .kpi-card {
        background: var(--white);
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 2px 8px var(--shadow-soft);
        border: 1px solid var(--border-light);
        position: relative;
        overflow: hidden;
    }

    .kpi-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: linear-gradient(180deg, var(--primary) 0%, var(--success) 100%);
    }

    .kpi-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
    }

    .kpi-title {
        font-size: 14px;
        font-weight: 500;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .kpi-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--light-gray);
        color: var(--primary);
        font-size: 18px;
    }

    .kpi-value {
        font-size: 32px;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 8px;
    }

    .kpi-change {
        display: flex;
        align-items: center;
        gap: 4px;
        font-size: 12px;
        color: var(--success);
    }

    .kpi-change.negative {
        color: var(--danger);
    }

    /* Charts Section */
    .charts-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
        gap: 24px;
        margin-bottom: 24px;
    }

    .chart-card {
        background: var(--white);
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 2px 8px var(--shadow-soft);
        border: 1px solid var(--border-light);
    }

    .chart-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 16px;
        border-bottom: 1px solid var(--border-light);
    }

    .chart-title {
        font-size: 18px;
        font-weight: 600;
        color: var(--text-primary);
    }

    .chart-container {
        position: relative;
        height: 350px;
    }

    /* Conversion Funnel */
    .funnel-section {
        background: var(--white);
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 2px 8px var(--shadow-soft);
        border: 1px solid var(--border-light);
        margin-bottom: 24px;
    }

    .funnel-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 16px;
        margin-bottom: 12px;
        background: var(--light-gray);
        border-radius: 12px;
        position: relative;
    }

    .funnel-item:last-child {
        margin-bottom: 0;
    }

    .funnel-label {
        font-weight: 600;
        color: var(--text-primary);
        font-size: 14px;
    }

    .funnel-value {
        font-size: 18px;
        font-weight: 700;
        color: var(--primary);
    }

    .funnel-bar {
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        background: linear-gradient(90deg, var(--primary) 0%, var(--success) 100%);
        border-radius: 12px;
        opacity: 0.2;
        z-index: 0;
    }

    .funnel-content {
        position: relative;
        z-index: 1;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* Export Section */
    .export-section {
        background: var(--white);
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 2px 8px var(--shadow-soft);
        border: 1px solid var(--border-light);
    }

    .export-title {
        font-size: 18px;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 16px;
    }

    .export-buttons {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    @@media (max-width: 768px) {
        .charts-section {
            grid-template-columns: 1fr;
        }

        .chart-container {
            height: 300px;
        }
    }
</style>

<div class="analytics-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Analytics & Reporting</h1>
        <div style="display: flex; gap: 12px;">
            <button class="btn btn-secondary" onclick="refreshAnalytics()">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
            <button class="btn btn-primary" onclick="exportAnalytics()">
                <i class="fas fa-download"></i> Export Report
            </button>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="kpi-grid">
        <div class="kpi-card">
            <div class="kpi-header">
                <span class="kpi-title">Total Users</span>
                <div class="kpi-icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
            <div class="kpi-value">@Model.TotalUsers</div>
            <div class="kpi-change">
                <i class="fas fa-arrow-up"></i>
                <span>+12% from last month</span>
            </div>
        </div>

        <div class="kpi-card">
            <div class="kpi-header">
                <span class="kpi-title">Total Books</span>
                <div class="kpi-icon">
                    <i class="fas fa-book"></i>
                </div>
            </div>
            <div class="kpi-value">@Model.TotalBooks</div>
            <div class="kpi-change">
                <i class="fas fa-arrow-up"></i>
                <span>+8% from last month</span>
            </div>
        </div>

        <div class="kpi-card">
            <div class="kpi-header">
                <span class="kpi-title">Total Revenue</span>
                <div class="kpi-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
            <div class="kpi-value">$@Model.TotalRevenue.ToString("N2")</div>
            <div class="kpi-change">
                <i class="fas fa-arrow-up"></i>
                <span>+15% from last month</span>
            </div>
        </div>

        <div class="kpi-card">
            <div class="kpi-header">
                <span class="kpi-title">Total Activity</span>
                <div class="kpi-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
            </div>
            <div class="kpi-value">@Model.TotalActivity</div>
            <div class="kpi-change">
                <i class="fas fa-arrow-up"></i>
                <span>+5% from last month</span>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="charts-section">
        <div class="chart-card">
            <div class="chart-header">
                <div class="chart-title">User Signups Over Time</div>
            </div>
            <div class="chart-container">
                <canvas id="signupsChart"></canvas>
            </div>
        </div>

        <div class="chart-card">
            <div class="chart-header">
                <div class="chart-title">Book Creations Over Time</div>
            </div>
            <div class="chart-container">
                <canvas id="bookCreationsChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Area Chart -->
    <div class="chart-card" style="margin-bottom: 24px;">
        <div class="chart-header">
            <div class="chart-title">Platform Activity Overview</div>
        </div>
        <div class="chart-container">
            <canvas id="activityChart"></canvas>
        </div>
    </div>

    <!-- Conversion Funnel -->
    <div class="funnel-section">
        <div class="chart-title" style="margin-bottom: 20px;">Conversion Funnel</div>
        <div class="funnel-item">
            <div class="funnel-bar" style="width: 100%;"></div>
            <div class="funnel-content">
                <span class="funnel-label">Signups</span>
                <span class="funnel-value">@Model.ConversionFunnel.Signups</span>
            </div>
        </div>
        <div class="funnel-item">
            <div class="funnel-bar" style="width: @(Model.ConversionFunnel.Signups > 0 ? (Model.ConversionFunnel.Drafts * 100.0 / Model.ConversionFunnel.Signups) : 0)%;"></div>
            <div class="funnel-content">
                <span class="funnel-label">Drafts</span>
                <span class="funnel-value">@Model.ConversionFunnel.Drafts</span>
            </div>
        </div>
        <div class="funnel-item">
            <div class="funnel-bar" style="width: @(Model.ConversionFunnel.Signups > 0 ? (Model.ConversionFunnel.Styled * 100.0 / Model.ConversionFunnel.Signups) : 0)%;"></div>
            <div class="funnel-content">
                <span class="funnel-label">Styled</span>
                <span class="funnel-value">@Model.ConversionFunnel.Styled</span>
            </div>
        </div>
        <div class="funnel-item">
            <div class="funnel-bar" style="width: @(Model.ConversionFunnel.Signups > 0 ? (Model.ConversionFunnel.Previewed * 100.0 / Model.ConversionFunnel.Signups) : 0)%;"></div>
            <div class="funnel-content">
                <span class="funnel-label">Previewed</span>
                <span class="funnel-value">@Model.ConversionFunnel.Previewed</span>
            </div>
        </div>
        <div class="funnel-item">
            <div class="funnel-bar" style="width: @(Model.ConversionFunnel.Signups > 0 ? (Model.ConversionFunnel.Generated * 100.0 / Model.ConversionFunnel.Signups) : 0)%;"></div>
            <div class="funnel-content">
                <span class="funnel-label">Generated</span>
                <span class="funnel-value">@Model.ConversionFunnel.Generated</span>
            </div>
        </div>
        <div class="funnel-item">
            <div class="funnel-bar" style="width: @(Model.ConversionFunnel.Signups > 0 ? (Model.ConversionFunnel.Published * 100.0 / Model.ConversionFunnel.Signups) : 0)%;"></div>
            <div class="funnel-content">
                <span class="funnel-label">Published</span>
                <span class="funnel-value">@Model.ConversionFunnel.Published</span>
            </div>
        </div>
        <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid var(--border-light);">
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 16px;">
                <div>
                    <div style="font-size: 12px; color: var(--text-secondary); margin-bottom: 4px;">Signup to Draft Rate</div>
                    <div style="font-size: 20px; font-weight: 700; color: var(--primary);">@Model.ConversionFunnel.SignupToDraftRate.ToString("F1")%</div>
                </div>
                <div>
                    <div style="font-size: 12px; color: var(--text-secondary); margin-bottom: 4px;">Draft to Published Rate</div>
                    <div style="font-size: 20px; font-weight: 700; color: var(--success);">@Model.ConversionFunnel.DraftToPublishedRate.ToString("F1")%</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Export Section -->
    <div class="export-section">
        <div class="export-title">Export Analytics Reports</div>
        <div class="export-buttons">
            <button class="btn btn-primary" onclick="exportPDF()">
                <i class="fas fa-file-pdf"></i> Export as PDF
            </button>
            <button class="btn btn-primary" onclick="exportCSV()">
                <i class="fas fa-file-csv"></i> Export as CSV
            </button>
            <button class="btn btn-secondary" onclick="exportExcel()">
                <i class="fas fa-file-excel"></i> Export as Excel
            </button>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Make initCharts globally available for AJAX navigation
    window.initCharts = function() {
        // Check if Chart.js is loaded
        if (typeof Chart === 'undefined') {
            console.warn('Chart.js is not loaded. Retrying in 500ms...');
            setTimeout(window.initCharts, 500);
            return;
        }

        // Helper function to safely destroy charts
        function destroyChart(chartInstance) {
            try {
                if (chartInstance && typeof chartInstance.destroy === 'function') {
                    chartInstance.destroy();
                }
            } catch (e) {
                console.warn('Error destroying chart:', e);
            }
        }

        // Destroy existing charts if they exist
        destroyChart(window.signupsChart);
        destroyChart(window.bookCreationsChart);
        
        // Reset chart references
        window.signupsChart = null;
        window.bookCreationsChart = null;

        // Signups Chart
        try {
            const signupsCanvas = document.getElementById('signupsChart');
            if (!signupsCanvas) return;
            const signupsCtx = signupsCanvas.getContext('2d');
            if (!signupsCtx) return;
            
            const signupsData = {
                labels: @Html.Raw(Json.Serialize(Model.SignupsOverTime.Select(s => s.Date))),
                datasets: [{
                    label: 'Signups',
                    data: @Html.Raw(Json.Serialize(Model.SignupsOverTime.Select(s => s.Value))),
                    borderColor: '#6366F1',
                    backgroundColor: 'rgba(99, 102, 241, 0.1)',
                    tension: 0.4,
                    fill: true,
                    borderWidth: 3,
                    pointRadius: 4,
                    pointHoverRadius: 6
                }]
            };
            window.signupsChart = new Chart(signupsCtx, {
                type: 'line',
                data: signupsData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        } catch (e) {
            console.error('Error initializing Signups Chart:', e);
        }

        // Book Creations Chart
        try {
            const bookCreationsCanvas = document.getElementById('bookCreationsChart');
            if (!bookCreationsCanvas) return;
            const bookCreationsCtx = bookCreationsCanvas.getContext('2d');
            if (!bookCreationsCtx) return;
            
            const bookCreationsData = {
                labels: @Html.Raw(Json.Serialize(Model.BookCreationsOverTime.Select(s => s.Date))),
                datasets: [{
                    label: 'Books Created',
                    data: @Html.Raw(Json.Serialize(Model.BookCreationsOverTime.Select(s => s.Value))),
                    backgroundColor: 'rgba(250, 112, 154, 0.8)',
                    borderColor: '#FA709A',
                    borderWidth: 2,
                    borderRadius: 8
                }]
            };
            window.bookCreationsChart = new Chart(bookCreationsCtx, {
                type: 'bar',
                data: bookCreationsData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        } catch (e) {
            console.error('Error initializing Book Creations Chart:', e);
        }

        // Activity Overview Chart
        try {
            const activityCanvas = document.getElementById('activityChart');
            if (!activityCanvas) return;
            const activityCtx = activityCanvas.getContext('2d');
            if (!activityCtx) return;
            
            const activityData = {
                labels: @Html.Raw(Json.Serialize(Model.SignupsOverTime.Select(s => s.Date))),
                datasets: [
                    {
                        label: 'Signups',
                        data: @Html.Raw(Json.Serialize(Model.SignupsOverTime.Select(s => s.Value))),
                        borderColor: '#6366F1',
                        backgroundColor: 'rgba(99, 102, 241, 0.1)',
                        tension: 0.4,
                        fill: true,
                        borderWidth: 3
                    },
                    {
                        label: 'Book Creations',
                        data: @Html.Raw(Json.Serialize(Model.BookCreationsOverTime.Select(s => s.Value))),
                        borderColor: '#FA709A',
                        backgroundColor: 'rgba(250, 112, 154, 0.1)',
                        tension: 0.4,
                        fill: true,
                        borderWidth: 3
                    }
                ]
            };
            window.activityChart = new Chart(activityCtx, {
                type: 'line',
                data: activityData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        } catch (e) {
            console.error('Error initializing Activity Chart:', e);
        }
    };

    function refreshAnalytics() {
        Swal.fire({
            title: 'Refreshing Analytics',
            text: 'Please wait...',
            icon: 'info',
            timer: 1500,
            showConfirmButton: false
        }).then(() => {
            location.reload();
        });
    }

    function exportAnalytics() {
        Swal.fire({
            title: 'Export Analytics',
            text: 'Choose export format',
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'PDF',
            cancelButtonText: 'CSV',
            showDenyButton: true,
            denyButtonText: 'Excel'
        }).then((result) => {
            if (result.isConfirmed) {
                exportPDF();
            } else if (result.isDenied) {
                exportExcel();
            } else {
                exportCSV();
            }
        });
    }

    function exportPDF() {
        performAnalyticsExport('pdf');
    }

    function exportCSV() {
        performAnalyticsExport('csv');
    }

    function exportExcel() {
        performAnalyticsExport('excel');
    }

    function performAnalyticsExport(format) {
        Swal.fire({
            title: 'Exporting...',
            html: '<div style="text-align: center;"><i class="fas fa-spinner fa-spin" style="font-size: 32px; margin-bottom: 16px;"></i><p>Preparing file...</p></div>',
            allowOutsideClick: false,
            showConfirmButton: false,
            didOpen: () => Swal.showLoading()
        });

        const link = document.createElement('a');
        link.href = '@Url.Action("ExportAnalytics", "Admin")' + `?format=${format}`;
        link.style.display = 'none';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);

        setTimeout(() => {
            Swal.fire({
                icon: 'success',
                title: 'Export Complete!',
                text: 'Report exported successfully.',
                timer: 2000,
                showConfirmButton: false
            });
        }, 1200);
    }
    
    // Initialize on load
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                if (typeof window.initCharts === 'function') {
                    window.initCharts();
                }
            }, 300);
        });
    } else {
        setTimeout(function() {
            if (typeof window.initCharts === 'function') {
                window.initCharts();
            }
        }, 300);
    }
</script>

@@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Feature Management";
}
<style>
    /* Outstanding Role Management Styles */
    .role-management-container {
        animation: fadeIn 0.8s ease-out;
        padding: 20px;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Stats Cards with Outstanding Design */
    .stats-row {
        margin-bottom: 35px;
    }

    .stat-card {
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
        border: none;
        height: 100%;
        animation: floatIn 0.6s ease-out;
        animation-fill-mode: both;
    }

        .stat-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.5s ease;
        }

        .stat-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

            .stat-card:hover::before {
                transform: scaleX(1);
            }

    .stats-icon {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 1.8rem;
        transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        animation: pulseIcon 3s infinite;
    }

    @@keyframes pulseIcon {
        0% {
            transform: scale(1);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        50% {
            transform: scale(1.1);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }

        100% {
            transform: scale(1);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
    }

    .stat-card:hover .stats-icon {
        transform: scale(1.2) rotate(10deg);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
    }

    .stats-count {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 10px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        transition: all 0.3s ease;
    }

    .stat-card:hover .stats-count {
        transform: scale(1.1);
    }

    .stats-label {
        color: #6c757d;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9rem;
    }

    /* Roles Management Card with Outstanding Design */
    .roles-card {
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        border: none;
        margin-bottom: 30px;
        animation: fadeIn 0.8s ease-out;
    }

        .roles-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }

    .card-header {
        background: linear-gradient(90deg, #667eea, #764ba2);
        color: white;
        padding: 25px;
        border: none;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .card-header h5 {
            margin: 0;
            font-weight: 700;
            font-size: 1.5rem;
        }

    .btn-primary {
        background: linear-gradient(135deg, #ff6b6b, #ee5a52);
        border: none;
        padding: 12px 25px;
        border-radius: 15px;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 8px 25px rgba(255, 107, 107, 0.3);
    }

        .btn-primary:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 12px 30px rgba(255, 107, 107, 0.4);
        }

    .card-body {
        padding: 30px;
    }

    /* Table with Outstanding Design */
    .table-responsive {
        border-radius: 15px;
        overflow: hidden;
    }

    .table {
        margin-bottom: 0;
    }

        .table thead th {
            background: linear-gradient(90deg, #667eea, #764ba2);
            color: white;
            border: none;
            font-weight: 600;
            padding: 20px 15px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 0.9rem;
        }

        .table tbody td {
            padding: 20px 15px;
            vertical-align: middle;
            border-bottom: 1px solid #e9ecef;
            transition: all 0.3s ease;
        }

        .table tbody tr {
            transition: all 0.3s ease;
        }

            .table tbody tr:hover {
                background-color: rgba(102, 126, 234, 0.05);
                transform: scale(1.01);
            }

    .avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        animation: bounce 4s infinite;
    }

    @@keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-5px);
        }

        60% {
            transform: translateY(-3px);
        }
    }

    .table tbody tr:hover .avatar {
        transform: scale(1.1) rotate(5deg);
    }

    .badge {
        padding: 8px 16px;
        border-radius: 25px;
        font-size: 0.85rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        margin: 2px;
    }

        .badge:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.12);
        }

        .badge.bg-primary {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.9), rgba(118, 75, 162, 0.9)) !important;
        }

        .badge.bg-success {
            background: linear-gradient(135deg, rgba(78, 205, 196, 0.9), rgba(68, 160, 141, 0.9)) !important;
        }

        .badge.bg-info {
            background: linear-gradient(135deg, rgba(52, 152, 219, 0.9), rgba(41, 128, 185, 0.9)) !important;
        }

        .badge.bg-warning {
            background: linear-gradient(135deg, rgba(241, 196, 15, 0.9), rgba(243, 156, 18, 0.9)) !important;
        }

        .badge.bg-secondary {
            background: linear-gradient(135deg, rgba(149, 165, 166, 0.9), rgba(127, 140, 141, 0.9)) !important;
        }

    .btn-outline-primary, .btn-outline-danger {
        padding: 10px 15px;
        border: 2px solid #e9ecef;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    }

    .btn-outline-primary {
        color: #667eea;
        background: rgba(102, 126, 234, 0.1);
    }

    .btn-outline-danger {
        color: #ff6b6b;
        background: rgba(255, 107, 107, 0.1);
    }

    .btn-outline-primary:hover {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        border-color: #667eea;
        transform: translateY(-3px) scale(1.1);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    }

    .btn-outline-danger:hover {
        background: linear-gradient(135deg, #ff6b6b, #ee5a52);
        color: white;
        border-color: #ff6b6b;
        transform: translateY(-3px) scale(1.1);
        box-shadow: 0 8px 20px rgba(255, 107, 107, 0.3);
    }

    /* Modal with Outstanding Design */
    .modal-content {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
        animation: modalSlideIn 0.4s ease-out;
    }

    @@keyframes modalSlideIn {
        from {
            opacity: 0;
            transform: translateY(-50px) scale(0.9);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .modal-header {
        background: linear-gradient(90deg, #667eea, #764ba2);
        color: white;
        border: none;
        padding: 25px;
    }

    .modal-body {
        padding: 30px;
    }

    .modal-footer {
        padding: 25px;
        border: none;
        background: #f8f9fa;
    }

    .form-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
        font-size: 1.1rem;
    }

    .form-control, .form-select {
        border-radius: 15px;
        padding: 15px 20px;
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
        background: #ffffff;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.2);
            transform: translateY(-2px);
        }

    .form-check {
        margin-bottom: 15px;
    }

    .form-check-input {
        width: 20px;
        height: 20px;
        margin-top: 2px;
    }

    .form-check-label {
        font-weight: 500;
        margin-left: 10px;
        font-size: 1rem;
    }

    .btn-secondary {
        background: #6c757d;
        border: none;
        border-radius: 15px;
        padding: 12px 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(108, 117, 125, 0.2);
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(108, 117, 125, 0.3);
        }

    /* Animations */
    @@keyframes floatIn {
        from {
            opacity: 0;
            transform: translateY(30px) scale(0.95);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .role-management-container {
            padding: 15px;
        }

        .stats-count {
            font-size: 2rem;
        }

        .card-header {
            flex-direction: column;
            gap: 15px;
            text-align: center;
            padding: 20px;
        }

        .btn-primary {
            width: 100%;
            justify-content: center;
        }

        .table-responsive {
            font-size: 0.9rem;
        }

        .avatar {
            width: 40px;
            height: 40px;
            font-size: 1rem;
        }

        .badge {
            padding: 6px 12px;
            font-size: 0.8rem;
        }

        .btn-outline-primary, .btn-outline-danger {
            padding: 8px 12px;
            font-size: 0.9rem;
        }
    }

    @@media (max-width: 576px) {
        .role-management-container {
            padding: 10px;
        }

        .stats-count {
            font-size: 1.8rem;
        }

        .card-body {
            padding: 20px;
        }

        .table-responsive {
            font-size: 0.85rem;
        }

        .modal-body {
            padding: 20px;
        }

        .modal-footer {
            padding: 20px;
            flex-direction: column;
            gap: 10px;
        }

        .btn-secondary, .btn-primary {
            width: 100%;
            justify-content: center;
        }
    }
    /*  Grid Lines in VUE.js grid */
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: center;
    }

    th {
        background-color: #f9f9f9;
    }
</style>
<div id="app" class="p-6 max-w-5xl mx-auto">
    <h2 class="text-2xl font-bold mb-4">📋 Manage Plan Features</h2>

    <!-- Add Feature Form -->
    <form @@submit.prevent="addFeature" class="grid grid-cols-2 gap-4 bg-gray-50 p-4 rounded-xl shadow-md mb-6">
        <input v-model="newFeature.FeatureName" placeholder="Feature Name" class="border p-2 rounded" required />
        <input v-model="newFeature.Description" placeholder="Description" class="border p-2 rounded" />
        <input type="number" v-model="newFeature.FeatureRate" placeholder="Rate" class="border p-2 rounded" step="0.01" required />
        <input v-model="newFeature.Currency" placeholder="Currency (e.g., USD)" class="border p-2 rounded" required />
        <input v-model="newFeature.Status" placeholder="Status (Active/Inactive)" class="border p-2 rounded" />
        <button type="submit" class="col-span-2 bg-blue-600 text-white p-2 rounded hover:bg-blue-700">Add Feature</button>
    </form>

    <!-- Features List -->
    <div>
        <h3 class="text-xl font-semibold mb-2">Existing Features</h3>
        <table class="table-auto w-full border-collapse border border-gray-300 border-collapse shadow-sm">
            <thead class="bg-gray-200">
                <tr>
                    <th class="border border-gray-300 px-3 py-2 text-center">ID</th>
                    <th class="border border-gray-300 px-3 py-2 text-center">Feature Name</th>
                    <th class="border border-gray-300 px-3 py-2 text-center">Description</th>
                    <th class="border border-gray-300 px-3 py-2 text-center">Rate</th>
                    <th class="border border-gray-300 px-3 py-2 text-center">Currency</th>
                    <th class="border border-gray-300 px-3 py-2 text-center">Status</th>
                    <th class="border border-gray-300 px-3 py-2 text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="f in features" :key="f.FeatureId" class="hover:bg-gray-50">
                    <td class="border border-gray-300 px-3 py-2 text-center">{{ f.FeatureId }}</td>
                    <td class="border border-gray-300 px-3 py-2">{{ f.FeatureName }}</td>
                    <td class="border border-gray-300 px-3 py-2">{{ f.Description }}</td>
                    <td class="border border-gray-300 px-3 py-2 text-right">{{ f.FeatureRate.toFixed(2) }}</td>
                    <td class="border border-gray-300 px-3 py-2">{{ f.Currency }}</td>
                    <td class="border border-gray-300 px-3 py-2">{{ f.Status }}</td>
                    <td class="border p-2 text-center">
                        <button @@click="deleteFeature(f.featureId)" class="text-red-600 hover:underline">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<!-- Vue.js + Script -->
<script src="https://unpkg.com/vue@3"></script>
<script>
    const app = Vue.createApp({
        data() {
            return {
                features: [],
                    newFeature: {
                    FeatureName: '',
                    Description: '',
                    FeatureRate: 0,
                    Currency: 'USD',
                    Status: 'Active',
                    PlanId: 0,
                    isActive: 1
                }

            }
        },
        methods: {
            async loadFeatures() {
                const response = await fetch('/api/planfeatures');
                if (response.ok) {
                    this.features = await response.json();
                    console.log("Loaded features:", this.features);
                } else {
                    console.error("Error loading features", response.statusText);
                }
            },
                async addFeature() {
                   const feature = this.newFeature;
                    const response = await fetch('/api/planfeatures/add', {
                      method: 'POST',
                      headers: { 'Content-Type': 'application/json' },
                      body: JSON.stringify(feature)
                    });

                    if (response.ok) {
                      this.loadFeatures(); // refresh grid
                      this.newFeature = { FeatureName: '', Description: '', FeatureRate: 0, Currency: 'USD', Status: 'Active' };
                    } else {
                      console.error("Failed to add feature:", await response.text());
                    }
                },
            async deleteFeature(id) {
                if (!confirm("Are you sure you want to delete this feature?")) return;
                const response = await fetch(`/api/planfeatures/${id}`, { method: 'DELETE' });
                if (response.ok) {
                    this.loadFeatures();
                } else {
                    alert("Error deleting feature");
                }
            }
        },
        mounted() {
            this.loadFeatures();
        }
    });

    app.mount('#app');
</script>
    function performExport(format) {
        Swal.fire({
            title: 'Exporting...',
            html: `<div style="text-align: center;"><i class="fas fa-spinner fa-spin" style="font-size: 32px; color: var(--primary); margin-bottom: 12px;"></i><p>Preparing ${format.toUpperCase()} file...</p></div>`,
            allowOutsideClick: false,
            showConfirmButton: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });
        
        // Get current filters
        const roleFilter = document.querySelector('select[name="roleFilter"]')?.value || '';
        const statusFilter = document.querySelector('select[name="statusFilter"]')?.value || '';
        
        // Build export URL
        const exportUrl = '@Url.Action("ExportUsers", "Admin")' + 
            `?format=${format}` +
            (roleFilter ? `&roleFilter=${encodeURIComponent(roleFilter)}` : '') +
            (statusFilter ? `&statusFilter=${encodeURIComponent(statusFilter)}` : '');
        
        // Create a temporary link to trigger download
        const link = document.createElement('a');
        link.href = exportUrl;
        link.style.display = 'none';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
        
        // Show success after a delay
        setTimeout(() => {
            Swal.fire({
                icon: 'success',
                title: 'Export Complete!',
                html: `<div style="text-align: center;"><i class="fas fa-check-circle" style="font-size: 48px; color: var(--success); margin-bottom: 12px;"></i><p>Users exported successfully as <strong>${format.toUpperCase()}</strong></p><p style="font-size: 12px; color: var(--text-muted); margin-top: 8px;">Check your downloads folder</p></div>`
                timer: 3000,
                showConfirmButton: false,
                timerProgressBar: true
            });
        }, 1500);
    }
    

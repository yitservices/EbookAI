@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add entrance animations
            const elements = document.querySelectorAll('.stat-card, .search-section, .users-table-container, .pagination-container');
            elements.forEach((el, index) => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(30px)';
                setTimeout(() => {
                    el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                    el.style.opacity = '1';
                    el.style.transform = 'translateY(0)';
                }, 150 * index);
            });

            // Search functionality
            document.getElementById('searchUsers').addEventListener('input', function() {
                filterUsers();
            });

            // Role filter
            document.getElementById('roleFilter').addEventListener('change', function() {
                filterUsers();
            });

            // Status filter
            document.getElementById('statusFilter').addEventListener('change', function() {
                filterUsers();
            });

            function filterUsers() {
                const searchTerm = document.getElementById('searchUsers').value.toLowerCase();
                const roleFilter = document.getElementById('roleFilter').value.toLowerCase();
                const statusFilter = document.getElementById('statusFilter').value.toLowerCase();
                const userRows = document.querySelectorAll('tbody tr');

                userRows.forEach(row => {
                    const name = row.querySelector('.user-info strong')?.textContent.toLowerCase() || '';
                    const email = row.cells[1]?.textContent.toLowerCase() || '';
                    const role = row.getAttribute('data-role')?.toLowerCase() || '';
                    const status = row.getAttribute('data-status')?.toLowerCase() || '';

                    const matchesSearch = name.includes(searchTerm) || email.includes(searchTerm);
                    const matchesRole = !roleFilter || role.includes(roleFilter);
                    const matchesStatus = !statusFilter || status.includes(statusFilter);

                    if (matchesSearch && matchesRole && matchesStatus) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            }

            // Export users functionality
            document.getElementById('exportUsersBtn').addEventListener('click', function() {
                Swal.fire({
                    title: 'Exporting Users',
                    text: 'Preparing user data for export...',
                    allowOutsideClick: false,
                    showConfirmButton: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                setTimeout(() => {
                    Swal.fire({
                        title: 'Export Complete!',
                        text: 'User data has been exported successfully.',
                        icon: 'success',
                        confirmButtonColor: '#667eea'
                    });
                }, 1500);
            });

            // Save user functionality
            document.getElementById('saveUserBtn').addEventListener('click', function() {
                const userId = document.getElementById('userId').value;
                const fullName = document.getElementById('fullName').value;

                if (!fullName) {
                    Swal.fire({
                        title: 'Name Required',
                        text: 'Please enter a full name for the user.',
                        icon: 'warning',
                        confirmButtonColor: '#667eea'
                    });
                    return;
                }

                const action = userId ? 'Updating' : 'Creating';

                // Show loading state
                const saveBtn = this;
                const originalText = saveBtn.innerHTML;
                saveBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span> Saving...';
                saveBtn.disabled = true;

                // Simulate save process
                setTimeout(() => {
                    Swal.fire({
                        title: 'User ' + (userId ? 'Updated' : 'Created') + '!',
                        text: 'The user has been ' + (userId ? 'updated' : 'created') + ' successfully.',
                        icon: 'success',
                        confirmButtonColor: '#667eea'
                    });

                    // Close modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('userModal'));
                    modal.hide();

                    // Reset button
                    saveBtn.innerHTML = originalText;
                    saveBtn.disabled = false;

                    // Reset form
                    document.getElementById('userForm').reset();
                }, 1500);
            });

            // Edit user buttons
            const editButtons = document.querySelectorAll('.btn-action:not(.delete)');
            editButtons.forEach(button => {
                button.addEventListener('click', function() {
                    document.getElementById('userModalLabel').textContent = 'Edit User';
                    // In a real app, you would populate the form with user data
                    document.getElementById('userId').value = '123';
                    document.getElementById('fullName').value = 'John Doe';
                    document.getElementById('userEmail').value = 'john.doe@example.com';
                    document.getElementById('userRole').value = '1';
                    document.getElementById('userStatus').value = 'Active';

                    new bootstrap.Modal(document.getElementById('userModal')).show();
                });
            });

            // Delete user buttons
            const deleteButtons = document.querySelectorAll('.btn-action.delete');
            deleteButtons.forEach(button => {
                button.addEventListener('click', function() {
                    Swal.fire({
                        title: 'Delete User?',
                        text: 'This action cannot be undone',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#ff6b6b',
                        confirmButtonText: 'Delete',
                        cancelButtonColor: '#6c757d'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            Swal.fire({
                                title: 'Deleting User',
                                text: 'Please wait while we delete the user...',
                                allowOutsideClick: false,
                                showConfirmButton: false,
                                didOpen: () => {
                                    Swal.showLoading();
                                }
                            });

                            // Simulate delete process
                            setTimeout(() => {
                                Swal.fire({
                                    title: 'User Deleted!',
                                    text: 'The user has been deleted successfully.',
                                    icon: 'success',
                                    confirmButtonColor: '#667eea'
                                });
                                // In a real app, you would remove the user from the table
                            }, 1000);
                        }
                    });
                });
            });
        });
    </script>

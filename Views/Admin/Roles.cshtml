        document.addEventListener('DOMContentLoaded', function() {
            // Add entrance animations
            const elements = document.querySelectorAll('.stat-card, .roles-carousel, .role-card, .permissions-matrix-section');
            elements.forEach((el, index) => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(30px)';
                setTimeout(() => {
                    el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                    el.style.opacity = '1';
                    el.style.transform = 'translateY(0)';
                }, 150 * index);
            });

            // Initialize carousel with custom settings
            const rolesCarousel = new bootstrap.Carousel(document.getElementById('rolesCarousel'), {
                interval: 5000,
                wrap: true
            });

            // Save role functionality
            document.getElementById('saveRoleBtn').addEventListener('click', function() {
                const roleName = document.getElementById('roleName').value;

                if (!roleName) {
                    Swal.fire({
                        title: 'Role Name Required',
                        text: 'Please enter a name for the role.',
                        icon: 'warning',
                        confirmButtonColor: '#667eea'
                    });
                    return;
                }

                // Show loading state
                const saveBtn = this;
                const originalText = saveBtn.innerHTML;
                saveBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span> Creating...';
                saveBtn.disabled = true;

                // Simulate save process
                setTimeout(() => {
                    Swal.fire({
                        title: 'Role Created!',
                        text: 'The role has been created successfully.',
                        icon: 'success',
                        confirmButtonColor: '#667eea'
                    });

                    // Close modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('roleModal'));
                    modal.hide();

                    // Reset button
                    saveBtn.innerHTML = originalText;
                    saveBtn.disabled = false;

                    // Reset form
                    document.getElementById('roleForm').reset();
                }, 1500);
            });

            // Edit role buttons
            const editButtons = document.querySelectorAll('.btn-role-outline');
            editButtons.forEach(button => {
                button.addEventListener('click', function() {
                    document.getElementById('roleModalLabel').textContent = 'Edit Role';
                    document.getElementById('saveRoleBtn').textContent = 'Update Role';
                    // In a real app, you would populate the form with role data
                    document.getElementById('roleId').value = '123';
                    document.getElementById('roleName').value = 'Administrator';

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Roles Management";
}

<style>
    /* Outstanding Roles Management Styles */
    .roles-management-container {
        animation: fadeIn 0.8s ease-out;
        padding: 20px;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Header with Gradient Animation */
    .roles-management-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 25px;
        padding: 35px;
        color: white;
        margin-bottom: 35px;
        box-shadow: 0 20px 40px rgba(102, 126, 234, 0.3);
        position: relative;
        overflow: hidden;
        border: none;
        animation: slideInDown 0.6s ease-out;
    }

        .roles-management-header::before {
            content: "";
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.1);
            transform: rotate(30deg);
            animation: shimmer 3s infinite;
        }

    @@keyframes shimmer {
        0% {
            transform: rotate(30deg) translateX(-20%);
        }

        50% {
            transform: rotate(30deg) translateX(20%);
        }

        100% {
            transform: rotate(30deg) translateX(-20%);
        }
    }

    .roles-management-header h1 {
        font-weight: 800;
        margin-bottom: 10px;
        font-size: 2.8rem;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        animation: textGlow 2s infinite alternate;
    }

    @@keyframes textGlow {
        from {
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        to {
            text-shadow: 0 2px 10px rgba(255, 255, 255, 0.4);
        }
    }

    .roles-management-header p {
        opacity: 0.9;
        margin-bottom: 0;
        font-size: 1.2rem;
        max-width: 700px;
    }

    /* Stats Cards with Outstanding Design */
    .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
        border-radius: 25px;
        padding: 35px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        position: relative;
        overflow: hidden;
        border: none;
        animation: floatIn 0.6s ease-out;
        animation-fill-mode: both;
    }

        .stat-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.5s ease;
        }

        .stat-card:hover {
            transform: translateY(-12px) scale(1.03);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
        }

            .stat-card:hover::before {
                transform: scaleX(1);
            }

    .stat-icon {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 25px;
        font-size: 2.5rem;
        transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        animation: pulseIcon 3s infinite;
    }

    @@keyframes pulseIcon {
        0% {
            transform: scale(1);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }

        50% {
            transform: scale(1.1);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        }

        100% {
            transform: scale(1);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }
    }

    .stat-card:hover .stat-icon {
        transform: scale(1.2) rotate(10deg);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.25);
    }

    .stat-card.admin .stat-icon {
        background: linear-gradient(135deg, #ff6b6b, #ee5a52);
        color: white;
    }

    .stat-card.author .stat-icon {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }

    .stat-card.reader .stat-icon {
        background: linear-gradient(135deg, #4ecdc4, #44a08d);
        color: white;
    }

    .stat-card.total .stat-icon {
        background: linear-gradient(135deg, #ffd166, #ffb347);
        color: white;
    }

    .stat-value {
        font-size: 3.2rem;
        font-weight: 800;
        margin-bottom: 15px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        transition: all 0.3s ease;
    }

    .stat-card:hover .stat-value {
        transform: scale(1.1);
    }

    .stat-label {
        font-size: 1.1rem;
        color: #6c757d;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1.5px;
    }

    /* Roles Carousel Section */
    .roles-carousel-section {
        margin-bottom: 50px;
    }

    .section-title {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 30px;
        color: #333;
        display: flex;
        align-items: center;
        gap: 15px;
        position: relative;
        padding-bottom: 20px;
    }

        .section-title::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 80px;
            height: 5px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            border-radius: 3px;
        }

        .section-title i {
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 1.6rem;
        }

    .roles-carousel {
        position: relative;
        border-radius: 25px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
        padding: 30px;
    }

    .carousel-inner {
        border-radius: 20px;
        overflow: hidden;
    }

    .carousel-item {
        transition: transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .carousel-control-prev, .carousel-control-next {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: rgba(102, 126, 234, 0.9);
        top: 50%;
        transform: translateY(-50%);
        opacity: 0.8;
        transition: all 0.3s ease;
        margin: 0 20px;
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
    }

        .carousel-control-prev:hover, .carousel-control-next:hover {
            opacity: 1;
            transform: translateY(-50%) scale(1.1);
            box-shadow: 0 15px 30px rgba(102, 126, 234, 0.4);
        }

    .carousel-control-prev {
        left: -30px;
    }

    .carousel-control-next {
        right: -30px;
    }

    .carousel-indicators {
        bottom: -50px;
    }

        .carousel-indicators button {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: rgba(102, 126, 234, 0.5);
            transition: all 0.3s ease;
            margin: 0 5px;
        }

            .carousel-indicators button.active {
                background-color: #667eea;
                transform: scale(1.3);
            }

    /* Role Cards Grid */
    .roles-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 30px;
        margin-bottom: 50px;
    }

    .role-card {
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
        border-radius: 25px;
        padding: 0;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        overflow: hidden;
        border: none;
        animation: floatIn 0.6s ease-out;
        animation-fill-mode: both;
        position: relative;
    }

        .role-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            transform: scaleX(0);
            transform-origin: left;
            transition: transform 0.5s ease;
        }

        .role-card:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
        }

            .role-card:hover::before {
                transform: scaleX(1);
            }

    .role-card-header {
        padding: 30px 30px 20px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .role-icon {
        width: 70px;
        height: 70px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: white;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .role-card:hover .role-icon {
        transform: scale(1.1) rotate(5deg);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
    }

    .role-card.admin .role-icon {
        background: linear-gradient(135deg, #ff6b6b, #ee5a52);
    }

    .role-card.author .role-icon {
        background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .role-card.reader .role-icon {
        background: linear-gradient(135deg, #4ecdc4, #44a08d);
    }

    .role-card.moderator .role-icon {
        background: linear-gradient(135deg, #ffd166, #ffb347);
    }

    .role-card.editor .role-icon {
        background: linear-gradient(135deg, #a78bfa, #8b5cf6);
    }

    .role-card.contributor .role-icon {
        background: linear-gradient(135deg, #06d6a0, #05a17d);
    }

    .role-info h3 {
        font-weight: 700;
        margin-bottom: 5px;
        font-size: 1.5rem;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .role-info p {
        color: #6c757d;
        margin-bottom: 0;
        font-size: 0.95rem;
    }

    .role-card-body {
        padding: 25px 30px;
    }

    .role-description {
        color: #6c757d;
        margin-bottom: 20px;
        line-height: 1.6;
    }

    .permissions-list {
        margin-bottom: 25px;
    }

        .permissions-list h5 {
            font-weight: 600;
            margin-bottom: 15px;
            color: #333;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .permissions-list h5 i {
                color: #667eea;
            }

    .permissions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
        gap: 12px;
    }

    .permission-badge {
        background: rgba(102, 126, 234, 0.1);
        color: #667eea;
        padding: 8px 12px;
        border-radius: 12px;
        font-size: 0.85rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 6px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

        .permission-badge:hover {
            background: rgba(102, 126, 234, 0.2);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
        }

        .permission-badge i {
            font-size: 0.8rem;
        }

    .role-card-footer {
        padding: 20px 30px;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .users-count {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #6c757d;
        font-weight: 500;
    }

        .users-count i {
            color: #667eea;
        }

    .role-actions {
        display: flex;
        gap: 10px;
    }

    .btn-role {
        padding: 10px 20px;
        border-radius: 15px;
        font-weight: 600;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border: none;
    }

    .btn-role-primary {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }

        .btn-role-primary:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
        }

    .btn-role-outline {
        background: transparent;
        border: 2px solid #667eea;
        color: #667eea;
    }

        .btn-role-outline:hover {
            background: #667eea;
            color: white;
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
        }

    /* Permissions Matrix Section */
    .permissions-matrix-section {
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
        padding: 40px;
        border-radius: 25px;
        margin-bottom: 50px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        transition: all 0.4s ease;
        border: none;
        animation: slideInUp 0.6s ease-out;
    }

        .permissions-matrix-section:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 45px rgba(0, 0, 0, 0.15);
        }

    .matrix-container {
        overflow-x: auto;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }

    .permissions-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 20px;
        overflow: hidden;
    }

        .permissions-table thead th {
            background: linear-gradient(90deg, #667eea, #764ba2);
            color: white;
            border: none;
            font-weight: 600;
            padding: 20px 15px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 0.9rem;
            text-align: center;
        }

        .permissions-table tbody td {
            padding: 20px 15px;
            vertical-align: middle;
            border-bottom: 1px solid #e9ecef;
            transition: all 0.3s ease;
            text-align: center;
        }

        .permissions-table tbody tr {
            transition: all 0.3s ease;
        }

            .permissions-table tbody tr:hover {
                background-color: rgba(102, 126, 234, 0.05);
                transform: scale(1.01);
            }

    .permission-check {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: rgba(76, 209, 55, 0.2);
        color: #4cd137;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .permission-denied {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: rgba(255, 107, 107, 0.2);
        color: #ff6b6b;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

        .permission-check:hover, .permission-denied:hover {
            transform: scale(1.2);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    /* Modal Styles with Outstanding Design */
    .modal-content {
        border: none;
        border-radius: 25px;
        overflow: hidden;
        box-shadow: 0 25px 60px rgba(0, 0, 0, 0.25);
        animation: modalSlideIn 0.4s ease-out;
    }

    @@keyframes modalSlideIn {
        from {
            opacity: 0;
            transform: translateY(-50px) scale(0.9);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .modal-header {
        background: linear-gradient(90deg, #667eea, #764ba2);
        color: white;
        border: none;
        padding: 30px;
    }

    .modal-body {
        padding: 35px;
    }

    .modal-footer {
        padding: 30px;
        border: none;
        background: #f8f9fa;
    }

    .form-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 12px;
        font-size: 1.1rem;
    }

    .form-control, .form-select {
        border-radius: 15px;
        padding: 15px 20px;
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
        background: #ffffff;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

        .form-control:focus, .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.2);
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: #6c757d;
        border: none;
        border-radius: 15px;
        padding: 12px 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(108, 117, 125, 0.2);
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(108, 117, 125, 0.3);
        }

    /* Animations */
    @@keyframes slideInDown {
        from {
            opacity: 0;
            transform: translateY(-50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes floatIn {
        from {
            opacity: 0;
            transform: translateY(30px) scale(0.95);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    /* Responsive Design */
    @@media (max-width: 1200px) {
        .roles-grid {
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        }
    }

    @@media (max-width: 992px) {
        .roles-management-container {
            padding: 15px;
        }

        .roles-management-header {
            padding: 30px 25px;
        }

            .roles-management-header h1 {
                font-size: 2.3rem;
            }

        .stats-container {
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        }

        .roles-grid {
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        }

        .carousel-control-prev, .carousel-control-next {
            width: 50px;
            height: 50px;
        }

        .carousel-control-prev {
            left: -20px;
        }

        .carousel-control-next {
            right: -20px;
        }
    }

    @@media (max-width: 768px) {
        .roles-management-container {
            padding: 10px;
        }

        .roles-management-header {
            padding: 25px 20px;
            text-align: center;
        }

            .roles-management-header h1 {
                font-size: 2rem;
            }

        .stats-container {
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .stat-card {
            padding: 25px;
        }

        .stat-icon {
            width: 70px;
            height: 70px;
            font-size: 2rem;
        }

        .stat-value {
            font-size: 2.5rem;
        }

        .roles-grid {
            grid-template-columns: 1fr;
            gap: 25px;
        }

        .role-card-header {
            padding: 25px 25px 15px;
        }

        .role-card-body {
            padding: 20px 25px;
        }

        .role-card-footer {
            padding: 15px 25px;
            flex-direction: column;
            gap: 15px;
            align-items: flex-start;
        }

        .role-actions {
            width: 100%;
            justify-content: space-between;
        }

        .permissions-matrix-section {
            padding: 30px 20px;
        }

        .permissions-grid {
            grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        }

        .carousel-control-prev, .carousel-control-next {
            display: none;
        }
    }

    @@media (max-width: 576px) {
        .roles-management-container {
            padding: 5px;
        }

        .roles-management-header {
            padding: 20px 15px;
        }

            .roles-management-header h1 {
                font-size: 1.7rem;
            }

        .stats-container {
            grid-template-columns: 1fr;
        }

        .stat-value {
            font-size: 2.2rem;
        }

        .section-title {
            font-size: 1.5rem;
        }

        .roles-carousel {
            padding: 20px;
        }

        .role-card-header {
            flex-direction: column;
            text-align: center;
            gap: 15px;
        }

        .permissions-grid {
            grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        }

        .btn-role {
            padding: 8px 15px;
            font-size: 0.9rem;
        }

        .modal-body {
            padding: 25px;
        }
    }
</style>

<div class="roles-management-container">
    <!-- Header Section -->
    <div class="roles-management-header">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1><i class="fas fa-user-tag me-3"></i>Roles & Permissions</h1>
                <p>Manage user roles, permissions, and access levels across the platform with precision control</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#roleModal">
                    <i class="fas fa-plus-circle me-2"></i>Create New Role
                </button>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="stats-container">
        <div class="stat-card admin" data-aos="fade-up" data-aos-delay="100">
            <div class="stat-icon admin">
                <i class="fas fa-user-shield"></i>
            </div>
            <div class="stat-value">5</div>
            <div class="stat-label">Admin Roles</div>
        </div>

        <div class="stat-card author" data-aos="fade-up" data-aos-delay="200">
            <div class="stat-icon author">
                <i class="fas fa-pen-fancy"></i>
            </div>
            <div class="stat-value">8</div>
            <div class="stat-label">Custom Roles</div>

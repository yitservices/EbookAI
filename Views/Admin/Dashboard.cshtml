@model EBookDashboard.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard Overview";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script src="~/js/admin-animations.js"></script>

<style>
    /* Modern Color Palette - Dribbble/Pinterest Inspired */
    :root {
        --white: #FFFFFF;
        --light-gray: #F8F9FA;
        --warm-gray: #E9ECEF;
        --soft-beige: #F5F1EB;
        --text-primary: #1A1A1A;
        --text-secondary: #6C757D;
        --text-muted: #ADB5BD;
        --accent-yellow: #FFD700;
        --accent-yellow-light: #FFF8DC;
        --accent-gray: #D3D3D3;
        --border-light: #E5E7EB;
        --shadow-soft: rgba(0, 0, 0, 0.04);
        --shadow-medium: rgba(0, 0, 0, 0.08);
        --shadow-large: rgba(0, 0, 0, 0.12);
        --primary: #6366F1;
        --primary-light: #818CF8;
        --primary-dark: #4F46E5;
        --success: #10B981;
        --danger: #EF4444;
        --warning: #F59E0B;
        --gradient-1: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
        --gradient-2: linear-gradient(135deg, #F093FB 0%, #F5576C 100%);
        --gradient-3: linear-gradient(135deg, #4FACFE 0%, #00F2FE 100%);
        --gradient-4: linear-gradient(135deg, #43E97B 0%, #38F9D7 100%);
        --gradient-5: linear-gradient(135deg, #FA709A 0%, #FEE140 100%);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', 'Poppins', -apple-system, BlinkMacSystemFont, sans-serif;
        background: linear-gradient(135deg, #F8F9FA 0%, #E9ECEF 100%);
        color: var(--text-primary);
    }

    .dashboard-container {
        padding: 0;
        animation: fadeIn 0.6s ease-in;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Modern Summary Cards - Glassmorphism Style */
    .summary-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 24px;
        margin-bottom: 32px;
    }

    .summary-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 28px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.06), 0 2px 8px rgba(0, 0, 0, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.8);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        opacity: 1 !important;
        visibility: visible !important;
    }

    .summary-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: var(--gradient-1);
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.4s ease;
    }

    .summary-card:hover::before {
        transform: scaleX(1);
    }

    .summary-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 16px 48px rgba(99, 102, 241, 0.15), 0 4px 16px rgba(0, 0, 0, 0.08);
        border-color: rgba(99, 102, 241, 0.3);
    }

    .summary-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .summary-card-title {
        font-size: 13px;
        font-weight: 600;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 1px;
        opacity: 0.8;
    }

    .summary-card-icon {
        width: 56px;
        height: 56px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--gradient-1);
        color: white;
        font-size: 24px;
        box-shadow: 0 4px 16px rgba(99, 102, 241, 0.3);
        transition: all 0.3s ease;
    }

    .summary-card:hover .summary-card-icon {
        transform: rotate(5deg) scale(1.1);
        box-shadow: 0 8px 24px rgba(99, 102, 241, 0.4);
    }

    .summary-card-value {
        font-size: 36px;
        font-weight: 800;
        background: var(--gradient-1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 12px;
        line-height: 1.2;
    }

    .summary-card-change {
        font-size: 13px;
        color: var(--success);
        display: flex;
        align-items: center;
        gap: 6px;
        font-weight: 600;
    }

    .summary-card-change i {
        font-size: 12px;
    }

    /* Modern Progress Bars */
    .progress-container {
        margin-top: 16px;
    }

    .progress-label {
        font-size: 12px;
        color: var(--text-secondary);
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        font-weight: 600;
    }

    .progress-bar-wrapper {
        height: 10px;
        background: var(--warm-gray);
        border-radius: 10px;
        overflow: hidden;
        position: relative;
        box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.06);
    }

    .progress-bar {
        height: 100%;
        background: var(--gradient-4);
        border-radius: 10px;
        transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        box-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
    }

    .progress-bar.striped {
        background: repeating-linear-gradient(
            45deg,
            var(--accent-gray),
            var(--accent-gray) 10px,
            #C0C0C0 10px,
            #C0C0C0 20px
        );
    }

    .progress-percentage {
        position: absolute;
        right: 8px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 11px;
        font-weight: 600;
        color: var(--text-primary);
    }

    /* Modern Charts Section */
    .charts-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(420px, 1fr));
        gap: 28px;
        margin-bottom: 32px;
    }

    .chart-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 32px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.06), 0 2px 8px rgba(0, 0, 0, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.8);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        opacity: 1 !important;
        visibility: visible !important;
    }

    .chart-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 16px 48px rgba(99, 102, 241, 0.12), 0 4px 16px rgba(0, 0, 0, 0.08);
    }

    .chart-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        padding-bottom: 20px;
        border-bottom: 2px solid var(--warm-gray);
    }

    .chart-title {
        font-size: 20px;
        font-weight: 700;
        color: var(--text-primary);
        letter-spacing: -0.5px;
    }

    .chart-container {
        position: relative;
        height: 320px;
    }

    /* Modern Quick Navigation */
    .quick-nav {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 32px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.06), 0 2px 8px rgba(0, 0, 0, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.8);
        margin-bottom: 32px;
    }

    .quick-nav-title {
        font-size: 22px;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 24px;
        letter-spacing: -0.5px;
    }

    .quick-nav-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .quick-nav-item {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 20px;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.05) 0%, rgba(139, 92, 246, 0.05) 100%);
        border-radius: 16px;
        text-decoration: none;
        color: var(--text-primary);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border: 2px solid transparent;
        position: relative;
        overflow: hidden;
    }

    .quick-nav-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: var(--gradient-1);
        opacity: 0.1;
        transition: left 0.4s ease;
    }

    .quick-nav-item:hover::before {
        left: 0;
    }

    .quick-nav-item:hover {
        transform: translateX(8px) translateY(-2px);
        border-color: rgba(99, 102, 241, 0.3);
        box-shadow: 0 8px 24px rgba(99, 102, 241, 0.15);
    }

    .quick-nav-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--gradient-1);
        color: white;
        font-size: 20px;
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
    }

    .quick-nav-item:hover .quick-nav-icon {
        transform: rotate(5deg) scale(1.1);
        box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
    }

    .quick-nav-text {
        font-weight: 600;
        font-size: 15px;
        position: relative;
        z-index: 1;
    }

    /* Modern Recent Activity */
    .activity-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(420px, 1fr));
        gap: 28px;
    }

    .activity-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: 24px;
        padding: 32px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.06), 0 2px 8px rgba(0, 0, 0, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.8);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        opacity: 1 !important;
        visibility: visible !important;
    }

    .activity-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 16px 48px rgba(99, 102, 241, 0.12), 0 4px 16px rgba(0, 0, 0, 0.08);
    }

    .activity-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        padding-bottom: 20px;
        border-bottom: 2px solid var(--warm-gray);
    }

    .activity-title {
        font-size: 20px;
        font-weight: 700;
        color: var(--text-primary);
        letter-spacing: -0.5px;
    }

    .activity-table {
        width: 100%;
    }

    .activity-row {
        display: grid;
        grid-template-columns: auto 1fr auto;
        gap: 16px;
        padding: 16px;
        border-radius: 12px;
        margin-bottom: 8px;
        transition: all 0.3s ease;
        align-items: center;
        opacity: 1 !important;
        visibility: visible !important;
    }

    .activity-row:hover {
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.05) 0%, rgba(139, 92, 246, 0.05) 100%);
        transform: translateX(4px);
    }

    .activity-row:last-child {
        margin-bottom: 0;
    }

    .activity-avatar {
        width: 48px;
        height: 48px;
        border-radius: 14px;
        background: var(--gradient-1);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 16px;
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }

    .activity-info {
        flex: 1;
    }

    .activity-name {
        font-weight: 600;
        font-size: 15px;
        color: var(--text-primary);
        margin-bottom: 6px;
    }

    .activity-meta {
        font-size: 13px;
        color: var(--text-secondary);
        opacity: 0.8;
    }

    .activity-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .badge-active {
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(16, 185, 129, 0.25) 100%);
        color: var(--success);
        border: 1px solid rgba(16, 185, 129, 0.3);
    }

    .badge-pending {
        background: linear-gradient(135deg, rgba(245, 158, 11, 0.15) 0%, rgba(245, 158, 11, 0.25) 100%);
        color: var(--warning);
        border: 1px solid rgba(245, 158, 11, 0.3);
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .summary-cards {
            grid-template-columns: 1fr;
            gap: 16px;
        }

        .summary-card {
            padding: 20px;
        }

        .charts-section {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .chart-card {
            padding: 24px;
        }

        .chart-container {
            height: 250px;
        }

        .activity-section {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .quick-nav-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="dashboard-container">
    <!-- Summary Cards -->
    <div class="summary-cards">
        <div class="summary-card">
            <div class="summary-card-header">
                <span class="summary-card-title">Total Users</span>
                <div class="summary-card-icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
            <div class="summary-card-value">@Model.TotalUsers</div>
            <div class="summary-card-change">
                <i class="fas fa-arrow-up"></i>
                <span>+12% from last month</span>
            </div>
        </div>

        <div class="summary-card">
            <div class="summary-card-header">
                <span class="summary-card-title">Total Books</span>
                <div class="summary-card-icon">
                    <i class="fas fa-book"></i>
                </div>
            </div>
            <div class="summary-card-value">@Model.TotalBooks</div>
            <div class="summary-card-change">
                <i class="fas fa-arrow-up"></i>
                <span>+8% from last month</span>
            </div>
        </div>

        <div class="summary-card">
            <div class="summary-card-header">
                <span class="summary-card-title">Active Users</span>
                <div class="summary-card-icon">
                    <i class="fas fa-user-check"></i>
                </div>
            </div>
            <div class="summary-card-value">@Model.ActiveUsers</div>
            <div class="progress-container">
                <div class="progress-label">
                    <span>Active Rate</span>
                    <span>@((Model.TotalUsers > 0 ? (Model.ActiveUsers * 100.0 / Model.TotalUsers) : 0).ToString("F0"))%</span>
                </div>
                <div class="progress-bar-wrapper">
                    <div class="progress-bar" style="width: @((Model.TotalUsers > 0 ? (Model.ActiveUsers * 100.0 / Model.TotalUsers) : 0))%">
                        <span class="progress-percentage">@((Model.TotalUsers > 0 ? (Model.ActiveUsers * 100.0 / Model.TotalUsers) : 0).ToString("F0"))%</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="summary-card">
            <div class="summary-card-header">
                <span class="summary-card-title">Pending Tasks</span>
                <div class="summary-card-icon">
                    <i class="fas fa-tasks"></i>
                </div>
            </div>
            <div class="summary-card-value">@ViewBag.PendingTasks</div>
            <div class="summary-card-change">
                <i class="fas fa-clock"></i>
                <span>Requires attention</span>
            </div>
        </div>

        <div class="summary-card">
            <div class="summary-card-header">
                <span class="summary-card-title">Revenue Generated</span>
                <div class="summary-card-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
            <div class="summary-card-value">$@Model.TotalRevenue.ToString("N2")</div>
            <div class="summary-card-change">
                <i class="fas fa-arrow-up"></i>
                <span>+15% from last month</span>
            </div>
        </div>
    </div>

    <!-- Quick Navigation -->
    <div class="quick-nav">
        <div class="quick-nav-title">Quick Navigation</div>
        <div class="quick-nav-grid">
            <a href="@Url.Action("Users", "Admin")" class="quick-nav-item">
                <div class="quick-nav-icon">
                    <i class="fas fa-users"></i>
                </div>
                <span class="quick-nav-text">User Management</span>
            </a>
            <a href="@Url.Action("ContentManagement", "Admin")" class="quick-nav-item">
                <div class="quick-nav-icon">
                    <i class="fas fa-book"></i>
                </div>
                <span class="quick-nav-text">Books Management</span>
            </a>
            <a href="@Url.Action("ProgressTracker", "Admin")" class="quick-nav-item">
                <div class="quick-nav-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <span class="quick-nav-text">Progress Tracker</span>
            </a>
            <a href="@Url.Action("Analytics", "Admin")" class="quick-nav-item">
                <div class="quick-nav-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <span class="quick-nav-text">Analytics</span>
            </a>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="charts-section">
        <div class="chart-card">
            <div class="chart-header">
                <div class="chart-title">User Growth</div>
            </div>
            <div class="chart-container">
                <canvas id="userGrowthChart"></canvas>
            </div>
        </div>

        <div class="chart-card">
            <div class="chart-header">
                <div class="chart-title">Book Creation Trends</div>
            </div>
            <div class="chart-container">
                <canvas id="bookCreationChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Conversion Funnel -->
    <div class="chart-card" style="margin-bottom: 30px;">
        <div class="chart-header">
            <div class="chart-title">Conversion Funnel</div>
        </div>
        <div class="chart-container">
            <canvas id="conversionFunnelChart"></canvas>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="activity-section">
        <div class="activity-card">
            <div class="activity-header">
                <div class="activity-title">Recent Users</div>
                <a href="@Url.Action("Users", "Admin")" style="color: var(--primary); font-size: 14px; text-decoration: none;">View All</a>
            </div>
            <div class="activity-table">
                @foreach (var user in Model.RecentUsers)
                {
                    <div class="activity-row">
                        <div class="activity-avatar">
                            @(user.FullName?.Substring(0, 1).ToUpper() ?? "U")
                        </div>
                        <div class="activity-info">
                            <div class="activity-name">@user.FullName</div>
                            <div class="activity-meta">@user.UserEmail • @user.SignupMethod</div>
                        </div>
                        <span class="activity-badge @(user.Status == "Active" ? "badge-active" : "badge-pending")">
                            @user.Status
                        </span>
                    </div>
                }
            </div>
        </div>

        <div class="activity-card">
            <div class="activity-header">
                <div class="activity-title">Recent Books</div>
                <a href="@Url.Action("ContentManagement", "Admin")" style="color: var(--primary); font-size: 14px; text-decoration: none;">View All</a>
            </div>
            <div class="activity-table">
                @foreach (var book in Model.RecentBooks)
                {
                    <div class="activity-row">
                        <div class="activity-avatar">
                            <i class="fas fa-book"></i>
                        </div>
                        <div class="activity-info">
                            <div class="activity-name">@book.Title</div>
                            <div class="activity-meta">@book.AuthorName • @book.CreatedAt.ToString("MMM dd, yyyy")</div>
                        </div>
                        <span class="activity-badge @(book.Status == "Published" ? "badge-active" : "badge-pending")">
                            @book.Status
                        </span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    // GSAP Animations for Dashboard
    // Ensure all content is visible first
    function ensureDashboardVisible() {
        const cards = document.querySelectorAll('.summary-card, .chart-card, .activity-row');
        cards.forEach(card => {
            card.style.opacity = '1';
            card.style.visibility = 'visible';
            card.style.transform = 'translateY(0)';
        });
    }
    
    // Run immediately
    ensureDashboardVisible();
    
    document.addEventListener('DOMContentLoaded', function() {
        ensureDashboardVisible();
        
        // Only animate if GSAP is available and elements exist
        if (typeof gsap !== 'undefined' && typeof ScrollTrigger !== 'undefined') {
            // Animate summary cards (but keep visible)
            const summaryCards = document.querySelectorAll('.summary-card');
            if (summaryCards.length > 0) {
                gsap.fromTo('.summary-card', 
                    { opacity: 0.5, y: 20 },
                    {
                        scrollTrigger: {
                            trigger: '.summary-cards',
                            start: 'top 85%',
                            toggleActions: 'play none none none'
                        },
                        duration: 0.6,
                        opacity: 1,
                        y: 0,
                        stagger: 0.1,
                        ease: 'power2.out'
                    }
                );
            }

            // Animate charts (but keep visible)
            const chartCards = document.querySelectorAll('.chart-card');
            if (chartCards.length > 0) {
                gsap.fromTo('.chart-card',
                    { opacity: 0.7, scale: 0.95 },
                    {
                        scrollTrigger: {
                            trigger: '.charts-section',
                            start: 'top 85%',
                            toggleActions: 'play none none none'
                        },
                        duration: 0.8,
                        opacity: 1,
                        scale: 1,
                        stagger: 0.15,
                        ease: 'back.out(1.7)'
                    }
                );
            }

            // Animate activity rows (but keep visible)
            const activityRows = document.querySelectorAll('.activity-row');
            if (activityRows.length > 0) {
                gsap.fromTo('.activity-row',
                    { opacity: 0.6, x: -10 },
                    {
                        scrollTrigger: {
                            trigger: '.activity-section',
                            start: 'top 85%',
                            toggleActions: 'play none none none'
                        },
                        duration: 0.5,
                        opacity: 1,
                        x: 0,
                        stagger: 0.05,
                        ease: 'power2.out'
                    }
                );
            }
        }

        // Initialize charts
        setTimeout(function() {
            if (typeof window.initCharts === 'function') {
                window.initCharts();
            }
        }, 100);
    });
    
    // Safety: ensure visible after delays
    setTimeout(ensureDashboardVisible, 200);
    setTimeout(ensureDashboardVisible, 500);

    // Make initCharts globally available for AJAX navigation
    window.initCharts = function() {
        // Check if Chart.js is loaded
        if (typeof Chart === 'undefined') {
            console.warn('Chart.js is not loaded. Retrying in 500ms...');
            setTimeout(window.initCharts, 500);
            return;
        }

        // Helper function to safely destroy charts
        function destroyChart(chartInstance) {
            try {
                if (chartInstance && typeof chartInstance.destroy === 'function') {
                    chartInstance.destroy();
                }
            } catch (e) {
                console.warn('Error destroying chart:', e);
            }
        }

        // Destroy existing charts if they exist
        destroyChart(window.userGrowthChart);
        destroyChart(window.bookCreationChart);
        destroyChart(window.conversionFunnelChart);
        
        // Reset chart references
        window.userGrowthChart = null;
        window.bookCreationChart = null;
        window.conversionFunnelChart = null;
        
        // User Growth Chart
        try {
            const userGrowthCanvas = document.getElementById('userGrowthChart');
            if (userGrowthCanvas) {
                const userGrowthCtx = userGrowthCanvas.getContext('2d');
                if (userGrowthCtx) {
                    const userGrowthData = {
                        labels: @Html.Raw(Json.Serialize(Model.Analytics.SignupsOverTime.Select(s => s.Date))),
                        datasets: [{
                            label: 'User Signups',
                            data: @Html.Raw(Json.Serialize(Model.Analytics.SignupsOverTime.Select(s => s.Value))),
                            borderColor: '#6366F1',
                            backgroundColor: 'rgba(99, 102, 241, 0.1)',
                            tension: 0.4,
                            fill: true,
                            borderWidth: 3,
                            pointRadius: 4,
                            pointHoverRadius: 6
                        }]
                    };
                    window.userGrowthChart = new Chart(userGrowthCtx, {
                        type: 'line',
                        data: userGrowthData,
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: false
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    grid: {
                                        color: 'rgba(0, 0, 0, 0.05)'
                                    }
                                },
                                x: {
                                    grid: {
                                        display: false
                                    }
                                }
                            }
                        }
                    });
                }
            }
        } catch (e) {
            console.error('Error initializing User Growth Chart:', e);
        }

        // Book Creation Chart
        try {
            const bookCreationCanvas = document.getElementById('bookCreationChart');
            if (bookCreationCanvas) {
                const bookCreationCtx = bookCreationCanvas.getContext('2d');
                if (bookCreationCtx) {
                    const bookCreationData = {
                        labels: @Html.Raw(Json.Serialize(Model.Analytics.BookCreationsOverTime.Select(s => s.Date))),
                        datasets: [{
                            label: 'Books Created',
                            data: @Html.Raw(Json.Serialize(Model.Analytics.BookCreationsOverTime.Select(s => s.Value))),
                            backgroundColor: 'rgba(250, 112, 154, 0.8)',
                            borderColor: '#FA709A',
                            borderWidth: 2,
                            borderRadius: 8
                        }]
                    };
                    window.bookCreationChart = new Chart(bookCreationCtx, {
                        type: 'bar',
                        data: bookCreationData,
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: false
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    grid: {
                                        color: 'rgba(0, 0, 0, 0.05)'
                                    }
                                },
                                x: {
                                    grid: {
                                        display: false
                                    }
                                }
                            }
                        }
                    });
                }
            }
        } catch (e) {
            console.error('Error initializing Book Creation Chart:', e);
        }

        // Conversion Funnel Chart
        try {
            const funnelCanvas = document.getElementById('conversionFunnelChart');
            if (funnelCanvas) {
                const funnelCtx = funnelCanvas.getContext('2d');
                if (funnelCtx) {
                    const funnelData = {
                        labels: ['Signups', 'Draft', 'Styled', 'Previewed', 'Generated', 'Published'],
                        datasets: [{
                            label: 'Users',
                            data: [
                                @Model.Analytics.ConversionFunnel.Signups,
                                @Model.Analytics.ConversionFunnel.Drafts,
                                @Model.Analytics.ConversionFunnel.Styled,
                                @Model.Analytics.ConversionFunnel.Previewed,
                                @Model.Analytics.ConversionFunnel.Generated,
                                @Model.Analytics.ConversionFunnel.Published
                            ],
                            backgroundColor: [
                                'rgba(102, 126, 234, 0.8)',
                                'rgba(102, 126, 234, 0.7)',
                                'rgba(102, 126, 234, 0.6)',
                                'rgba(102, 126, 234, 0.5)',
                                'rgba(102, 126, 234, 0.4)',
                                'rgba(16, 185, 129, 0.8)'
                            ],
                            borderColor: '#6366F1',
                            borderWidth: 2,
                            borderRadius: 8
                        }]
                    };
                    window.conversionFunnelChart = new Chart(funnelCtx, {
                        type: 'bar',
                        data: funnelData,
                        options: {
                            indexAxis: 'y',
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: false
                                }
                            },
                            scales: {
                                x: {
                                    beginAtZero: true,
                                    grid: {
                                        color: 'rgba(0, 0, 0, 0.05)'
                                    }
                                },
                                y: {
                                    grid: {
                                        display: false
                                    }
                                }
                            }
                        }
                    });
                }
            }
        } catch (e) {
            console.error('Error initializing Conversion Funnel Chart:', e);
        }
    };
    
    // Run immediately
    ensureDashboardVisible();
    
    document.addEventListener('DOMContentLoaded', function() {
        ensureDashboardVisible();
        
        // Only animate if GSAP is available and elements exist
        if (typeof gsap !== 'undefined' && typeof ScrollTrigger !== 'undefined') {
            // Animate summary cards (but keep visible)
            const summaryCards = document.querySelectorAll('.summary-card');
            if (summaryCards.length > 0) {
                gsap.fromTo('.summary-card', 
                    { opacity: 0.5, y: 20 },
                    {
                        scrollTrigger: {
                            trigger: '.summary-cards',
                            start: 'top 85%',
                            toggleActions: 'play none none none'
                        },
                        duration: 0.6,
                        opacity: 1,
                        y: 0,
                        stagger: 0.1,
                        ease: 'power2.out'
                    }
                );
            }

            // Animate charts (but keep visible)
            const chartCards = document.querySelectorAll('.chart-card');
            if (chartCards.length > 0) {
                gsap.fromTo('.chart-card',
                    { opacity: 0.7, scale: 0.95 },
                    {
                        scrollTrigger: {
                            trigger: '.charts-section',
                            start: 'top 85%',
                            toggleActions: 'play none none none'
                        },
                        duration: 0.8,
                        opacity: 1,
                        scale: 1,
                        stagger: 0.15,
                        ease: 'back.out(1.7)'
                    }
                );
            }

            // Animate activity rows (but keep visible)
            const activityRows = document.querySelectorAll('.activity-row');
            if (activityRows.length > 0) {
                gsap.fromTo('.activity-row',
                    { opacity: 0.6, x: -10 },
                    {
                        scrollTrigger: {
                            trigger: '.activity-section',
                            start: 'top 85%',
                            toggleActions: 'play none none none'
                        },
                        duration: 0.5,
                        opacity: 1,
                        x: 0,
                        stagger: 0.05,
                        ease: 'power2.out'
                    }
                );
            }
        }

        // Initialize charts
        setTimeout(function() {
            if (typeof window.initCharts === 'function') {
                window.initCharts();
            }
        }, 100);
    });
    
    // Safety: ensure visible after delays
    setTimeout(ensureDashboardVisible, 200);
    setTimeout(ensureDashboardVisible, 500);
    
    // Ensure AdminLayout functions are available (fallback if not loaded yet)
    // These functions are defined in _AdminLayout.cshtml, but we add fallbacks here
    // Wait for AdminLayout functions to be available
    // These are temporary fallbacks that will be replaced when AdminLayout loads
    if (typeof window.showNotifications === 'undefined') {
        window.showNotifications = async function() {
            // Try to wait a bit and retry if AdminLayout is still loading
            await new Promise(resolve => setTimeout(resolve, 100));
            if (typeof window.showNotifications !== 'undefined' && window.showNotifications.toString().includes('async function')) {
                return window.showNotifications();
            }
            // Fallback: try to open notifications manually
            const searchModal = document.getElementById('searchModal');
            if (searchModal) {
                console.log('Notifications function not yet available from AdminLayout');
            }
        };
    }
    
    if (typeof window.showSearch === 'undefined') {
        window.showSearch = function() {
            // Fallback implementation
            const searchModal = document.getElementById('searchModal');
            const searchInput = document.getElementById('globalSearchInput');
            if (searchModal) {
                searchModal.classList.add('active');
                if (searchInput) {
                    setTimeout(() => searchInput.focus(), 100);
                }
            } else {
                console.log('Search modal not found. Waiting for AdminLayout to load...');
            }
        };
    }
    
    if (typeof window.toggleTheme === 'undefined') {
        window.toggleTheme = async function() {
            const currentTheme = document.documentElement.getAttribute('data-theme') || 'light';
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            document.documentElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('adminTheme', newTheme);
            
            // Try to save to database if AdminLayout function is available
            try {
                await fetch('@Url.Action("SaveUserPreference", "Admin")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `key=theme&value=${newTheme}`
                });
            } catch (error) {
                console.log('Could not save theme to database yet');
            }
            
            // Update icon
            const themeBtn = document.querySelector('.header-btn[onclick="toggleTheme()"]');
            if (themeBtn) {
                const icon = themeBtn.querySelector('i');
                if (icon) {
                    icon.className = newTheme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
                }
            }
        };
    }
    
    if (typeof window.showQuickActions === 'undefined') {
        window.showQuickActions = function() {
            // Fallback: determine context and show appropriate action
            const currentPath = window.location.pathname.toLowerCase();
            if (currentPath.includes('/users') || currentPath.includes('/admin/users')) {
                if (typeof window.openAddUserModal === 'function') {
                    window.openAddUserModal();
                } else {
                    console.log('Add User modal function not yet available');
                }
            } else {
                console.log('Quick actions not yet available from AdminLayout');
            }
        };
    }
    
    if (typeof window.closeSearchModal === 'undefined') {
        window.closeSearchModal = function() {
            const searchModal = document.getElementById('searchModal');
            if (searchModal) {
                searchModal.classList.remove('active');
            }
        };
    }
</script>

@section Scripts {
        <script>
            // Wait for AdminLayout scripts to load and ensure functions are available
            document.addEventListener('DOMContentLoaded', function() {
                // Check if AdminLayout functions are loaded
                // If they are, they will override our fallbacks
                setTimeout(() => {
                    const functionsLoaded = {
                        showNotifications: typeof window.showNotifications === 'function' && !window.showNotifications.toString().includes('console.warn'),
                        showSearch: typeof window.showSearch === 'function' && !window.showSearch.toString().includes('console.warn'),
                        toggleTheme: typeof window.toggleTheme === 'function' && !window.toggleTheme.toString().includes('console.warn'),
                        showQuickActions: typeof window.showQuickActions === 'function' && !window.showQuickActions.toString().includes('console.warn')
                    };
                    
                    // Only log if there are issues
                    if (!functionsLoaded.showSearch || !functionsLoaded.showNotifications) {
                        console.log('Some AdminLayout functions may not be fully loaded yet. Fallbacks are active.');
                    }
                }, 500);
            });
        </script>

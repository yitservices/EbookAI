    <script>
        // Add hover effects and animations
        document.addEventListener('DOMContentLoaded', function() {
            // Add animation classes to elements
            const animatedElements = document.querySelectorAll('.fade-in-up, .slide-in-left, .slide-in-right, .bounce-in');

            animatedElements.forEach((element, index) => {
                // Set animation delay based on element order
                const delay = parseFloat(element.style.animationDelay) || (index * 0.1);
                element.style.animationDelay = `${delay}s`;
            });

            // Add click effect to buttons
            const buttons = document.querySelectorAll('.explore-btn');
            buttons.forEach(button => {
                button.addEventListener('click', function() {
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 150);
                });
            });
        });
    </script>

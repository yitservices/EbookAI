<!-- Register Copyright Modal -->
<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="registerModalLabel">Register New Copyright</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="workTitle" class="form-label">Work Title</label>
                        <input type="text" class="form-control" id="workTitle" placeholder="Enter the title of your work">
                    </div>
                    
                    <div class="mb-3">
                        <label for="workType" class="form-label">Work Type</label>
                        <select class="form-control" id="workType">
                            <option value="">Select work type</option>
                            <option value="literary">Literary Work</option>
                            <option value="musical">Musical Work</option>
                            <option value="dramatic">Dramatic Work</option>
                            <option value="choreographic">Choreographic Work</option>
                            <option value="pictorial">Pictorial Work</option>
                            <option value="sculpture">Sculpture</option>
                            <option value="motion">Motion Picture</option>
                            <option value="sound">Sound Recording</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="authorName" class="form-label">Author Name</label>
                        <input type="text" class="form-control" id="authorName" placeholder="Enter author's name">
                    </div>
                    
                    <div class="mb-3">
                        <label for="creationDate" class="form-label">Creation Date</label>
                        <input type="date" class="form-control" id="creationDate">
                    </div>
                    
                    <div class="mb-3">
                        <label for="publicationDate" class="form-label">Publication Date</label>
                        <input type="date" class="form-control" id="publicationDate">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Work Description</label>
                        <textarea class="form-control" rows="4" placeholder="Briefly describe your work..."></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Upload Files</label>
                        <div class="file-upload-area">
                            <div class="upload-instructions">
                                <i class="fas fa-cloud-upload-alt"></i>
                                <p>Drag & drop files here or click to browse</p>
                                <p class="small">Accepted formats: PDF, DOC, DOCX, TXT (Max 50MB)</p>
                            </div>
                            <input type="file" class="form-control" multiple>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitRegistration()">Submit Registration</button>
            </div>
        </div>
    </div>
</div>


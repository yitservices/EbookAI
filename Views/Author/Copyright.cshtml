    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<div class="copyright-dashboard">
    <!-- Header Section -->
    <div class="page-header" data-aos="fade-down">
        <div class="header-content">
            <h1><i class="fas fa-copyright"></i> Copyright Management</h1>
            <p>Protect your intellectual property and manage copyright registrations</p>
        </div>
        
        <div class="header-actions">
            <button class="btn btn-outline-primary" onclick="registerCopyright()" data-aos="fade-left" data-aos-delay="100">
                <i class="fas fa-plus"></i>
                Register Copyright
            </button>
            <button class="btn btn-primary" onclick="viewGuidelines()" data-aos="fade-left" data-aos-delay="200">
                <i class="fas fa-info-circle"></i>
                Copyright Guidelines
            </button>
        </div>
    </div>

    <!-- Copyright Stats -->
    <div class="copyright-stats" data-aos="fade-up" data-aos-delay="100">
        <div class="stat-card" data-aos="flip-left" data-aos-delay="200">
            <div class="stat-icon">
                <i class="fas fa-file-contract"></i>
            </div>
            <div class="stat-info">
                <h3>8</h3>
                <p>Registered Works</p>
                <span class="stat-change positive">+2 this year</span>
            </div>
        </div>
        
        <div class="stat-card" data-aos="flip-left" data-aos-delay="300">
            <div class="stat-icon">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div class="stat-info">
                <h3>5</h3>
                <p>Protected Books</p>
                <span class="stat-change positive">+1 this year</span>
            </div>
        </div>
        
        <div class="stat-card" data-aos="flip-left" data-aos-delay="400">
            <div class="stat-icon">
                <i class="fas fa-globe"></i>
            </div>
            <div class="stat-info">
                <h3>3</h3>
                <p>International Coverage</p>
                <span class="stat-change neutral">Stable</span>
            </div>
        </div>
        
        <div class="stat-card" data-aos="flip-left" data-aos-delay="500">
            <div class="stat-icon">
                <i class="fas fa-bell"></i>
            </div>
            <div class="stat-info">
                <h3>2</h3>
                <p>Pending Cases</p>
                <span class="stat-change warning">Requires attention</span>
            </div>
        </div>
    </div>

    <!-- Copyright Registration Process -->
    <div class="registration-process" data-aos="fade-up" data-aos-delay="200">
        <div class="section-header">
            <h3><i class="fas fa-tasks"></i> Registration Process</h3>
        </div>
        
        <div class="process-steps">
            <div class="step-card" data-aos="fade-up" data-aos-delay="300">
                <div class="step-number">1</div>
                <div class="step-content">
                    <h4>Prepare Documents</h4>
                    <p>Gather all required materials for copyright registration</p>
                </div>
                <div class="step-status completed">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>
            
            <div class="step-card" data-aos="fade-up" data-aos-delay="400">
                <div class="step-number">2</div>
                <div class="step-content">
                    <h4>Submit Application</h4>
                    <p>File your copyright application with relevant authorities</p>
                </div>
                <div class="step-status completed">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>
            
            <div class="step-card" data-aos="fade-up" data-aos-delay="500">
                <div class="step-number">3</div>
                <div class="step-content">
                    <h4>Review Process</h4>
                    <p>Wait for examination and review of your application</p>
                </div>
                <div class="step-status active">
                    <i class="fas fa-sync"></i>
                </div>
            </div>
            
            <div class="step-card" data-aos="fade-up" data-aos-delay="600">
                <div class="step-number">4</div>
                <div class="step-content">
                    <h4>Registration Certificate</h4>
                    <p>Receive your official copyright registration certificate</p>
                </div>
                <div class="step-status pending">
                    <i class="fas fa-clock"></i>
                </div>
            </div>
        </div>

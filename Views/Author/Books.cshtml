@{
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
    ViewData["Title"] = "Books Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book  | Premium Reading Experience</title>

    <!-- External Libraries -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        /* Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        html {
            overflow-y: scroll;
            scroll-behavior: smooth;
        }

        body {
            background: linear-gradient(135deg, #fdf6e3 0%, #f5e8c8 100%);
            color: #5d4037;
            line-height: 1.6;
            min-height: 100vh;
            padding: 20px;
        }

        /* Container */
        .main-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Header Section */
        .main-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding: 25px 30px;
            background: rgba(255, 253, 245, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(210, 180, 140, 0.2);
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 15px;
            font-size: 2rem;
            font-weight: 700;
            background: linear-gradient(135deg, #d4a574, #a67c52);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

            .logo i {
                font-size: 2.5rem;
            }

        .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .user-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: linear-gradient(135deg, #d4a574, #a67c52);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 1.2rem;
        }

        /* Navigation */
        .nav-tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 30px;
            padding: 15px;
            background: rgba(255, 253, 245, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(210, 180, 140, 0.2);
            justify-content: center;
        }

        .nav-tab {
            padding: 12px 24px;
            border: none;
            border-radius: 10px;
            background: transparent;
            color: #8d6e63;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .nav-tab.active {
                background: linear-gradient(135deg, #d4a574, #a67c52);
                color: white;
                box-shadow: 0 5px 15px rgba(212, 165, 116, 0.3);
            }

            .nav-tab:hover:not(.active) {
                background: rgba(212, 165, 116, 0.1);
            }

        /* View Container */
        .view-container {
            display: none;
        }

            .view-container.active {
                display: block;
            }

        /* Buttons */
        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 15px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

            .btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
                transition: left 0.5s;
            }

            .btn:hover::before {
                left: 100%;
            }

        .btn-primary {
            background: linear-gradient(135deg, #d4a574, #a67c52);
            color: white;
            box-shadow: 0 8px 25px rgba(212, 165, 116, 0.3);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 12px 35px rgba(212, 165, 116, 0.4);
            }

        .btn-secondary {
            background: rgba(255, 253, 245, 0.9);
            color: #5d4037;
            border: 1px solid rgba(210, 180, 140, 0.3);
        }

            .btn-secondary:hover {
                background: #fffdf5;
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(210, 180, 140, 0.2);
            }

        .btn-sm {
            padding: 8px 12px;
            font-size: 0.85rem;
        }

        .btn-info {
            background: #17a2b8;
            color: white;
        }

        .btn-success {
            background: #28a745;
            color: white;
        }

        .btn-warning {
            background: #ffc107;
            color: #212529;
        }

        .btn-danger {
            background: #dc3545;
            color: white;
        }

        /* eBook Management Styles */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding: 20px;
            background: rgba(255, 253, 245, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(210, 180, 140, 0.2);
        }

        .header-content h1 {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 5px;
            background: linear-gradient(135deg, #d4a574, #a67c52);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .header-content p {
            color: #8d6e63;
        }

        .header-actions {
            display: flex;
            gap: 15px;
        }

        .filter-section {
            display: flex;
            gap: 20px;
            margin-bottom: 30px;
            padding: 20px;
            background: rgba(255, 253, 245, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(210, 180, 140, 0.2);
            flex-wrap: wrap;
            align-items: center;
        }

        .search-bar {
            flex: 1;
            min-width: 300px;
        }

        .input-wrapper {
            position: relative;
        }

            .input-wrapper i {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: #d4a574;
            }

        .search-input {
            width: 100%;
            padding: 12px 15px 12px 45px;
            border: 1px solid rgba(210, 180, 140, 0.3);
            border-radius: 10px;
            background: rgba(255, 253, 245, 0.9);
            color: #5d4037;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .search-input:focus {
                outline: none;
                border-color: #d4a574;
                box-shadow: 0 0 0 3px rgba(212, 165, 116, 0.2);
            }

        .filter-options {
            display: flex;
            gap: 15px;
        }

        .filter-select {
            padding: 12px 15px;
            border: 1px solid rgba(210, 180, 140, 0.3);
            border-radius: 10px;
            background: rgba(255, 253, 245, 0.9);
            color: #5d4037;
            font-size: 1rem;
            min-width: 150px;
            cursor: pointer;
        }

            .filter-select:focus {
                outline: none;
                border-color: #d4a574;
            }

        .stats-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(255, 253, 245, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(210, 180, 140, 0.2);
            transition: all 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(212, 165, 116, 0.3);
            }

        .stat-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            background: linear-gradient(135deg, #d4a574, #a67c52);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            margin: 0 auto 15px;
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: #d4a574;
            margin-bottom: 5px;
        }

        .stat-label {
            color: #8d6e63;
            font-size: 0.9rem;
        }

        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .action-card {
            background: rgba(255, 253, 245, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(210, 180, 140, 0.2);
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .action-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(212, 165, 116, 0.3);
            }

        .action-icon {
            width: 60px;
            height: 60px;
            border-radius: 15px;
            background: linear-gradient(135deg, #d4a574, #a67c52);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.8rem;
            margin: 0 auto 15px;
        }

        .action-card h3 {
            font-size: 1.2rem;
            margin-bottom: 10px;
            color: #5d4037;
        }

        .action-card p {
            color: #8d6e63;
            font-size: 0.9rem;
        }

        .books-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 25px;
        }

        .book-card {
            background: rgba(255, 253, 245, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(210, 180, 140, 0.2);
            border: 1px solid rgba(210, 180, 140, 0.3);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .book-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 35px rgba(212, 165, 116, 0.3);
            }

        .book-cover {
            position: relative;
            height: 200px;
            overflow: hidden;
        }

            .book-cover img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .default-cover {
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #d4a574, #a67c52);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 3rem;
        }

        .book-status {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
        }

            .book-status.draft {
                background: rgba(255, 193, 7, 0.9);
                color: #856404;
            }

            .book-status.published {
                background: rgba(40, 167, 69, 0.9);
                color: white;
            }

            .book-status.review {
                background: rgba(0, 123, 255, 0.9);
                color: white;
            }

            .book-status.archived {
                background: rgba(108, 117, 125, 0.9);
                color: white;
            }

        .book-info {
            padding: 20px;
        }

        .book-title {
            margin: 0 0 8px;
            font-size: 1.3rem;
            font-weight: 700;
            color: #5d4037;
            line-height: 1.3;
        }

        .book-subtitle {
            margin: 0 0 12px;
            color: #8d6e63;
            font-size: 0.9rem;
            font-style: italic;
        }

        .book-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-bottom: 12px;
        }

            .book-meta span {
                background: rgba(212, 165, 116, 0.1);
                color: #a67c52;
                padding: 4px 8px;
                border-radius: 8px;
                font-size: 0.8rem;
                font-weight: 500;
            }

        .book-dates {
            margin-bottom: 15px;
        }

            .book-dates small {
                display: block;
                color: #8d6e63;
                font-size: 0.8rem;
                margin-bottom: 2px;
            }

        .book-actions {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        /* Book Store Styles */
        .hero {
            text-align: center;
            margin-bottom: 50px;
            padding: 40px 20px;
            background: rgba(255, 253, 245, 0.95);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(210, 180, 140, 0.2);
            backdrop-filter: blur(20px);
        }

            .hero h1 {
                font-size: 2.8rem;
                margin-bottom: 15px;
                background: linear-gradient(135deg, #d4a574, #a67c52);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                font-weight: 700;
            }

            .hero p {
                font-size: 1.2rem;
                color: #8d6e63;
                max-width: 600px;
                margin: 0 auto 30px;
            }

        .search-container {
            max-width: 600px;
            margin: 0 auto;
            position: relative;
        }

            .search-container input {
                width: 100%;
                padding: 15px 20px;
                border: 1px solid rgba(210, 180, 140, 0.3);
                border-radius: 50px;
                font-size: 1rem;
                background: rgba(255, 253, 245, 0.9);
                color: #5d4037;
                transition: all 0.3s ease;
            }

                .search-container input:focus {
                    outline: none;
                    border-color: #d4a574;
                    box-shadow: 0 0 0 3px rgba(212, 165, 116, 0.2);
                }

            .search-container button {
                position: absolute;
                right: 5px;
                top: 5px;
                bottom: 5px;
                background: linear-gradient(135deg, #d4a574, #a67c52);
                color: white;
                border: none;
                border-radius: 50px;
                padding: 0 25px;
                cursor: pointer;
                transition: var(--transition);
                font-weight: 600;
            }

                .search-container button:hover {
                    opacity: 0.9;
                }

        .section-title {
            font-size: 2.2rem;
            text-align: center;
            margin-bottom: 40px;
            background: linear-gradient(135deg, #d4a574, #a67c52);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 700;
            position: relative;
        }

            .section-title:after {
                content: '';
                display: block;
                width: 100px;
                height: 4px;
                background: linear-gradient(to right, #d4a574, #a67c52);
                margin: 10px auto;
                border-radius: 2px;
            }

        .store-books-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
            margin-bottom: 60px;
        }

        .store-book-card {
            background: rgba(255, 253, 245, 0.95);
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(210, 180, 140, 0.2);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
        }

            .store-book-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 35px rgba(212, 165, 116, 0.3);
            }

        .store-book-cover {
            height: 200px;
            background-size: cover;
            background-position: center;
            position: relative;
        }

            .store-book-cover:after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.7) 100%);
            }

        .book-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: #e74c3c;
            color: white;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            z-index: 2;
        }

        .store-book-content {
            padding: 20px;
        }

        .store-book-title {
            font-size: 1.4rem;
            margin-bottom: 5px;
            color: #5d4037;
            font-weight: 700;
        }

        .store-book-author {
            color: #a67c52;
            font-weight: 500;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .store-book-description {
            color: #8d6e63;
            font-size: 0.9rem;
            margin-bottom: 15px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .store-book-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 15px;
        }

        .store-book-price {
            font-weight: 700;
            color: #5d4037;
            font-size: 1.2rem;
        }

        .featured-book {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
            margin-bottom: 60px;
            background: rgba(255, 253, 245, 0.95);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(210, 180, 140, 0.2);
            backdrop-filter: blur(20px);
        }

        .featured-cover {
            height: 400px;
            background-size: cover;
            background-position: center;
        }

        .featured-content {
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .featured-badge {
            display: inline-block;
            background: #f1c40f;
            color: #5d4037;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .featured-title {
            font-size: 2.2rem;
            margin-bottom: 10px;
            color: #5d4037;
            font-weight: 700;
        }

        .featured-author {
            font-size: 1.2rem;
            color: #a67c52;
            margin-bottom: 20px;
        }

        .featured-description {
            margin-bottom: 25px;
            color: #8d6e63;
        }

        .featured-price {
            font-size: 1.8rem;
            font-weight: 700;
            color: #5d4037;
            margin-bottom: 20px;
        }

        .btn-large {
            padding: 12px 25px;
            font-size: 1.1rem;
            align-self: flex-start;
        }

        footer {
            text-align: center;
            padding: 30px 0;
            color: #8d6e63;
            border-top: 1px solid rgba(210, 180, 140, 0.3);
            margin-top: 40px;
        }

        /* Responsive Design */
      @@media (max-width: 1024px) {
            .books-grid, .store-books-grid

        {
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        }

        }

      @@media (max-width: 768px) {
            .main-header, .page-header

        {
            flex-direction: column;
            gap: 20px;
            text-align: center;
        }

        .filter-section {
            flex-direction: column;
        }

        .search-bar {
            min-width: auto;
        }

        .filter-options {
            width: 100%;
            justify-content: center;
        }

        .books-grid, .store-books-grid {
            grid-template-columns: 1fr;
        }

        .stats-section, .quick-actions {
            grid-template-columns: repeat(2, 1fr);
        }

        .featured-book {
            grid-template-columns: 1fr;
        }

        .featured-cover {
            height: 300px;
        }

        .hero h1 {
            font-size: 2.2rem;
        }

        .section-title {
            font-size: 1.8rem;
        }

        .nav-tabs {
            flex-wrap: wrap;
        }

        }

      @@media (max-width: 480px) {
            body

        {
            padding: 10px;
        }

        .main-header, .page-header {
            padding: 15px;
        }

        .logo {
            font-size: 1.8rem;
        }

        .btn {
            padding: 10px 20px;
            font-size: 0.9rem;
        }

        .filter-section {
            padding: 15px;
        }

        .stats-section, .quick-actions {
            grid-template-columns: 1fr;
        }

        .book-actions {
            justify-content: center;
        }

        .hero {
            padding: 20px 15px;
        }

            .hero h1 {
                font-size: 1.8rem;
            }

        .featured-content {
            padding: 20px;
        }

        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Main Header -->
        @* <header class="main-header" data-aos="fade-down">
            <div class="logo">
                <i class="fas fa-book-open"></i>
                Book Haven
            </div>
            <div class="user-info">
                <div>Hello, Logan Isbell</div>
                <div class="user-avatar">LI</div>
            </div>
        </header> *@

        <!-- Navigation Tabs -->
        <div class="nav-tabs" data-aos="fade-up">
            <button class="nav-tab active" data-tab="management">My Books</button>
            <button class="nav-tab" data-tab="store">Book Store</button>
        </div>

        <!-- eBook Management View -->
        <div id="management-view" class="view-container active">
            <!-- Header Section -->
            <header class="page-header" data-aos="fade-down">
                <div class="header-content">
                    <h1><i class="fas fa-book"></i> My Books</h1>
                    <p>Manage your published and draft books</p>
                </div>

                <div class="header-actions">
                    <button class="btn btn-secondary">
                        <i class="fas fa-filter"></i>
                        <span>Filter</span>
                    </button>
                    <button class="btn btn-primary" onclick="openAddBookModal()">
                        <i class="fas fa-plus"></i>
                        <span>Add New Book</span>
                    </button>
                </div>
            </header>

            <!-- Stats Section -->
            <div class="stats-section" data-aos="fade-up" data-aos-delay="100">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-book"></i>
                    </div>
                    <div class="stat-value">12</div>
                    <div class="stat-label">Total Books</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-upload"></i>
                    </div>
                    <div class="stat-value">8</div>
                    <div class="stat-label">Published</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-edit"></i>
                    </div>
                    <div class="stat-value">3</div>

</div>

<!-- Create Discount Modal -->
<div class="modal fade" id="discountModal" tabindex="-1" aria-labelledby="discountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="discountModalLabel">Create Discount Code</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="discountCode" class="form-label">Discount Code</label>
                        <input type="text" class="form-control" id="discountCode" placeholder="Enter discount code">
                    </div>
                    
                    <div class="mb-3">
                        <label for="discountType" class="form-label">Discount Type</label>
                        <select class="form-control" id="discountType">
                            <option value="percentage">Percentage Off</option>
                            <option value="fixed">Fixed Amount Off</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="discountValue" class="form-label">Discount Value</label>
                        <input type="number" class="form-control" id="discountValue" placeholder="Enter discount value">
                    </div>
                    
                    <div class="mb-3">
                        <label for="discountBook" class="form-label">Apply to Book</label>
                        <select class="form-control" id="discountBook">
                            <option value="">All Books</option>
                            <option value="1">The Dragon's Quest</option>
                            <option value="2">Midnight Mysteries</option>
                            <option value="3">The Silent Witness</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="discountExpiry" class="form-label">Expiry Date</label>
                        <input type="date" class="form-control" id="discountExpiry">
                    </div>
                    
                    <div class="mb-3">
                        <label for="discountUsage" class="form-label">Usage Limit</label>
                        <input type="number" class="form-control" id="discountUsage" placeholder="Number of uses (leave blank for unlimited)">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveDiscount()">Save Discount</button>
            </div>
        </div>
    </div>
</div>


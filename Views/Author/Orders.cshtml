<script>
    // Generate report
    function generateReport() {
        Swal.fire({
            title: 'Generate Sales Report',
            html: `
                <div style="text-align: left;">
                    <div class="mb-3">
                        <label class="form-label">Report Type</label>
                        <select class="form-control">
                            <option value="sales">Sales Summary</option>
                            <option value="orders">Order Details</option>
                            <option value="customers">Customer Analysis</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Date Range</label>
                        <div style="display: flex; gap: 10px;">
                            <input type="date" class="form-control" placeholder="Start Date">
                            <input type="date" class="form-control" placeholder="End Date">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Format</label>
                        <select class="form-control">
                            <option value="pdf">PDF</option>
                            <option value="csv">CSV</option>
                            <option value="xlsx">Excel</option>
                        </select>
                    </div>
                </div>
            `,
            confirmButtonText: 'Generate Report',
            confirmButtonColor: '#667eea'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: 'Report Generated!',
                    text: 'Your sales report has been generated and downloaded.',
                    icon: 'success',
                    confirmButtonColor: '#667eea'
                });
            }
        });
    }

    // Create discount
    function createDiscount() {
        bootstrap.Modal.getOrCreateInstance(document.getElementById('discountModal')).show();
    }

    // Save discount
    function saveDiscount() {
        const code = document.getElementById('discountCode').value;
        const type = document.getElementById('discountType').value;
        const value = document.getElementById('discountValue').value;
        
        if (!code || !type || !value) {
            Swal.fire({
                title: 'Error',
                text: 'Please fill in all required fields',
                icon: 'error',
                confirmButtonColor: '#667eea'
            });
            return;
        }
        
        Swal.fire({
            title: 'Creating Discount',
            text: 'Please wait while we create your discount code...',
            allowOutsideClick: false,
            showConfirmButton: false,
            didOpen: () => {
                Swal.showLoading();
            }
        });
        
        // Simulate creation process
        setTimeout(() => {
            Swal.fire({
                title: 'Discount Created!',
                text: `Discount code "${code}" has been created successfully.`,
                icon: 'success',
                confirmButtonColor: '#667eea'
            });
            bootstrap.Modal.getInstance(document.getElementById('discountModal')).hide();
        }, 1500);
    }

    // Edit discount
    function editDiscount(code) {
        Swal.fire({
            title: 'Edit Discount',
            text: `Editing discount code: ${code}`,
            icon: 'info',
            confirmButtonColor: '#667eea'
        });
    }

    // Delete discount
    function deleteDiscount(code) {
        Swal.fire({
            title: 'Delete Discount?',
            text: `Are you sure you want to delete discount code "${code}"?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545',
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: 'Discount Deleted!',
                    text: `Discount code "${code}" has been deleted.`,
                    icon: 'success',
                    confirmButtonColor: '#667eea'
                });
            }
        });
    }

    // View order details
    function viewOrderDetails(orderId) {
        Swal.fire({
            title: 'Order Details',
            html: `
                <div style="text-align: left;">
                    <h4>Order #ORD-${orderId}</h4>
                    <div style="margin: 15px 0; padding: 15px; border-left: 4px solid #667eea; background: rgba(102, 126, 234, 0.05);">
                        <strong>Customer:</strong> John Smith<br>
                        <strong>Date:</strong> Jun 15, 2023<br>
                        <strong>Book:</strong> The Dragon's Quest<br>
                        <strong>Platform:</strong> Amazon<br>
                        <strong>Price:</strong> $4.99<br>
                        <strong>Status:</strong> <span style="color: #28a745; font-weight: 600;">Completed</span>
                    </div>
                    <p><strong>Payment Method:</strong> Credit Card (Visa ending in 1234)</p>
                    <p><strong>Customer Email:</strong> john.smith@example.com</p>
                </div>
            `,
            confirmButtonColor: '#667eea',
            width: '500px'
        });
    }

    // Apply filters
    function applyFilters() {
        Swal.fire({
            title: 'Filters Applied',
            text: 'Orders have been filtered based on your selection.',
            icon: 'success',
            confirmButtonColor: '#667eea',
            timer: 1500,
            timerProgressBar: true,
            showConfirmButton: false
        });
    }

    // Reset filters
    function resetFilters() {
        document.getElementById('dateRange').value = 'month';
        document.getElementById('bookFilter').value = '';
        document.getElementById('platformFilter').value = '';
        document.getElementById('statusFilter').value = '';
        
        Swal.fire({
            title: 'Filters Reset',
            text: 'All filters have been reset to default.',
            icon: 'info',
            confirmButtonColor: '#667eea',
            timer: 1500,
            timerProgressBar: true,
            showConfirmButton: false
        });
    }

    // Initialize AOS
    AOS.init({
        duration: 600,
        easing: 'ease-out',
        once: true
    });
</script>
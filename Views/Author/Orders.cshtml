    Layout = "~/Views/Shared/_AuthorLayout.cshtml";

}

<div class="orders-dashboard">
    <!-- Header Section -->
    <div class="page-header" data-aos="fade-down">
        <div class="header-content">
            <h1><i class="fas fa-shopping-cart"></i> Orders & Sales</h1>
            <p>Manage your book orders and sales data</p>
        </div>
        
        <div class="header-actions">
            <button class="btn btn-outline-primary" onclick="generateReport()" data-aos="fade-left" data-aos-delay="100">
                <i class="fas fa-file-alt"></i>
                Generate Report
            </button>
            <button class="btn btn-primary" onclick="createDiscount()" data-aos="fade-left" data-aos-delay="200">
                <i class="fas fa-tags"></i>
                Create Discount

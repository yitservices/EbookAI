@{
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
    ViewData["Title"] = "Analytics Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Author Dashboard</title>

    <!-- External Libraries -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        /* Base Styles */
        :root {
            --primary: #D4A574;
            --primary-light: #E7C9A5;
            --primary-dark: #B08A5F;
            --secondary: #F5B461;
            --accent: #A3B86C;
            --dark: #5D4037;
            --light: #FFF8F0;
            --gray: #8D6E63;
            --gray-light: #D7CCC8;
            --card-bg: rgba(255, 253, 245, 0.9);
            --shadow: 0 10px 25px -5px rgba(181, 144, 107, 0.15), 0 10px 10px -5px rgba(181, 144, 107, 0.1);
            --radius: 16px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        }

        html {
            overflow-y: scroll;
            scroll-behavior: smooth;
        }

        body {
            background: linear-gradient(135deg, #FDF6E3 0%, #F5E8C8 100%);
            color: var(--dark);
            line-height: 1.6;
            min-height: 100vh;
            padding: 20px;
        }

        /* Container */
        .dashboard-container {
            max-width: 1600px;
            margin: 0 auto;
        }

        /* Header Section */
        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding: 25px 35px;
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
        }

            .dashboard-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, var(--primary), var(--secondary), var(--accent));
            }

        .welcome-section h1 {
            font-size: 2.4rem;
            font-weight: 800;
            margin-bottom: 8px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .welcome-section p {
            color: var(--gray);
            max-width: 600px;
            margin-bottom: 20px;
            font-size: 1.1rem;
            line-height: 1.7;
        }

        .user-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 1.5rem;
            margin-bottom: 15px;
            box-shadow: 0 4px 15px rgba(212, 165, 116, 0.3);
        }

        .header-actions {
            display: flex;
            gap: 15px;
        }

        /* Buttons */
        .btn {
            padding: 14px 28px;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            font-size: 1rem;
        }

            .btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
                transition: left 0.5s;
            }

            .btn:hover::before {
                left: 100%;
            }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: white;
            box-shadow: 0 8px 25px rgba(212, 165, 116, 0.3);
        }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 35px rgba(212, 165, 116, 0.4);
            }

        .btn-secondary {
            background: rgba(255, 253, 245, 0.9);
            color: var(--dark);
            border: 1px solid var(--gray-light);
            box-shadow: 0 4px 15px rgba(181, 144, 107, 0.1);
        }

            .btn-secondary:hover {
                background: white;
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(181, 144, 107, 0.15);
            }

        /* Main Grid Layout */
        .dashboard-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 30px;
            margin-bottom: 30px;
        }

        /* Left Column */
        .left-column {
            display: flex;
            flex-direction: column;
            gap: 30px;
        }

        /* Carousel Section */
        .carousel-section {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: var(--radius);
            padding: 30px;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
        }

            .carousel-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 6px;
                height: 100%;
                background: linear-gradient(to bottom, var(--primary), var(--secondary));
            }

        .section-title {
            font-size: 1.6rem;
            margin-bottom: 25px;
            color: var(--dark);
            display: flex;
            align-items: center;
            gap: 12px;
            padding-bottom: 15px;
            border-bottom: 1px solid var(--gray-light);
        }

            .section-title i {
                color: var(--primary);
                font-size: 1.4rem;
            }

        .carousel-container {
            position: relative;
            overflow: hidden;
            border-radius: 12px;
        }

        .carousel-track {
            display: flex;
            transition: transform 0.5s ease;
        }

        .carousel-card {
            min-width: 100%;
            padding: 25px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(181, 144, 107, 0.1);
        }

        .book-cover {
            width: 180px;
            height: 240px;
            border-radius: 12px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 3.5rem;
            margin-bottom: 20px;
            box-shadow: 0 10px 30px rgba(212, 165, 116, 0.3);
            transition: transform 0.3s ease;
        }

        .carousel-card:hover .book-cover {
            transform: scale(1.05);
        }

        .book-info h3 {
            font-size: 1.5rem;
            margin-bottom: 12px;
            color: var(--dark);
            font-weight: 700;
        }

        .book-info p {
            color: var(--gray);
            margin-bottom: 20px;
            font-size: 1rem;
        }

        .carousel-nav {
            display: flex;
            justify-content: center;
            gap: 12px;
            margin-top: 25px;
        }

        .carousel-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: var(--gray-light);
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .carousel-dot.active {
                background: var(--primary);
                transform: scale(1.3);
            }

        /* Books Grid */
        .books-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 25px;
        }

        .book-card {
            background: white;
            border-radius: 12px;
            padding: 25px 20px;
            text-align: center;
            box-shadow: 0 4px 15px rgba(181, 144, 107, 0.1);
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

            .book-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 4px;
                background: linear-gradient(90deg, var(--primary), var(--secondary));
                transform: scaleX(0);
                transition: transform 0.3s ease;
            }

            .book-card:hover::before {
                transform: scaleX(1);
            }

            .book-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 35px rgba(212, 165, 116, 0.2);
            }

        .book-cover-small {
            width: 120px;
            height: 160px;
            border-radius: 8px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2.5rem;
            margin: 0 auto 20px;
            box-shadow: 0 6px 20px rgba(212, 165, 116, 0.2);
            transition: transform 0.3s ease;
        }

        .book-card:hover .book-cover-small {
            transform: scale(1.05);
        }

        .book-card h4 {
            font-size: 1.1rem;
            margin-bottom: 8px;
            color: var(--dark);
            font-weight: 600;
        }

        .book-card p {
            color: var(--gray);
            font-size: 0.9rem;
        }

        /* Right Column */
        .right-column {
            display: flex;
            flex-direction: column;
            gap: 30px;
        }

        /* Schedule Section */
        .schedule-section {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: var(--radius);
            padding: 30px;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
        }

            .schedule-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 6px;
                height: 100%;
                background: linear-gradient(to bottom, var(--secondary), var(--accent));
            }

        .calendar {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 12px;
            margin-top: 20px;
        }

        .day {
            text-align: center;
            padding: 12px 8px;
            border-radius: 10px;
            transition: all 0.3s ease;
            cursor: pointer;
            background: white;
            box-shadow: 0 2px 8px rgba(181, 144, 107, 0.1);
        }

            .day:hover {
                background: rgba(212, 165, 116, 0.1);
                transform: translateY(-2px);
            }

            .day.active {
                background: linear-gradient(135deg, var(--primary), var(--primary-dark));
                color: white;
                box-shadow: 0 4px 15px rgba(212, 165, 116, 0.3);
            }

        .day-name {
            font-size: 0.8rem;
            font-weight: 600;
            margin-bottom: 5px;
            opacity: 0.7;
        }

        .day-number {
            font-size: 1.3rem;
            font-weight: 700;
        }

        /* Friends Section */
        .friends-section {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: var(--radius);
            padding: 30px;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
        }

            .friends-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 6px;
                height: 100%;
                background: linear-gradient(to bottom, var(--accent), #A3B86C);
            }

        .friend-activity {
            margin-top: 20px;
        }

        .friend-item {
            display: flex;
            gap: 18px;
            padding: 20px 0;
            border-bottom: 1px solid var(--gray-light);
            transition: all 0.3s ease;
        }

            .friend-item:hover {
                background: rgba(255, 255, 255, 0.5);
                border-radius: 10px;
                padding-left: 15px;
                padding-right: 15px;
                margin: 0 -15px;
            }

            .friend-item:last-child {
                border-bottom: none;
            }

        .friend-avatar {
            width: 55px;
            height: 55px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            flex-shrink: 0;
            box-shadow: 0 4px 15px rgba(212, 165, 116, 0.2);
        }

        .friend-content {
            flex: 1;
        }

        .friend-name {
            font-weight: 700;
            margin-bottom: 8px;
            color: var(--dark);
            font-size: 1.05rem;
        }

        .friend-comment {
            color: var(--gray);
            margin-bottom: 8px;
            font-size: 0.95rem;
            line-height: 1.6;
        }

        .friend-chapter {
            display: flex;
            align-items: center;
            gap: 6px;
            color: var(--primary);
            font-size: 0.85rem;
            font-weight: 600;
        }

        .friend-time {
            color: var(--gray);
            font-size: 0.8rem;
            margin-top: 5px;
        }

        /* Reading Stats */
        .stats-section {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: var(--radius);
            padding: 30px;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
        }

            .stats-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 6px;
                height: 100%;
                background: linear-gradient(to bottom, #E8B882, var(--secondary));
            }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            margin-top: 20px;
        }

        .stat-item {
            text-align: center;
            padding: 20px 15px;
            border-radius: 12px;
            background: white;
            box-shadow: 0 4px 15px rgba(181, 144, 107, 0.1);
            transition: all 0.3s ease;
        }

            .stat-item:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(181, 144, 107, 0.15);
            }

        .stat-value {
            font-size: 2rem;
            font-weight: 800;
            color: var(--primary);
            margin-bottom: 8px;
        }

        .stat-label {
            font-size: 0.9rem;
            color: var(--gray);
            font-weight: 500;
        }

        /* Currently Reading */
        .current-reading {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: var(--radius);
            padding: 30px;
            box-shadow: var(--shadow);
            display: flex;
            gap: 25px;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

            .current-reading::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 6px;
                height: 100%;
                background: linear-gradient(to bottom, var(--primary), var(--accent));
            }

        .current-cover {
            width: 90px;
            height: 120px;
            border-radius: 10px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2.5rem;
            flex-shrink: 0;
            box-shadow: 0 6px 20px rgba(212, 165, 116, 0.3);
        }

        .current-info h3 {
            font-size: 1.4rem;
            margin-bottom: 8px;
            color: var(--dark);
            font-weight: 700;
        }

        .current-info p {
            color: var(--gray);
            margin-bottom: 15px;
            font-size: 1rem;
        }

        .progress-bar {
            width: 100%;
            height: 8px;
            background: var(--gray-light);
            border-radius: 4px;
            overflow: hidden;
            margin-bottom: 8px;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            border-radius: 4px;
            transition: width 0.5s ease;
        }

        .progress-text {
            font-size: 0.9rem;
            color: var(--gray);
            display: flex;
            justify-content: space-between;
        }

        /* Bottom Grid */
        .bottom-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 30px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: var(--radius);
            padding: 30px 25px;
            box-shadow: var(--shadow);
            display: flex;
            align-items: center;
            gap: 20px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .stat-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 6px;
                height: 100%;
                background: linear-gradient(to bottom, var(--primary), var(--secondary));
            }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(181, 144, 107, 0.15);
            }

        .stat-icon {
            width: 70px;
            height: 70px;
            border-radius: 12px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.8rem;
            flex-shrink: 0;
        }

        .stat-info h3 {
            font-size: 2rem;
            font-weight: 800;
            color: var(--dark);
            margin-bottom: 5px;
        }

        .stat-info p {
            color: var(--gray);
            font-size: 0.95rem;
            font-weight: 500;
        }

        /* Activity Section */
        .activity-section {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: var(--radius);
            padding: 30px;
            box-shadow: var(--shadow);
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
        }

            .activity-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 6px;
                height: 100%;
                background: linear-gradient(to bottom, var(--accent), #A3B86C);
            }

        .activity-list {
            list-style: none;
            margin-top: 20px;
        }

        .activity-item {
            display: flex;
            gap: 20px;
            padding: 20px 0;
            border-bottom: 1px solid var(--gray-light);
            transition: all 0.3s ease;
        }

            .activity-item:hover {
                background: rgba(255, 255, 255, 0.5);
                border-radius: 10px;
                padding-left: 20px;
                padding-right: 20px;
                margin: 0 -20px;
            }

            .activity-item:last-child {
                border-bottom: none;
            }

        .activity-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: rgba(212, 165, 116, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary);
            font-size: 1.2rem;
            flex-shrink: 0;
        }

        .activity-content p {
            font-weight: 500;
            color: var(--dark);
            margin-bottom: 5px;
        }

        .activity-time {
            color: var(--gray);
            font-size: 0.85rem;
        }

        /* Goals Section */
        .goals-section {
            background: var(--card-bg);
            backdrop-filter: blur(20px);
            border-radius: var(--radius);
            padding: 30px;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
        }

            .goals-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 6px;
                height: 100%;
                background: linear-gradient(to bottom, var(--secondary), #E8B882);
            }

        .goal-progress {
            margin-top: 25px;
        }

        .goal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
        }

        .goal-title {
            font-weight: 600;
            color: var(--dark);
        }

        .goal-percentage {
            font-weight: 700;
            color: var(--primary);
        }

        /* Responsive Design */
        @@media (max-width: 1200px) {
            .bottom-grid

        {
            grid-template-columns: repeat(2, 1fr);
        }

        }

        @@media (max-width: 1024px) {
            .dashboard-grid

        {
            grid-template-columns: 1fr;
        }

        .bottom-grid {
            grid-template-columns: repeat(4, 1fr);
        }

        }

        @@media (max-width: 768px) {
            .dashboard-header

        {
            flex-direction: column;
            gap: 25px;
            text-align: center;
            padding: 25px;
        }

        .header-actions {
            width: 100%;
            justify-content: center;
            flex-wrap: wrap;
        }

        .books-grid {
            grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        }

        .bottom-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .current-reading {
            flex-direction: column;
            text-align: center;
        }

        }

        @@media (max-width: 576px) {
            body

        {
            padding: 15px;
        }

        .dashboard-header {
            padding: 20px;
        }

        .welcome-section h1 {
            font-size: 2rem;
        }

        .btn {
            padding: 12px 20px;
            font-size: 0.95rem;
        }

        .books-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .calendar {
            gap: 8px;
        }

        .day {
            padding: 10px 5px;
        }

        .friend-item {
            flex-direction: column;
            text-align: center;
            gap: 15px;
        }

        .friend-avatar {
            align-self: center;
        }

        .stats-grid {
            grid-template-columns: 1fr;
        }

        .bottom-grid {
            grid-template-columns: 1fr;
        }

        }

        /* Animation for carousel */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .carousel-card {
            animation: fadeIn 0.5s ease;
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(255, 253, 245, 0.1);
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: linear-gradient(135deg, var(--primary-dark), var(--primary));
            }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Header -->
        <header class="dashboard-header" data-aos="fade-down">
            <div class="welcome-section">
                <div>
                    @{
                        var userName = User.Identity?.Name ?? "Author";
                        var firstLetter = userName.Substring(0, 1).ToUpper();
                    }
                   
                </div>
                <h1>Welcome back, @userName!</h1>
                <p>Your creative journey continues. Track your progress, connect with readers, and manage your literary works all in one place.</p>
                <button class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i>
                    <span>Create New Project</span>
                </button>
            </div>

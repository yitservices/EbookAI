html
@{
    ViewData["Title"] = "Verify OTP - eBook Publisher";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .auth-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 25px;
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.15);
            padding: 50px;
            width: 100%;
            max-width: 480px;
            animation: slideUp 0.8s ease-out;
            border: 1px solid rgba(255, 255, 255, 0.3);
            text-align: center;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .logo {
            margin-bottom: 40px;
        }

            .logo i {
                font-size: 3.5rem;
                background: linear-gradient(135deg, #667eea, #764ba2);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                margin-bottom: 20px;
            }

            .logo h1 {
                background: linear-gradient(135deg, #667eea, #764ba2);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                font-size: 2.2rem;
                font-weight: 700;
                margin-bottom: 10px;
            }

        .form-title {
            color: #333;
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .form-subtitle {
            color: #666;
            font-size: 1rem;
            margin-bottom: 30px;
            line-height: 1.6;
        }

        .form-group {
            margin-bottom: 25px;
            text-align: left;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                color: #333;
                font-weight: 600;
                font-size: 0.95rem;
            }

        .input-wrapper {
            position: relative;
        }

            .input-wrapper i {
                position: absolute;
                left: 20px;
                top: 50%;
                transform: translateY(-50%);
                color: #667eea;
                font-size: 1.1rem;
            }

        .form-control {
            width: 100%;
            padding: 18px 20px 18px 55px;
            border: 2px solid rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.9);
            color: #333;
            font-size: 1rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .form-control:focus {
                outline: none;
                border-color: #667eea;
                background: white;
                box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
                transform: translateY(-2px);
            }

        .otp-input {
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
            letter-spacing: 10px;
        }

        .btn {
            width: 100%;
            padding: 18px;
            border: none;
            border-radius: 15px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
            }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.9);
            color: #333;
            border: 2px solid rgba(0, 0, 0, 0.1);
        }

            .btn-secondary:hover {
                background: white;
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            }

        .resend-link {
            color: #667eea;
            cursor: pointer;
            text-decoration: none;
            font-weight: 600;
            margin-top: 15px;
            display: inline-block;
        }

            .resend-link:hover {
                text-decoration: underline;
            }

        .alert {
            padding: 15px 20px;
            border-radius: 12px;
            margin-bottom: 25px;
            font-weight: 500;
            border: 1px solid;
            text-align: left;
        }

        .alert-success {
            background: rgba(34, 197, 94, 0.1);
            color: #16a34a;
            border-color: rgba(34, 197, 94, 0.2);
        }

        .alert-danger {
            background: rgba(239, 68, 68, 0.1);
            color: #dc2626;
            border-color: rgba(239, 68, 68, 0.2);
        }

        @@media (max-width: 768px) {
            .auth-container {
                padding: 30px 25px;
                margin: 10px;
            }

            .logo h1 {
                font-size: 2rem;
            }

            .form-title {
                font-size: 1.5rem;
            }

            .form-control {
                padding: 15px 18px 15px 50px;
            }

            .btn {
                padding: 15px;
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="auth-container" data-aos="fade-up">
        <div class="logo">
            <i class="fas fa-shield-alt"></i>
            <h1>Verify OTP</h1>
            <p>Enter the OTP sent to your email</p>
        </div>

        <h2 class="form-title">Password Reset Verification</h2>
        <p class="form-subtitle">
            We've sent a 6-digit OTP to <strong>@ViewBag.ResetEmail</strong>. Enter it below to reset your password.
        </p>

        @if (!string.IsNullOrEmpty(ViewBag.Success as string))
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @ViewBag.Success
            </div>
        }

        @if (!string.IsNullOrEmpty(ViewBag.Error as string))
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
            </div>
        }

        <form method="post" action="@Url.Action("VerifyResetPasswordOtp", "Account")" id="otpForm">
            <input type="hidden" name="UserEmail" value="@ViewBag.ResetEmail" />

            <div class="form-group" data-aos="fade-up" data-aos-delay="100">
                <label for="OtpCode">OTP Code</label>
                <div class="input-wrapper">
                    <i class="fas fa-key"></i>
                    <input type="text" id="OtpCode" name="OtpCode" class="form-control otp-input"
                           placeholder="000000" maxlength="6" required
                           pattern="[0-9]{6}" title="Please enter a 6-digit OTP">
                </div>
            </div>

            <button type="submit" class="btn btn-primary" data-aos="fade-up" data-aos-delay="200">
                <i class="fas fa-check-circle"></i>
                <span>Verify OTP</span>
            </button>
        </form>

        <form method="post" action="@Url.Action("ResendResetPasswordOtp", "Account")" id="resendForm">
            <input type="hidden" name="userEmail" value="@ViewBag.ResetEmail" />
            <a href="#" onclick="document.getElementById('resendForm').submit();" class="resend-link" data-aos="fade-up" data-aos-delay="300">
                <i class="fas fa-redo"></i> Resend OTP
            </a>
        </form>

        <button onclick="history.back()" class="btn btn-secondary" data-aos="fade-up" data-aos-delay="400">
            <i class="fas fa-arrow-left"></i>
            <span>Back</span>
        </button>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 600,
            easing: 'ease-out',
            once: true
        });

        // OTP input formatting
        document.getElementById('OtpCode').addEventListener('input', function(e) {
            this.value = this.value.replace(/[^0-9]/g, '');
            if (this.value.length > 6) {
                this.value = this.value.slice(0, 6);
            }
        });

        document.getElementById('otpForm').addEventListener('submit', function(e) {
            const otp = document.getElementById('OtpCode').value;
            const submitBtn = this.querySelector('button[type="submit"]');
            const btnText = submitBtn.querySelector('span');

            if (otp.length !== 6) {
                e.preventDefault();
                Swal.fire({
                    title: 'Invalid OTP',
                    text: 'Please enter a valid 6-digit OTP code.',
                    icon: 'warning',
                    confirmButtonColor: '#667eea'
                });
                return;
            }

            submitBtn.style.pointerEvents = 'none';
            submitBtn.style.opacity = '0.7';
            btnText.textContent = 'Verifying...';
        });
    </script>
</body>
</html>

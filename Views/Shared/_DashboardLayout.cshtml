            const getStartedBtn = document.getElementById('getStartedBtn');
            const logoutBtn = document.getElementById('logoutBtn');
            const statCards = document.querySelectorAll('.stat-card');
            const modalCloseButtons = document.querySelectorAll('.close');
            const liveChatModal = document.getElementById('liveChatModal');
            const howToStartModal = document.getElementById('howToStartModal');
            const viewPlansModal = document.getElementById('viewPlansModal');
            const chatInput = document.getElementById('chatInput');
            const sendMessageBtn = document.getElementById('sendMessageBtn');
            const chatMessages = document.getElementById('chatMessages');
            const menuToggle = document.getElementById('menuToggle');

            // Attach event listeners only if elements exist
            if (liveChatBtn) {
                liveChatBtn.addEventListener('click', openLiveChat);
            }

            if (howToStartBtn) {
                howToStartBtn.addEventListener('click', showHowToStart);
            }

            if (themeToggle) {
                themeToggle.addEventListener('click', toggleTheme);
            }

            if (menuToggle) {
                menuToggle.addEventListener('click', toggleSidebar);
            }

            if (viewPlansBtn) {
                viewPlansBtn.addEventListener('click', () => openModal(viewPlansModal));
            }

            if (scheduleCallBtn) {
                scheduleCallBtn.addEventListener('click', () => {
                    alert('Call scheduling feature would open here. In a real application, this would show a calendar interface.');
                });
            }

            if (getStartedBtn) {
                getStartedBtn.addEventListener('click', () => {
                    closeModal(howToStartModal);
                    startDashboardTour();
                });
            }

            if (logoutBtn) {
                logoutBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    if (confirm('Are you sure you want to logout?')) {
                        alert('Logout functionality would be implemented here. Redirecting to login page.');
                        // In a real app: window.location.href = 'login.html';
                    }
                });
            }

            // File upload functionality
            if (fileUploadBtn && fileInput) {
                fileUploadBtn.addEventListener('click', () => {
                    fileInput.click();
                });
            }

            if (fileInput) {
                fileInput.addEventListener('change', (e) => {
                    if (e.target.files.length > 0) {
                        handleFileUpload(e.target.files[0]);
                    }
                });
            }

            // Drag and drop functionality
            if (uploadArea) {
                uploadArea.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    uploadArea.classList.add('drag-over');
                }, { passive: false });

                uploadArea.addEventListener('dragleave', () => {
                    uploadArea.classList.remove('drag-over');
                });

                uploadArea.addEventListener('drop', (e) => {
                    e.preventDefault();
                    uploadArea.classList.remove('drag-over');

                    if (e.dataTransfer.files.length > 0) {
                        handleFileUpload(e.dataTransfer.files[0]);
                    }
                });
            }

            // Close modals when clicking on close button
            modalCloseButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const modal = this.closest('.modal');
                    closeModal(modal);
                });
            });

            // Live chat functionality
            if (sendMessageBtn) {
                sendMessageBtn.addEventListener('click', sendMessage);
            }

            if (chatInput) {
                chatInput.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        sendMessage();
                    }
                });
            }

            // Stat cards functionality

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Editor Dashboard</title>
    
    <!-- External Libraries -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <style>
        /* Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        html {
            overflow-y: scroll;
            scroll-behavior: smooth;
        }

        body {
            background: linear-gradient(135deg, #8360c3 0%, #2ebf91 100%);
            color: #333;
            line-height: 1.6;
            min-height: 100vh;
        }

        /* Editor Layout Container */
        .editor-container {
            display: flex;
            min-height: 100vh;
        }

        /* Modern Sidebar */
        .editor-sidebar {
            width: 280px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-right: 1px solid rgba(255, 255, 255, 0.2);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
            transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        }

        .sidebar-header {
            padding: 30px 25px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }

        .logo i {
            font-size: 2.5rem;
            background: linear-gradient(135deg, #8360c3, #2ebf91);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .logo h2 {
            font-size: 1.8rem;
            font-weight: 700;
            background: linear-gradient(135deg, #8360c3, #2ebf91);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* User Profile Section */
        .user-profile {
            padding: 20px 25px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .user-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, #8360c3, #2ebf91);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            font-size: 1.5rem;
            color: white;
            font-weight: 600;
        }

        .user-info h4 {
            font-size: 1.1rem;
            margin-bottom: 5px;
            color: #333;
        }

        .user-role {
            display: inline-block;
            padding: 4px 12px;
            background: linear-gradient(135deg, #8360c3, #2ebf91);
            color: white;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        /* Navigation Menu */
        .nav-menu {
            padding: 20px 0;
        }

        .nav-item {
            margin: 5px 15px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 15px 20px;
            color: #555;
            text-decoration: none;
            border-radius: 15px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(131, 96, 195, 0.1), transparent);
            transition: left 0.5s;
        }

        .nav-link:hover::before {
            left: 100%;
        }

        .nav-link i {
            margin-right: 15px;
            font-size: 1.2rem;
            width: 20px;
            text-align: center;
        }

        .nav-link:hover, .nav-link.active {
            background: linear-gradient(135deg, #8360c3, #2ebf91);
            color: white;
            transform: translateX(5px);
            box-shadow: 0 8px 25px rgba(131, 96, 195, 0.3);
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: 30px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            min-height: 100vh;
            transition: margin-left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* Top Header */
        .top-header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            padding: 25px 30px;
            border-radius: 20px;
            margin-bottom: 30px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header-title {
            color: #333;
        }

        .header-title h1 {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 5px;
            background: linear-gradient(135deg, #8360c3, #2ebf91);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .header-title p {
            color: #666;
        }

        .header-actions {
            display: flex;
            gap: 15px;
        }

        /* Buttons */
        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 15px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.5s;
        }

        .btn:hover::before {
            left: 100%;
        }

        .btn-primary {
            background: linear-gradient(135deg, #8360c3, #2ebf91);
            color: white;
            box-shadow: 0 8px 25px rgba(131, 96, 195, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(131, 96, 195, 0.4);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.9);
            color: #333;
            border: 1px solid rgba(0, 0, 0, 0.1);
        }

        .btn-secondary:hover {
            background: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        /* Content Area */
        .content-area {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            min-height: 500px;
        }

        /* Mobile Responsive */
        .mobile-toggle {
            display: none;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1001;
            background: linear-gradient(135deg, #8360c3, #2ebf91);
            color: white;
            border: none;
            width: 50px;
            height: 50px;
            border-radius: 15px;
            font-size: 1.2rem;
            cursor: pointer;
            box-shadow: 0 8px 25px rgba(131, 96, 195, 0.3);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .mobile-toggle:hover {
            transform: scale(1.1);
        }

        /* Mobile Styles */
        @@media (max-width: 768px) {
            .mobile-toggle {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .editor-sidebar {
                transform: translateX(-100%);
            }

            .editor-sidebar.active {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                padding: 20px 15px;
                padding-top: 80px;
            }

            .top-header {
                flex-direction: column;
                gap: 20px;
                text-align: center;
            }

            .header-actions {
                width: 100%;
                justify-content: center;
            }

            .content-area {
                padding: 20px;
            }
        }

        @@media (max-width: 480px) {
            .editor-sidebar {
                width: 100%;
            }

            .header-title h1 {
                font-size: 1.8rem;
            }

            .btn {
                padding: 10px 20px;
                font-size: 0.9rem;
            }
        }

        /* Loading Animation */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.9);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            opacity: 1;
            transition: opacity 0.5s ease;
        }

        .loading-overlay.hidden {
            opacity: 0;
            pointer-events: none;
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid #8360c3;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
        }

        ::-webkit-scrollbar-thumb {
            background: linear-gradient(135deg, #8360c3, #2ebf91);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(135deg, #2ebf91, #8360c3);
        }

        /* Editor Specific Styles */
        .editor-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.95);
            padding: 20px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-card i {
            font-size: 2rem;
            color: #8360c3;
            margin-bottom: 10px;
        }

        .stat-card h3 {
            font-size: 1.5rem;
            margin-bottom: 5px;
            color: #333;
        }

        .stat-card p {
            color: #666;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="spinner"></div>
    </div>

    <!-- Mobile Toggle -->
    <button class="mobile-toggle" id="mobileToggle">
        <i class="fas fa-bars"></i>
    </button>

    <div class="editor-container">
        <!-- Sidebar -->
        <aside class="editor-sidebar" id="editorSidebar" data-aos="fade-right">
            <div class="sidebar-header">
                <div class="logo">
                    <i class="fas fa-edit"></i>
                    <h2>Editor Panel</h2>
                </div>
            </div>

            <div class="user-profile" data-aos="fade-up" data-aos-delay="100">
                <div class="user-avatar">
                    @{
                        var userName = User.Identity?.Name ?? "Editor";
                        var firstLetter = userName.Substring(0, 1).ToUpper();
                    }
                    @firstLetter
                </div>
                <div class="user-info">
                    <h4>@userName</h4>
                    <span class="user-role">
                        <i class="fas fa-pen-nib"></i> Content Editor
                    </span>
                </div>
            </div>

            <nav class="nav-menu">
                <div class="nav-item" data-aos="fade-up" data-aos-delay="200">
                    <a href="@Url.Action("Dashboard", "Editor")" class="nav-link active">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Editor Dashboard</span>
                    </a>
                </div>
                <div class="nav-item" data-aos="fade-up" data-aos-delay="250">
                    <a href="#" class="nav-link">
                        <i class="fas fa-file-alt"></i>
                        <span>Content Editor</span>
                    </a>
                </div>
                <div class="nav-item" data-aos="fade-up" data-aos-delay="300">
                    <a href="#" class="nav-link">
                        <i class="fas fa-list-ul"></i>
                        <span>Review Queue</span>
                    </a>
                </div>
                <div class="nav-item" data-aos="fade-up" data-aos-delay="350">
                    <a href="@Url.Action("Index", "Books")" class="nav-link">
                        <i class="fas fa-book"></i>
                        <span>Book Management</span>
                    </a>
                </div>
                <div class="nav-item" data-aos="fade-up" data-aos-delay="400">
                    <a href="#" class="nav-link">
                        <i class="fas fa-tasks"></i>
                        <span>Publishing Workflow</span>
                    </a>
                </div>
                <div class="nav-item" data-aos="fade-up" data-aos-delay="450">
                    <a href="#" class="nav-link">
                        <i class="fas fa-comments"></i>
                        <span>Author Communication</span>
                    </a>
                </div>
                <div class="nav-item" data-aos="fade-up" data-aos-delay="500">
                    <a href="#" class="nav-link">
                        <i class="fas fa-bell"></i>
                        <span>Notifications</span>
                    </a>
                </div>
                <div class="nav-item" data-aos="fade-up" data-aos-delay="550">
                    <a href="@Url.Action("Logout", "Account")" class="nav-link" onclick="handleLogout(event)">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="top-header" data-aos="fade-down">
                <div class="header-title">
                    <h1>@ViewData["Title"]</h1>
                    <p>Welcome back, @userName! Ready to create amazing content?</p>
                </div>
                <div class="header-actions">
                    <button class="btn btn-secondary" onclick="showRecentDrafts()">
                        <i class="fas fa-file-alt"></i>
                        <span>Recent Drafts</span>
                    </button>
                    <button class="btn btn-primary" onclick="createNewContent()">
                        <i class="fas fa-plus"></i> 
                        <span>Create Content</span>
                    </button>
                </div>
            </header>

            <div class="content-area" data-aos="fade-up" data-aos-delay="200">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // Initialize AOS
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true,
            offset: 100
        });

        // Hide loading overlay
        window.addEventListener('load', function() {
            setTimeout(() => {
                document.getElementById('loadingOverlay').classList.add('hidden');
            }, 1000);
        });

        // Mobile sidebar toggle
        document.getElementById('mobileToggle').addEventListener('click', function() {
            const sidebar = document.getElementById('editorSidebar');
            sidebar.classList.toggle('active');
        });

        // Close sidebar on outside click (mobile)
        document.addEventListener('click', function(e) {
            const sidebar = document.getElementById('editorSidebar');
            const toggle = document.getElementById('mobileToggle');
            
            if (window.innerWidth <= 768 && !sidebar.contains(e.target) && !toggle.contains(e.target)) {
                sidebar.classList.remove('active');
            }
        });

        // Welcome message
        document.addEventListener('DOMContentLoaded', function() {
            const userName = '@Html.Raw(User.Identity?.Name ?? "Editor")';
            Swal.fire({
                title: 'Welcome Back!',
                text: `Hello ${userName}, ready to create amazing content?`,
                icon: 'success',
                timer: 3000,
                timerProgressBar: true,
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                background: 'linear-gradient(135deg, #8360c3, #2ebf91)',
                color: 'white'
            });
        });

        // Logout handler
        function handleLogout(event) {
            event.preventDefault();
            Swal.fire({
                title: 'Confirm Logout',
                text: 'Are you sure you want to logout?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#8360c3',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, logout',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Goodbye!',
                        text: 'Keep creating amazing content!',
                        icon: 'success',
                        timer: 2000,
                        timerProgressBar: true,
                        showConfirmButton: false
                    }).then(() => {
                        window.location.href = '@Url.Action("Logout", "Account")';
                    });
                }
            });
        }

        // Create new content
        function createNewContent() {
            Swal.fire({
                title: 'Create New Content',
                html: `
                    <div style="display: flex; flex-direction: column; gap: 10px;">
                        <button class="btn btn-primary" onclick="createArticle()">New Article</button>
                        <button class="btn btn-primary" onclick="createBookChapter()">New Book Chapter</button>
                        <button class="btn btn-primary" onclick="createReview()">Content Review</button>
                    </div>
                `,
                showConfirmButton: false,
                showCloseButton: true,
                width: '300px'
            });
        }

        // Show recent drafts
        function showRecentDrafts() {
            Swal.fire({
                title: 'Recent Drafts',
                html: `
                    <div style="text-align: left;">
                        <div style="padding: 10px; border-left: 3px solid #8360c3; margin: 10px 0;">
                            <strong>Chapter 5: The Journey</strong><br>
                            <small>Last edited: 2 hours ago</small>
                        </div>
                        <div style="padding: 10px; border-left: 3px solid #2ebf91; margin: 10px 0;">
                            <strong>Book Review: Fantasy Novel</strong><br>
                            <small>Last edited: 5 hours ago</small>
                        </div>
                        <div style="padding: 10px; border-left: 3px solid #ffc107; margin: 10px 0;">
                            <strong>Author Interview Script</strong><br>
                            <small>Last edited: 1 day ago</small>
                        </div>
                    </div>
                `,
                showConfirmButton: false,
                showCloseButton: true,
                width: '400px'
            });
        }

        // Navigation active state
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            
            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
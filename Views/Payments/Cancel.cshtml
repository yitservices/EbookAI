@{
    ViewData["Title"] = "Payment Cancelled";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-warning">
                <div class="card-header bg-warning text-white">
                    <h3 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Payment Cancelled</h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-warning" style="font-size: 5rem;"></i>
                    </div>
                    <h4 class="card-title">Payment Was Cancelled</h4>
                    <p class="card-text">
                        Your payment was cancelled. Your cart items are still available if you wish to try again.
                    </p>
                    <div class="alert alert-info">
                        <h5><i class="fas fa-question-circle"></i> Need Help?</h5>
                        <p>If you're experiencing issues with payment, please contact our support team.</p>
                    </div>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="@Url.Action("PaymentSummary", "Payments")" class="btn btn-primary btn-lg">
                            <i class="fas fa-redo"></i> Try Again
                        </a>
                        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary btn-lg">
                            <i class="fas fa-tachometer-alt"></i> Go to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model EBookDashboard.Models.ViewModels.InvoiceViewModel

@{
    ViewData["Title"] = "Invoice Generation";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-file-invoice me-2"></i>Invoice Summary
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Invoice Header -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Invoice Details</h5>
                            <p class="mb-1"><strong>Invoice ID:</strong> @Model.InvoiceId</p>
                            <p class="mb-1"><strong>Date:</strong> @Model.InvoiceDate.ToString("MMMM dd, yyyy")</p>
                            <p class="mb-0"><strong>Time:</strong> @Model.InvoiceDate.ToString("hh:mm tt")</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <h5>Payment Summary</h5>
                            <p class="mb-0 text-muted">Please review your selection before proceeding</p>
                        </div>
                    </div>

                    <!-- Selected Features Table -->
                    <div class="table-responsive mb-4">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Feature Name</th>
                                    <th class="text-end">Rate</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var feature in Model.SelectedFeatures)
                                {
                                    <tr>
                                        <td>@feature.FeatureName</td>
                                        <td class="text-end">@feature.FeatureRate.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Amount Breakdown -->
                    <div class="row justify-content-end">
                        <div class="col-md-6">
                            <div class="border-top pt-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="fw-semibold">Subtotal:</span>
                                    <span>@Model.TotalAmount.ToString("C")</span>
                                </div>

                                @if (Model.TaxAmount > 0)
                                {
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="fw-semibold">Tax (@((Model.TaxAmount / Model.TotalAmount * 100).ToString("0"))%):</span>
                                        <span>@Model.TaxAmount.ToString("C")</span>
                                    </div>
                                }

                                <div class="d-flex justify-content-between mb-2 fs-5">
                                    <span class="fw-bold">Total Payable:</span>
                                    <span class="fw-bold text-success">@Model.GrandTotal.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Methods -->
                    <div class="mt-4 p-3 bg-light rounded">
                        <h6 class="mb-3">
                            <i class="fas fa-credit-card me-2"></i>Available Payment Methods
                        </h6>
                        <div class="row">
                            <div class="col-md-3 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="paymentMethod" id="creditCard" value="creditcard" checked>
                                    <label class="form-check-label" for="creditCard">
                                        <i class="fab fa-cc-visa me-1"></i>Credit Card
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="paymentMethod" id="paypal" value="paypal">
                                    <label class="form-check-label" for="paypal">
                                        <i class="fab fa-paypal me-1"></i>PayPal
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="paymentMethod" id="stripe" value="stripe">
                                    <label class="form-check-label" for="stripe">
                                        <i class="fab fa-stripe me-1"></i>Stripe
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="paymentMethod" id="bankTransfer" value="banktransfer">
                                    <label class="form-check-label" for="bankTransfer">
                                        <i class="fas fa-university me-1"></i>Bank Transfer
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg w-100">
                                <i class="fas fa-arrow-left me-2"></i>Back to Features
                            </a>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-success btn-lg w-100" id="proceedToPaymentBtn">
                                <i class="fas fa-lock me-2"></i>Proceed to Secure Payment
                            </button>
                        </div>
                    </div>

                    <!-- Security Notice -->
                    <div class="mt-3 text-center">
                        <small class="text-muted">
                            <i class="fas fa-shield-alt me-1"></i>
                            Your payment information is secure and encrypted
                        </small>
                    </div>
                </div>
            </div>

            <!-- Additional Information -->
            <div class="row mt-3">
                <div class="col-md-4">
                    <div class="card border-0 bg-light">
                        <div class="card-body text-center">
                            <i class="fas fa-sync-alt fa-2x text-primary mb-2"></i>
                            <h6>Easy Refunds</h6>
                            <small class="text-muted">30-day money back guarantee</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 bg-light">
                        <div class="card-body text-center">
                            <i class="fas fa-headset fa-2x text-primary mb-2"></i>
                            <h6>24/7 Support</h6>
                            <small class="text-muted">We're here to help you</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 bg-light">
                        <div class="card-body text-center">
                            <i class="fas fa-check-circle fa-2x text-primary mb-2"></i>
                            <h6>Instant Access</h6>
                            <small class="text-muted">Get features immediately</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 15px;
        }

        .card-header {
            border-radius: 15px 15px 0 0 !important;
        }

        .table th {
            border-bottom: 2px solid #dee2e6;
            font-weight: 600;
        }

        .btn {
            border-radius: 10px;
            font-weight: 500;
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const proceedBtn = document.getElementById('proceedToPaymentBtn');

            if (proceedBtn) {
                proceedBtn.addEventListener('click', function() {
                    const selectedPaymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;

                    // Show loading state
                    const originalText = proceedBtn.innerHTML;
                    proceedBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
                    proceedBtn.disabled = true;

                    // Simulate payment processing
                    setTimeout(function() {
                        // Redirect to actual payment gateway based on selected method
                        switch(selectedPaymentMethod) {
                            case 'creditcard':
                                window.location.href = '/Payments/CreditCard';
                                break;
                            case 'paypal':
                                window.location.href = '/Payments/PayPal';
                                break;
                            case 'stripe':
                                window.location.href = '/Payments/Stripe';
                                break;
                            case 'banktransfer':
                                window.location.href = '/Payments/BankTransfer';
                                break;
                            default:
                                window.location.href = '/Payments/ProcessPayment';
                        }
                    }, 2000);
                });
            }

            // Add confirmation dialog
            window.addEventListener('beforeunload', function(e) {
                if (proceedBtn && proceedBtn.disabled) {
                    e.preventDefault();
                    e.returnValue = 'Your payment is being processed. Are you sure you want to leave?';
                }
            });
        });

        // Print invoice function
        function printInvoice() {
            window.print();
        }

        // Download invoice as PDF
        function downloadInvoice() {
            alert('Downloading invoice as PDF...');
            // Implement PDF download logic here
            // window.location.href = '/Payments/DownloadInvoice/@Model.InvoiceId';
        }
    </script>
}